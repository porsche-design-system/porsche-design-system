{
    "name": "@porsche/ui-kit-react",
    "scope": "@porsche",
    "version": "0.6.0",
    "description": "The Porsche UI Kit Implementation for React.",
    "main": "dist/commonjs/index.js",
    "module": "dist/es/index.js",
    "jsnext:main": "dist/es/index.js",
    "typings": "dist/typings/index",
    "sideEffects": false,
    "files": [
        "dist",
        "src/**/*.scss",
        "src/base/icon/pag-iconfont/*",
        "css"
    ],
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:myporsche/pouikit-porsche-ui-kit.git"
    },
    "author": "Dr. Ing. h.c. F. Porsche AG",
    "contributors": [
        "Christoph Albert <christoph.albert@mhp.com>",
        "Oliver Hook <oliver.hook@mhp.com>",
        "Christian Senk <christian.Senk@mhp.com>",
        "Mario Ulmer <mario.ulmer@mhp.com>"
    ],
    "jest": {
        "testEnvironment": "enzyme",
        "testEnvironmentOptions": {
            "enzymeAdapter": "react16"
        },
        "setupTestFrameworkScriptFile": "./../../../node_modules/jest-enzyme/lib/index.js",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.(tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleNameMapper": {
            "^.*\\.scss$": "<rootDir>/src/test-helper/SCSSStub.js"
        },
        "testResultsProcessor": "jest-bamboo-formatter"
    },
    "scripts": {
        "start": "yarn run watch",
        "prebuild": "rimraf ./.tmp && rimraf ./dist && rimraf ./css",
        "build": "yarn run build:es && yarn run build:commonjs && yarn run build:sass && yarn run build:css",
        "prewatch": "yarn run build",
        "watch": "yarn run watch:es | yarn run watch:commonjs | yarn run watch:sass | yarn run watch:css",
        "build:es": "tsc --project ./ --outDir ./dist/es --declaration true --declarationDir ./dist/typings",
        "watch:es": "yarn run build:es --watch",
        "build:commonjs": "tsc --project ./ --outDir ./dist/commonjs --module commonjs",
        "watch:commonjs": "yarn run build:commonjs --watch",
        "build:sass": "node-sass-chokidar --source-map true ./src --output .tmp/css --importer=../../../node_modules/node-sass-tilde-importer",
        "postbuild:sass": "cpx \"../../../node_modules/@porsche/ui-kit-core/src/base/font/**/*.{svg,eot,otf,ttf,woff,woff2}\" ./css/ && cpx \"./src/base/icon/pag-iconfont/*.{svg,eot,otf,ttf,woff,woff2}\" ./css/pag-iconfont",
        "watch:sass": "yarn run build:sass && yarn run build:sass --watch",
        "build:css": "postcss --use autoprefixer --map --config postcss.config.json --output ./css/index.css .tmp/css/index.css",
        "watch:css": "yarn run build:css && yarn run build:css --watch",
        "lint:ts": "tslint --project '.' --format codeFrame",
        "lint:ts:fix": "yarn run lint:ts --fix",
        "lint:sass": "stylelint '**/*.scss'",
        "lint:sass:fix": "yarn run lint:sass --fix",
        "test": "jest && jest --clearCache",
        "publish:artifactory": "yarn run test && yarn run build && yarn publish"
    },
    "dependencies": {
        "@porsche/ui-kit-core": "0.16.0",
        "classnames": "^2.2.6",
        "react-modal": "^3.7.1",
        "react-responsive": "^6.0.1",
        "react-transition-group": "^2.5.1",
        "tslib": "^1.9.3",
        "typescript": "~3.1.6"
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.15",
        "@types/jest": "^23.3.10",
        "@types/react": "^16.7.17",
        "@types/react-modal": "^3.6.0",
        "@types/react-responsive": "^3.0.2",
        "@types/react-transition-group": "^2.0.14",
        "autoprefixer": "^9.4.3",
        "cpx": "^1.5.0",
        "cross-env": "^5.2.0",
        "enzyme": "^3.8.0",
        "enzyme-adapter-react-16": "^1.7.1",
        "jest": "^23.6.0",
        "jest-bamboo-formatter": "^1.0.1",
        "jest-environment-enzyme": "^7.0.1",
        "jest-enzyme": "^7.0.1",
        "node-sass-chokidar": "^1.3.4",
        "node-sass-tilde-importer": "^1.0.2",
        "postcss": "^7.0.7",
        "postcss-cli": "^6.0.1",
        "react": "^16.6.3",
        "react-dom": "^16.6.3",
        "rimraf": "^2.6.2",
        "stylelint": "^9.9.0",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-scss": "^3.4.1",
        "ts-jest": "^23.10.5"
    },
    "peerDependencies": {
        "react": ">=0.14.0 <= 16",
        "react-dom": ">=0.14.0 <= 16"
    },
    "publishConfig": {
        "@porsche:registry": "https://porschedev.jfrog.io/porschedev/api/npm/pouikit-npm/"
    }
}
