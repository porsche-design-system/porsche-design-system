    "scripts": {
        "build": "yarn run build:docgen && yarn run build:webpack",
        "start": "yarn run start:webpack",
        "build:webpack": "rm -rf ./dist && cross-env NODE_ENV=production webpack --mode production --colors",
        "start:webpack": "cross-env NODE_ENV=development webpack-dev-server --mode development --devtool cheap-module-eval-source-map --output-pathinfo --hot --inline --progress --colors --port 8080",
        "build:docgen": "gulp build:docgen",
        "watch:docgen": "gulp watch:docgen",
        "distribute": "yarn run build && cpx \"dist/**\" ../../../../finder-backend/api/src/main/resources/static/static/ui-kit",
        "lint:js": "eslint src/**",
        "lint:js:fix": "yarn run lint:js --fix"
    },
