{
  "name": "@porsche/ui-kit-angular",
  "version": "0.2.5",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "node iconClassCreator.js && npm run build:packagr && npm run build:fixDependency",
    "build:prod": "npm run build -- -- --prod",
    "build:packagr": "ng-packagr -p package.json",
    "build:fixDependency": "scripts/fix-dependency.sh",
    "test": "npm run test:singleRun",
    "test:singleRun": "ng test --watch false",
    "test:watch": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "authenticate-registry": "(npm whoami --registry=$npm_config_repository_url || npm login --registry=$npm_config_repository_url)",
    "publish-artifactory": "npm run authenticate-registry --repository_url=$npm_package_publishConfig__porsche_registry && npm publish"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/public_api.ts"
    }
  },
  "devDependencies": {
    "@angular/cli": "^1.7.4",
    "@angular/common": "^5.2.10",
    "@angular/compiler": "^5.2.10",
    "@angular/compiler-cli": "^5.2.10",
    "@angular/core": "^5.2.10",
    "@angular/language-service": "^5.2.10",
    "@angular/platform-browser": "^5.2.10",
    "@angular/platform-browser-dynamic": "^5.2.10",
    "@angular/router": "^5.2.10",
    "@porsche/ui-kit-core": "../../core/ui-kit",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^9.6.6",
    "codelyzer": "^4.3.0",
    "jasmine-core": "^3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^1.0.0",
    "ng-packagr": "^2.4.2",
    "node-sass": "^4.9.2",
    "protractor": "^5.3.1",
    "puppeteer": "^1.3.0",
    "rxjs": "^5.5.10",
    "ts-node": "^6.0.0",
    "tslint": "~5.9.1",
    "typescript": "^2.6.2",
    "zone.js": "^0.8.26"
  },
  "peerDependencies": {
    "@angular/core": "^5.2.0",
    "rxjs": "^5.5.6"
  },
  "publishConfig": {
    "@porsche:registry": "https://porschedev.jfrog.io/porschedev/api/npm/pouikit-npm/"
  }
}
