{
  "name": "@porsche/ui-kit-angular",
  "version": "0.0.0",
  "scripts": {
    "build": "npm run build:packagr && npm run build:fixDependency",
    "build:prod": "npm run build -- -- --prod",
    "build:packagr": "ng-packagr -p package.json",
    "build:fixDependency": "scripts/fix-dependency.sh",
    "test": "npm run test:singleRun",
    "test:singleRun": "ng test --watch false",
    "test:watch": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "ngPackage": {
    "lib": {
      "entryFile": "src/public_api.ts"
    }
  },
  "devDependencies": {
    "@angular/cli": "^1.7.3",
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/compiler-cli": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/language-service": "^5.2.0",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@angular/router": "^5.2.9",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.4.1",
    "porsche-stylesheets": "../../core",
    "protractor": "~5.1.2",
    "puppeteer": "^1.2.0",
    "rxjs": "^5.5.7",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3",
    "zone.js": "^0.8.20"
  },
  "peerDependencies": {
    "@angular/core": "^5.2.0",
    "rxjs": "^5.5.6"
  }
}
