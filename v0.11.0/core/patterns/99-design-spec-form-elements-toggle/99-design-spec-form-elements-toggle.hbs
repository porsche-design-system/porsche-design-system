    <div class="column -spacing-30">
      <h4 class="-text-size-5-thin -text-color-white">Inactive</h4>
      {{> molecules-toggle styleModifier="-spacing-12" toggle_inverted=true }}
    </div>
    <div class="column -spacing-30">
      <h4 class="-text-size-5-thin -text-color-white">Active</h4>
      {{> molecules-toggle styleModifier="-spacing-12" toggle_inverted=true toggle_active=true }}
    </div>
    <div class="column -spacing-30">
      <h4 class="-text-size-5-thin -text-color-white">Disabled</h4>
      {{> molecules-toggle styleModifier="-spacing-12" toggle_inverted=true toggle_disabled=true }}
    </div>
    <div class="column -spacing-30">
      <h4 class="-text-size-5-thin -text-color-white">Disabled + Active</h4>
      {{> molecules-toggle styleModifier="-spacing-12" toggle_inverted=true toggle_disabled=true toggle_active=true }}
    </div>
  </div>
</div>
