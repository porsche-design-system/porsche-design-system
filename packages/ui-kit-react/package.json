{
  "name": "@porsche-ui/ui-kit-react",
  "version": "1.0.0-alpha.2",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "rm -rf 'dist' && mkdir 'dist' && tsc -p 'projects/ui-kit-wrapper/tsconfig.json'",
    "test": "yarn test:vrt",
    "test:vrt": "concurrently -k -s \"first\" -n \"server,vrt\" \"BROWSER=none yarn start\" \"wait-on -t 180000 http-get://localhost:3000 && ts-node --project 'tests/vrt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/vrt/config/jasmine.config.json'\"",
    "clean": "rm -rf 'node_modules' && rm -rf 'yarn-error.log' && rm -rf 'dist'"
  },
  "dependencies": {
    "@porsche-ui/ui-kit-js": "1.0.0-alpha.2"
  },
  "devDependencies": {
    "@porsche-ui/ui-kit-scss-utils": "^1.0.0-alpha.1",
    "@porsche-ui/utils": "0.0.0",
    "@porsche-ui/visual-regression-tester": "^1.0.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "jasmine": "^3.4.0",
    "node-sass": "^4.12.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.1",
    "react-test-renderer": "^16.9.0",
    "typescript": "3.5.3"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
