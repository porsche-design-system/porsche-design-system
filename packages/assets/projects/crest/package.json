{
  "name": "@porsche-design-system/crest",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "homepage": "https://designsystem.porsche.com",
  "scripts": {
    "build": "npm run clean:build && npm run build:crest && npm run build:lib",
    "build:crest": "tsx scripts/build.ts",
    "build:lib": "tsup index.ts --format esm,cjs --dts",
    "clean:build": "rm -rf ./index.ts && rm -rf ./dist"
  },
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0"
  },
  "peerDependencies": {
    "change-case": "*",
    "globby": "*",
    "tsup": "*",
    "tsx": "*",
    "typescript": "*"
  },
  "volta": {
    "extends": "../../../../package.json"
  }
}
