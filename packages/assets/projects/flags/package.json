{
  "name": "@porsche-design-system/flags",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "type": "commonjs",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "homepage": "https://designsystem.porsche.com",
  "scripts": {
    "lint": "publint",
    "build": "yarn clean:build && yarn build:flags && yarn build:lib",
    "build:flags": "tsx scripts/build.ts",
    "build:lib": "tsup index.ts --format esm,cjs --dts",
    "test:unit": "vitest --config tests/unit/config/vitest.config.ts",
    "clean:build": "rm -rf ./index.ts && rm -rf ./dist"
  },
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0"
  },
  "peerDependencies": {
    "change-case": "*",
    "globby": "*",
    "prettier": "*",
    "publint": "*",
    "svgo": "*",
    "tsup": "*",
    "tsx": "*",
    "typescript": "*",
    "vitest": "*",
    "gzip-size": "*"
  },
  "volta": {
    "extends": "../../../../package.json"
  }
}
