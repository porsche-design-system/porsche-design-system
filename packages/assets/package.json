{
  "name": "@porsche-design-system/assets",
  "version": "5.0.2",
  "description": "This package provides manifests and CDN URLs of Porsche assets like fonts, icons, marques, etc.",
  "keywords": [
    "porsche",
    "design",
    "system",
    "assets"
  ],
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://designsystem.porsche.com",
  "main": "dist/cjs/src/index.cjs",
  "module": "dist/esm/src/index.mjs",
  "types": "dist/esm/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "start": "npm run build && node ./bin/serve-cdn.js",
    "build": "npm run clean:build && npm run build:projects && npm run build:manifest && npm run build:copyAssets",
    "build:projects": "npm run build:crest && npm run build:fallbacks && npm run build:flags && npm run build:fonts && npm run build:font-face && npm run build:icons && npm run build:marque && npm run build:meta-icons && npm run build:model-signatures",
    "build:crest": "npm run build --workspace=@porsche-design-system/crest",
    "build:fallbacks": "npm run build --workspace=@porsche-design-system/fallbacks",
    "build:flags": "npm run build --workspace=@porsche-design-system/flags",
    "build:fonts": "npm run build --workspace=@porsche-design-system/fonts",
    "build:icons": "npm run build --workspace=@porsche-design-system/icons",
    "build:marque": "npm run build --workspace=@porsche-design-system/marque",
    "build:meta-icons": "npm run build --workspace=@porsche-design-system/meta-icons",
    "build:model-signatures": "npm run build --workspace=@porsche-design-system/model-signatures",
    "build:font-face": "npm run build --workspace=@porsche-design-system/font-face",
    "build:copyAssets": "COMPONENTS_ONLY=${COMPONENTS_ONLY:-0} tsx scripts/copyAssets.ts",
    "build:manifest": "rollup -c rollup.config.js --bundleConfigAsCjs && chmod +x bin/serve-cdn.js",
    "buildCopyComponentsOnly": "rm -rf ./cdn/components && COMPONENTS_ONLY=1 npm run build:copyAssets",
    "test": "npm run test:unit",
    "test:unit": "npm run test:unit:assets && npm run test:unit:fallbacks && npm run test:unit:flags && npm run test:unit:icons && npm run test:unit:font-face",
    "test:unit:assets": "vitest --config tests/unit/config/vitest.config.ts",
    "test:unit:fallbacks": "npm run test:unit --workspace=@porsche-design-system/fallbacks",
    "test:unit:flags": "npm run test:unit --workspace=@porsche-design-system/flags",
    "test:unit:icons": "npm run test:unit --workspace=@porsche-design-system/icons",
    "test:unit:font-face": "npm run test:unit --workspace=@porsche-design-system/font-face",
    "clean:build": "rm -rf ./dist && rm -rf ./cdn && rm -rf ./bin && npm run clean:projects:build",
    "clean:projects:build": "npm run clean:crest:build && npm run clean:fallbacks:build && npm run clean:flags:build && npm run clean:fonts:build && npm run clean:icons:build && npm run clean:marque:build && npm run clean:meta-icons:build && npm run clean:model-signatures:build && npm run clean:font-face:build",
    "clean:crest:build": "npm run clean:build --workspace=@porsche-design-system/crest",
    "clean:fallbacks:build": "npm run clean:build --workspace=@porsche-design-system/fallbacks",
    "clean:flags:build": "npm run clean:build --workspace=@porsche-design-system/flags",
    "clean:fonts:build": "npm run clean:build --workspace=@porsche-design-system/fonts",
    "clean:icons:build": "npm run clean:build --workspace=@porsche-design-system/icons",
    "clean:marque:build": "npm run clean:build --workspace=@porsche-design-system/marque",
    "clean:meta-icons:build": "npm run clean:build --workspace=@porsche-design-system/meta-icons",
    "clean:model-signatures:build": "npm run clean:build --workspace=@porsche-design-system/model-signatures",
    "clean:font-face:build": "npm run clean:build --workspace=@porsche-design-system/font-face"
  },
  "dependencies": {
    "@porsche-design-system/crest": "0.0.0",
    "@porsche-design-system/fonts": "0.0.0",
    "@porsche-design-system/font-face": "0.0.0",
    "@porsche-design-system/icons": "0.0.0",
    "@porsche-design-system/marque": "0.0.0",
    "@porsche-design-system/meta-icons": "0.0.0",
    "@porsche-design-system/model-signatures": "0.0.0",
    "@porsche-design-system/styles": "0.0.0"
  },
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0",
    "@types/http-server": "^0.12.4",
    "http-server": "^14.1.1"
  },
  "peerDependencies": {
    "@types/madge": "*",
    "madge": "*",
    "tsx": "*",
    "typescript": "*"
  },
  "bin": {
    "serve-cdn": "./bin/serve-cdn.js"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
