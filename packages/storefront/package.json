{
  "name": "@porsche-design-system/storefront",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "Porsche Design System",
  "scripts": {
    "postinstall": "rm -rf ./node_modules/webpack-dev-server/node_modules/webpack",
    "prestart": "yarn prebuild",
    "start": "concurrently -k -s 'first' -n 'cdn,vue' 'serve-cdn' 'vue-cli-service serve'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 8080 -d ./dist'",
    "prebuild": "yarn build:preparePartialResults && yarn build:generateComponentsBundleForStackBlitz",
    "build": "vue-cli-service build --silent",
    "build:generateComponentsBundleForStackBlitz": "ts-node --project tsconfig.node.json scripts/generateComponentsBundleForStackBlitz.ts",
    "build:preparePartialResults": "ts-node --project tsconfig.node.json scripts/preparePartialResults.ts",
    "updateAlgolia": "ts-node --project tsconfig.node.json scripts/updateAlgoliaIndex.ts",
    "lint": "eslint -c .eslintrc.js --ext .js,.ts,.vue ./src",
    "test": "yarn test:unit && yarn test:e2e && test:a11y && yarn test:vrt",
    "pretest:unit": "yarn prebuild",
    "test:unit": "vue-cli-service test:unit",
    "test:unit:watch": "yarn test:unit --watch",
    "test:e2e": "NODE_ENV=development yarn build && TYPE=E2E PORT=8080 jest --colors -c tests/e2e/config/jest.config.ts",
    "test:a11y": "NODE_ENV=development yarn build && TYPE=E2E PORT=8080 jest --colors -c tests/e2e/config/jest.config.a11y.ts",
    "test:vrt": "NODE_ENV=development yarn build && TYPE=VRT PORT=8080 jest --colors -c tests/vrt/config/jest.config.ts",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist"
  },
  "dependencies": {
    "@porsche-design-system/browser-notification": "4.1.4",
    "@porsche-design-system/components-js": "2.19.0",
    "@porsche-design-system/shared": "0.0.0",
    "@porsche-design-system/utilities": "5.4.0",
    "@stackblitz/sdk": "^1.8.1",
    "algoliasearch": "^4.14.3",
    "change-case": "^4.1.2",
    "core-js": "^3.27.1",
    "imask": "^6.4.3",
    "prismjs": "^1.29.0",
    "vmark": "1.1.0",
    "vmark-loader": "1.0.0",
    "vue": "^2.7.10",
    "vue-class-component": "^7.2.6",
    "vue-instantsearch": "^4.7.0",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.6.5",
    "vuex": "^3.6.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.5.2",
    "@porsche-design-system/assets": "5.0.2",
    "@types/node": "^18.11.9",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vue/cli-plugin-babel": "^4.5.19",
    "@vue/cli-plugin-router": "^4.5.19",
    "@vue/cli-plugin-typescript": "^4.5.19",
    "@vue/cli-plugin-unit-jest": "^4.5.19",
    "@vue/cli-plugin-vuex": "^4.5.19",
    "@vue/cli-service": "^4.5.19",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "1.2.2",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "eslint-plugin-vue": "^9.8.0",
    "globby": "^11.0.4",
    "local-web-server": "^5.2.1",
    "sass": "^1.56.1",
    "sass-loader": "^10.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.4",
    "vue-template-compiler": "^2.7.10",
    "whatwg-fetch": "^3.6.2"
  },
  "scope": "@porsche-design-system"
}
