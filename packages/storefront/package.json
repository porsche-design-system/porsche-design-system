{
  "name": "@porsche-design-system/storefront",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "yarn prebuild && concurrently -k -s 'first' -n 'cdn,next' 'serve-cdn' 'next dev'",
    "prebuild": "yarn build:stackblitz && yarn build:generateTableOfContents && yarn build:preparePartialResults && yarn build:prepareChangelog && yarn build:copyLicense",
    "build": "next build",
    "build:stackblitz": "yarn --cwd projects/stackblitz build",
    "build:generateTableOfContents": "tsx --tsconfig tsconfig.node.json scripts/generateTableOfContents.ts",
    "build:preparePartialResults": "tsx --tsconfig tsconfig.node.json scripts/preparePartialResults.ts",
    "build:prepareChangelog": "tsx --tsconfig tsconfig.node.json scripts/prepareChangelog.ts",
    "build:copyLicense": "cp ../../LICENSE.md ./src/app/license/license.mdx",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws -p 8080 -d ./dist'",
    "updateAlgolia": "tsx --tsconfig tsconfig.json scripts/updateAlgoliaIndex.tsx",
    "lint": "biome lint",
    "test": "yarn test:unit",
    "test:unit": "NEXT_PUBLIC_PDS_ENV=development yarn build && vitest --config tests/unit/config/vitest.config.ts",
    "test:e2e": "NEXT_PUBLIC_PDS_ENV=development yarn build && playwright test --config=tests/e2e/config/playwright.config.ts",
    "test:e2e:1/4": "yarn test:e2e --shard=1/4 --grep-invert 'sitemap.json'",
    "test:e2e:2/4": "yarn test:e2e --shard=2/4 --grep-invert 'sitemap.json'",
    "test:e2e:3/4": "yarn test:e2e --shard=3/4 --grep-invert 'sitemap.json'",
    "test:e2e:4/4": "yarn test:e2e --shard=4/4 --grep-invert 'sitemap.json'",
    "test:e2e:sitemap": "yarn test:e2e --grep 'sitemap.json'",
    "test:a11y": "NEXT_PUBLIC_PDS_ENV=development yarn build && playwright test --config=tests/a11y/config/playwright.config.ts",
    "test:a11y:1/6": "yarn test:a11y --shard=1/6",
    "test:a11y:2/6": "yarn test:a11y --shard=2/6",
    "test:a11y:3/6": "yarn test:a11y --shard=3/6",
    "test:a11y:4/6": "yarn test:a11y --shard=4/6",
    "test:a11y:5/6": "yarn test:a11y --shard=5/6",
    "test:a11y:6/6": "yarn test:a11y --shard=6/6",
    "test:vrt": "NEXT_PUBLIC_PDS_ENV=development yarn build && playwright test --config=tests/vrt/config/playwright.config.ts",
    "test:vrt:prepare-regression-snapshots": "prepare-vrt-snapshots --source tests/vrt/results --output tests/vrt/results --mode prepare",
    "test:vrt:update-regression-snapshots": "prepare-vrt-snapshots --source tests/vrt/results --output tests/vrt/specs/__screenshots__ --mode update",
    "clean:build": "rm -rf ./dist && rm -rf ./.next && yarn clean:stackblitz:build",
    "clean:stackblitz:build": "yarn --cwd projects/stackblitz clean:build"
  },
  "dependencies": {
    "@porsche-design-system/components-react": "3.31.0",
    "react-syntax-highlighter": "^15.6.6",
    "next": "15.4.2",
    "algoliasearch": "^5.40.0",
    "@algolia/cache-in-memory": "^4.25.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-instantsearch": "^7.16.3",
    "react-instantsearch-nextjs": "^1.0.2"
  },
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0",
    "@porsche-design-system/stackblitz": "0.0.0",
    "@next/mdx": "^15.4.2",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@types/mdx": "^2.0.13",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "remark-gfm": "^4.0.1",
    "cheerio": "^1.1.2"
  },
  "peerDependencies": {
    "@axe-core/playwright": "*",
    "@playwright/test": "*",
    "concurrently": "*",
    "globby": "*",
    "typescript": "*",
    "change-case": "*",
    "vitest": "*",
    "react": "*",
    "react-dom": "*",
    "tailwindcss": "*",
    "postcss": "*",
    "@tailwindcss/postcss": "*"
  },
  "scope": "@porsche-design-system",
  "volta": {
    "extends": "../../package.json"
  }
}
