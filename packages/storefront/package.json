{
  "name": "@porsche-design-system/storefront",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "yarn build:generateTableOfContents && concurrently -k -s 'first' -n 'cdn,next' 'serve-cdn' 'next dev'",
    "build": "yarn build:generateTableOfContents && next build",
    "build:generateTableOfContents": "tsx --tsconfig tsconfig.node.json scripts/generateTableOfContents.ts",
    "start": "concurrently -k -s 'first' -n 'cdn,next' 'serve-cdn' 'next start'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 8080 -d ./dist'",
    "lint": "next lint",
    "test": "yarn test:unit",
    "test:unit": "vitest --config tests/unit/config/vitest.config.ts",
    "test:e2e": "playwright test --config=tests/e2e/config/playwright.config.ts --ui"
  },
  "dependencies": {
    "@porsche-design-system/components-js": "3.26.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-syntax-highlighter": "^15.6.1",
    "next": "15.1.3"
  },
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0",
    "@next/mdx": "^15.1.3",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@types/mdx": "^2.0.13",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.20",
    "remark-gfm": "^4.0.0"
  },
  "peerDependencies": {
    "@axe-core/playwright": "*",
    "@playwright/test": "*",
    "concurrently": "*",
    "globby": "*",
    "typescript": "*",
    "change-case": "*",
    "vitest": "*"
  },
  "scope": "@porsche-design-system",
  "volta": {
    "extends": "../../package.json"
  }
}
