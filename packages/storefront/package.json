{
  "name": "@porsche-design-system/storefront",
  "version": "1.0.0",
  "private": true,
  "description": "Porsche Design System",
  "scripts": {
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "browser=$(node tests/e2e/support/browser.js) && vue-cli-service test:e2e --browser $browser",
    "lint": "eslint -c .eslintrc.js --ext .js,.ts,.vue ./src",
    "clean": "rm -rf ./node_modules && rm -rf ./yarn-error.log && rm -rf ./dist",
    "start": "vue-cli-service serve",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt",
    "test:vrt": "concurrently -k -s \"first\" -n \"server,vrt\" \"yarn start\" \"wait-on -t 180000 http-get://localhost:8080 && ts-node --project 'tests/vrt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/vrt/config/jasmine.config.json'\""
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "js-beautify": "^1.11.0",
    "lodash": "^4.17.15",
    "prismjs": "^1.20.0",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-property-decorator": "^8.4.2",
    "vue-router": "^3.1.6",
    "vuex": "^3.4.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.2",
    "@types/js-beautify": "^1.8.2",
    "@types/lodash": "^4.14.150",
    "@types/node": "~14.0.1",
    "@types/prismjs": "^1.16.0",
    "@types/puppeteer": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-e2e-cypress": "^4.3.1",
    "@vue/cli-plugin-router": "^4.3.1",
    "@vue/cli-plugin-typescript": "^4.3.1",
    "@vue/cli-plugin-unit-jest": "^4.3.1",
    "@vue/cli-plugin-vuex": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "@vue/eslint-config-typescript": "^5.0.1",
    "@vue/test-utils": "1.0.2",
    "concurrently": "^5.2.0",
    "cypress-shadow-dom": "^1.0.0",
    "eslint": "^7.0.0",
    "eslint-plugin-vue": "^6.1.2",
    "jasmine": "^3.5.0",
    "puppeteer": "^3.0.4",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "ts-node": "^8.10.1",
    "typescript": "~3.9.2",
    "vmark": "~1.1.0",
    "vmark-loader": "^1.0.0",
    "vue-template-compiler": "^2.6.11"
  },
  "scope": "@porsche-design-system"
}
