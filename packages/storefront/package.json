{
  "name": "@porsche-design-system/storefront",
  "version": "1.0.0",
  "private": true,
  "description": "Porsche Design System",
  "scripts": {
    "postinstall": "rm -rf ./node_modules/webpack-dev-server/node_modules/webpack",
    "start": "concurrently -k -s 'first' -n 'cdn,vue' 'serve-cdn' 'vue-cli-service serve'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 8080 -d ./dist'",
    "build": "vue-cli-service build --silent",
    "updateAlgolia": "ts-node --project tsconfig.node.json scripts/updateAlgoliaIndex.ts",
    "lint": "eslint -c .eslintrc.js --ext .js,.ts,.vue ./src",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt",
    "test:unit": "vue-cli-service test:unit",
    "test:unit:watch": "yarn test:unit --watch",
    "test:e2e": "NODE_ENV=dev yarn build && TYPE=E2E PORT=8080 jest --colors -c tests/e2e/config/jest.config.ts",
    "test:vrt": "NODE_ENV=dev yarn build && TYPE=VRT PORT=8080 jest --colors -c tests/vrt/config/jest.config.ts",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist"
  },
  "dependencies": {
    "@porsche-design-system/browser-notification": "4.1.1",
    "@porsche-design-system/components-js": "2.11.0-skeletons",
    "@porsche-design-system/shared": "0.0.0",
    "@porsche-design-system/utilities": "5.3.0-beta.0",
    "@porsche-design-system/vmark": "~1.2.0",
    "@porsche-design-system/vmark-loader": "^1.0.0",
    "algoliasearch": "^4.13.0",
    "change-case": "^4.1.2",
    "core-js": "^3.22.0",
    "prismjs": "^1.28.0",
    "vue": "^2.6.14",
    "vue-class-component": "^7.2.6",
    "vue-instantsearch": "^4.3.3",
    "vue-property-decorator": "^9.0.0",
    "vue-router": "^3.5.2",
    "vuex": "^3.6.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.4.2",
    "@axe-devtools/logger": "^4.4.0",
    "@axe-devtools/puppeteer": "^4.4.1",
    "@axe-devtools/reporter": "^4.4.0",
    "@types/node": "^17.0.25",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vue/cli-plugin-babel": "^5.0.4",
    "@vue/cli-plugin-router": "^4.5.15",
    "@vue/cli-plugin-typescript": "^4.5.15",
    "@vue/cli-plugin-unit-jest": "^4.5.15",
    "@vue/cli-plugin-vuex": "^4.5.15",
    "@vue/cli-service": "^4.5.15",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "1.2.2",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "eslint-plugin-vue": "^8.6.0",
    "local-web-server": "^5.2.0",
    "sass": "^1.50.1",
    "sass-loader": "^10.1.1",
    "ts-node": "^10.7.0",
    "typescript": "~4.6.3",
    "vue-template-compiler": "^2.6.14",
    "wait-on": "^6.0.1"
  },
  "scope": "@porsche-design-system"
}
