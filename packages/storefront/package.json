{
  "name": "@porsche-design-system/storefront",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "Porsche Design System",
  "scripts": {
    "postinstall": "rm -rf ./node_modules/webpack-dev-server/node_modules/webpack",
    "prestart": "yarn build:preparePartialResults",
    "start": "concurrently -k -s 'first' -n 'cdn,vue' 'serve-cdn' 'vue-cli-service serve'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 8080 -d ./dist'",
    "build": "yarn build:preparePartialResults && yarn build:vue",
    "build:preparePartialResults": "ts-node --project tsconfig.node.json scripts/preparePartialResults.ts",
    "build:vue": "vue-cli-service build --silent",
    "updateAlgolia": "ts-node --project tsconfig.node.json scripts/updateAlgoliaIndex.ts",
    "lint": "eslint -c .eslintrc.js --ext .js,.ts,.vue ./src",
    "test": "yarn test:unit && yarn test:e2e && test:a11y && yarn test:vrt",
    "test:unit": "vue-cli-service test:unit",
    "test:unit:watch": "yarn test:unit --watch",
    "test:e2e": "NODE_ENV=dev yarn build && TYPE=E2E PORT=8080 jest --colors -c tests/e2e/config/jest.config.ts",
    "test:a11y": "NODE_ENV=dev yarn build && TYPE=E2E PORT=8080 jest --colors -c tests/e2e/config/jest.config.a11y.ts",
    "test:vrt": "NODE_ENV=dev yarn build && TYPE=VRT PORT=8080 jest --colors -c tests/vrt/config/jest.config.ts",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist"
  },
  "dependencies": {
    "@porsche-design-system/browser-notification": "4.1.4",
    "@porsche-design-system/components-js": "2.14.0-beta.0",
    "@porsche-design-system/shared": "0.0.0",
    "@porsche-design-system/utilities": "5.3.1",
    "algoliasearch": "^4.13.1",
    "change-case": "^4.1.2",
    "core-js": "^3.23.4",
    "imask": "^6.4.2",
    "prismjs": "^1.28.0",
    "vmark": "~1.1.0",
    "vmark-loader": "~1.0.0",
    "vue": "^2.6.14",
    "vue-class-component": "^7.2.6",
    "vue-instantsearch": "^4.4.0",
    "vue-property-decorator": "^9.0.0",
    "vue-router": "^3.5.2",
    "vuex": "^3.6.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.4.3",
    "@types/node": "^18.6.4",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@vue/cli-plugin-babel": "^4.5.15",
    "@vue/cli-plugin-router": "^4.5.15",
    "@vue/cli-plugin-typescript": "^4.5.15",
    "@vue/cli-plugin-unit-jest": "^4.5.15",
    "@vue/cli-plugin-vuex": "^4.5.15",
    "@vue/cli-service": "^4.5.15",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "1.2.2",
    "concurrently": "^7.3.0",
    "eslint": "^8.21.0",
    "eslint-plugin-vue": "^9.3.0",
    "local-web-server": "^5.2.1",
    "sass": "^1.54.3",
    "sass-loader": "^10.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.6.4",
    "vue-template-compiler": "~2.7.4",
    "wait-on": "^6.0.1"
  },
  "scope": "@porsche-design-system"
}
