{
  "name": "@porsche-design-system/storefront",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "Porsche Design System",
  "scripts": {
    "postinstall": "rm -rf ./node_modules/webpack-dev-server/node_modules/webpack",
    "prestart": "yarn prebuild",
    "start": "concurrently -k -s 'first' -n 'cdn,vue' 'serve-cdn' 'NODE_OPTIONS=--openssl-legacy-provider vue-cli-service serve'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 8080 -d ./dist'",
    "prebuild": "yarn build:prepareChangelog && yarn build:preparePartialResults && yarn build:generateComponentsBundleForStackBlitz",
    "build": "NODE_OPTIONS=--openssl-legacy-provider vue-cli-service build --silent",
    "build:generateComponentsBundleForStackBlitz": "tsx --tsconfig tsconfig.node.json scripts/generateComponentsBundleForStackBlitz.ts",
    "build:prepareChangelog": "tsx --tsconfig tsconfig.node.json scripts/prepareChangelog.ts",
    "build:preparePartialResults": "tsx --tsconfig tsconfig.node.json scripts/preparePartialResults.ts",
    "updateAlgolia": "tsx --tsconfig tsconfig.node.json scripts/updateAlgoliaIndex.ts",
    "lint": "eslint -c .eslintrc.js --ext .js,.ts,.vue ./src",
    "test": "yarn test:unit && yarn test:e2e && test:a11y && yarn test:vrt",
    "pretest:unit": "yarn prebuild",
    "test:unit": "NODE_OPTIONS=--openssl-legacy-provider vue-cli-service test:unit",
    "test:unit:vitest": "vitest --config tests/unit:vitest/config/vitest.config.ts",
    "test:e2e": "NODE_ENV=development yarn build && playwright test --config=tests/e2e/config/playwright.config.ts",
    "test:e2e:no-build": "playwright test --config=tests/e2e/config/playwright.config.ts",
    "test:e2e:1/4": "yarn test:e2e --shard=1/4 --grep-invert 'sitemap.json'",
    "test:e2e:2/4": "yarn test:e2e --shard=2/4 --grep-invert 'sitemap.json'",
    "test:e2e:3/4": "yarn test:e2e --shard=3/4 --grep-invert 'sitemap.json'",
    "test:e2e:4/4": "yarn test:e2e --shard=4/4 --grep-invert 'sitemap.json'",
    "test:e2e:sitemap": "yarn test:e2e --grep 'sitemap.json'",
    "test:a11y": "NODE_ENV=development yarn build && playwright test --config=tests/a11y/config/playwright.config.ts",
    "test:a11y:1/2": "yarn test:a11y --shard=1/2",
    "test:a11y:2/2": "yarn test:a11y --shard=2/2",
    "test:vrt": "NODE_ENV=development yarn build && playwright test --config=tests/vrt/config/playwright.config.ts",
    "clean:build": "rm -rf ./dist"
  },
  "dependencies": {
    "@porsche-design-system/components-js": "3.14.0",
    "@porsche-design-system/fallbacks": "0.0.0",
    "@porsche-design-system/shared": "0.0.0",
    "@stackblitz/sdk": "1.8.2",
    "algoliasearch": "^4.22.1",
    "change-case": "^4.1.2",
    "core-js": "^3.36.0",
    "imask": "7.1.3",
    "prismjs": "^1.29.0",
    "vmark": "1.1.0",
    "vmark-loader": "1.0.0",
    "vue": "^2.7.16",
    "vue-class-component": "^7.2.6",
    "vue-instantsearch": "^4.14.0",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.6.5",
    "vuex": "^3.6.2",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.5",
    "@playwright/test": "1.42.1",
    "@types/prismjs": "^1.26.3",
    "@typescript-eslint/eslint-plugin": "^7.3.0",
    "@typescript-eslint/parser": "^7.3.0",
    "@vue/cli-plugin-babel": "^4.5.19",
    "@vue/cli-plugin-router": "^4.5.19",
    "@vue/cli-plugin-typescript": "^4.5.19",
    "@vue/cli-plugin-unit-jest": "^4.5.19",
    "@vue/cli-plugin-vuex": "^4.5.19",
    "@vue/cli-service": "^4.5.19",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "1.2.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "globby": "^14.0.1",
    "local-web-server": "^5.3.1",
    "sass": "^1.72.0",
    "sass-loader": "^10.5.2",
    "tsx": "^4.7.1",
    "typescript": "~5.4.2",
    "vue-template-compiler": "^2.7.16",
    "whatwg-fetch": "^3.6.20"
  },
  "scope": "@porsche-design-system",
  "volta": {
    "extends": "../../package.json"
  }
}
