{
  "name": "@porsche-design-system/react",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true concurrently -k -s 'first' -n 'cdn,react' 'serve-cdn' 'react-scripts start'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 3000 -d ./build'",
    "build": "yarn clean:build && yarn build:wrappers && yarn build:jsdom-polyfill && yarn build:uxpin-wrapper && yarn build:meta",
    "build-app": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "build:meta": "SOURCE=./projects/components-wrapper TARGET=./dist/components-wrapper && mkdir -p $TARGET && cp $SOURCE/package.json $TARGET && cp $SOURCE/README.md $TARGET && cp $SOURCE/LICENSE $TARGET && cp ../components/CHANGELOG.md $TARGET",
    "build:wrappers": "yarn rollup -c ./projects/components-wrapper/rollup.config.js",
    "build:jsdom-polyfill": "rollup -c ./projects/jsdom-polyfill/rollup.config.js",
    "build:uxpin-wrapper": "yarn --cwd ./projects/uxpin-wrapper build",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "yarn test:jsdom-polyfill && yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:smoke",
    "test:unit": "jest --colors -c tests/unit/config/jest.config.js --coverage",
    "test:jsdom-polyfill": "concurrently -k -s 'first' -n 'cdn,test' 'serve-cdn' 'jest --colors -c tests/jsdom-polyfill/config/jest.config.js'",
    "test:e2e": "yarn build-app && PORT=3000 BROWSER=none jest --colors -c tests/e2e/config/jest.config.ts",
    "test:vrt": "if [ \"$CI\" != true ]; then yarn build-app; fi && PORT=3000 BROWSER=none jest --colors -c tests/vrt/config/jest.config.ts",
    "test:smoke": "if [ \"$CI\" != true ]; then yarn build-app; fi && jest --colors -c tests/smoke/config/jest.config.js",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.3.1",
    "@porsche-design-system/components-react": "2.9.0",
    "construct-style-sheets-polyfill": "^3.1.0",
    "intersection-observer": "^0.12.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "scroll-behavior-polyfill": "^2.0.13",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@porsche-design-system/assets": "4.0.0",
    "@porsche-design-system/shared": "0.0.0",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.1.8",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.29",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.0.0",
    "globby": "^11.0.4",
    "local-web-server": "^5.1.1",
    "react-scripts": "^4.0.2",
    "rollup": "^2.68.0",
    "rollup-plugin-modify": "^3.0.0",
    "rollup-plugin-polyfill": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.6.0",
    "typescript": "~4.6.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
