{
  "name": "@porsche-design-system/react",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true concurrently -k -s 'first' -n 'cdn,react' 'serve-cdn' 'react-scripts start'",
    "build": "yarn clean:build && yarn build:generateWrappers && yarn build:components && yarn build:jsdom-polyfill && yarn build:meta",
    "postbuild": "cp ./projects/components-wrapper/src/lib/bundle.d.ts ./dist/components-wrapper/lib/bundle.d.ts",
    "build:meta": "SOURCE=./projects/components-wrapper TARGET=./dist/components-wrapper && mkdir -p $TARGET && cp $SOURCE/package.json $TARGET && cp $SOURCE/README.md $TARGET && cp $SOURCE/LICENSE $TARGET && cp ../components/CHANGELOG.md $TARGET",
    "build:generateWrappers": "rm -rf ./projects/components-wrapper/src/lib/components && ts-node --project './tsconfig.node.json' 'scripts/generateWrappers.ts'",
    "build:components": "yarn build:components:module && yarn build:components:cjs",
    "build:components:module": "tsc --build './projects/components-wrapper/tsconfig.esm.json'",
    "build:components:cjs": "tsc --build './projects/components-wrapper/tsconfig.cjs.json'",
    "build:jsdom-polyfill": "yarn build:jsdom-polyfill:bundle && yarn build:jsdom-polyfill:cleanInjectGlobalStyles",
    "build:jsdom-polyfill:bundle": "rollup -c rollup.config.js && cp -r projects/jsdom-polyfill/src/lib/. dist/components-wrapper/jsdom-polyfill/lib",
    "build:jsdom-polyfill:cleanInjectGlobalStyles": "ts-node --project './tsconfig.node.json' 'scripts/cleanInjectGlobalStyles.ts'",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "yarn test:jsdom-polyfill && yarn test:e2e && yarn test:vrt && yarn test:cbt",
    "test:jsdom-polyfill": "concurrently -k -s 'first' -n 'cdn,test' 'serve-cdn' 'jest -c tests/jsdom-polyfill/config/jest.config.js'",
    "test:e2e": "concurrently -k -s 'first' -n 'server,e2e' 'BROWSER=none yarn start' 'wait-on -t 240000 http-get://localhost:3000 && ts-node --project tests/e2e/config/tsconfig.json node_modules/.bin/jasmine --config=tests/e2e/config/jasmine.config.json'",
    "test:vrt": "concurrently -k -s 'first' -n 'server,vrt' 'BROWSER=none yarn start' 'wait-on -t 240000 http-get://localhost:3000 && ts-node --project tests/vrt/config/tsconfig.json node_modules/.bin/jasmine --config=tests/vrt/config/jasmine.config.json'",
    "test:cbt": "concurrently -k -s 'first' -n 'server,cbt' 'BROWSER=none yarn start' 'wait-on -t 240000 http-get://localhost:3000 && ts-node --project tests/cbt/config/tsconfig.json node_modules/.bin/jasmine --config=tests/cbt/config/jasmine.config.json'",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist && rm -rf ./projects/components-wrapper/src/lib"
  },
  "dependencies": {
    "@porsche-design-system/components-react": "2.0.0-alpha.11",
    "@porsche-design-system/utilities": "4.0.0",
    "construct-style-sheets-polyfill": "^2.4.3",
    "intersection-observer": "^0.12.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "scroll-behavior-polyfill": "^2.0.13",
    "whatwg-fetch": "^3.5.0"
  },
  "devDependencies": {
    "@porsche-design-system/assets": "3.1.0",
    "@porsche-design-system/partials": "2.2.0",
    "@porsche-design-system/visual-regression-tester": "^3.0.0",
    "@porsche-ui/cross-browser-tester": "^1.0.2",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/jasmine": "^3.6.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.6",
    "concurrently": "^5.3.0",
    "eslint-config-react-app": "^6.0.0",
    "jasmine": "^3.6.3",
    "jasmine-spec-reporter": "^6.0.0",
    "jest": "^26.6.3",
    "puppeteer": "~5.5.0",
    "react-scripts": "^4.0.0",
    "rollup": "^2.36.1",
    "rollup-plugin-polyfill": "^3.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "~4.1.3",
    "wait-on": "^5.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 2 version",
      ">1%",
      "not dead",
      "not ie < 11",
      "not op_mini all"
    ],
    "development": [
      "last 2 version",
      ">1%",
      "not dead",
      "not ie < 11",
      "not op_mini all"
    ]
  }
}
