{
  "name": "@porsche-design-system/react",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true concurrently -k -s 'first' -n 'cdn,react' 'serve-cdn' 'react-scripts start'",
    "build": "yarn clean:build && yarn build:wrappers && yarn build:jsdom-polyfill && yarn build:uxpin-wrapper && yarn build:meta",
    "build:meta": "SOURCE=./projects/components-wrapper TARGET=./dist/components-wrapper && mkdir -p $TARGET && cp $SOURCE/package.json $TARGET && cp $SOURCE/README.md $TARGET && cp $SOURCE/LICENSE $TARGET && cp ../components/CHANGELOG.md $TARGET",
    "build:wrappers": "yarn rollup -c ./projects/components-wrapper/rollup.config.js",
    "build:jsdom-polyfill": "yarn build:jsdom-polyfill:bundle && yarn build:jsdom-polyfill:cleanInjectGlobalStyles",
    "build:jsdom-polyfill:bundle": "rollup -c ./projects/jsdom-polyfill/rollup.config.js && cp -r projects/jsdom-polyfill/src/lib/. dist/components-wrapper/jsdom-polyfill/lib",
    "build:jsdom-polyfill:cleanInjectGlobalStyles": "ts-node --project './tsconfig.node.json' 'scripts/cleanInjectGlobalStyles.ts'",
    "build:uxpin-wrapper": "yarn --cwd ./projects/uxpin-wrapper build",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "yarn test:jsdom-polyfill && yarn test:unit && yarn test:e2e && yarn test:vrt",
    "test:jsdom-polyfill": "concurrently -k -s 'first' -n 'cdn,test' 'serve-cdn' 'jest -c tests/jsdom-polyfill/config/jest.config.js'",
    "test:unit": "jest -c tests/unit/config/jest.config.js",
    "test:e2e": "concurrently -k -s 'first' -n 'server,e2e' 'BROWSER=none yarn start' 'wait-on -t 240000 http-get://localhost:3000 && ts-node --project tests/e2e/config/tsconfig.json node_modules/.bin/jasmine --config=tests/e2e/config/jasmine.config.json'",
    "test:vrt": "concurrently -k -s 'first' -n 'server,vrt' 'BROWSER=none yarn start' 'wait-on -t 240000 http-get://localhost:3000 && ts-node --project tests/vrt/config/tsconfig.json node_modules/.bin/jasmine --config=tests/vrt/config/jasmine.config.json'",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.3.1",
    "@porsche-design-system/components-react": "2.4.0-beta.2",
    "construct-style-sheets-polyfill": "^2.4.16",
    "intersection-observer": "^0.12.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.3.0",
    "scroll-behavior-polyfill": "^2.0.13",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@porsche-design-system/assets": "4.0.0",
    "@porsche-design-system/shared": "0.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.1.8",
    "@types/jasmine": "^3.9.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.4",
    "@types/react": "^17.0.22",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.9",
    "concurrently": "^6.2.1",
    "globby": "^11.0.4",
    "jasmine": "^3.8.0",
    "jest": "^27.2.1",
    "react-scripts": "^4.0.2",
    "rollup": "^2.56.1",
    "rollup-plugin-polyfill": "^3.0.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.2.0",
    "typescript": "~4.3.5",
    "wait-on": "^6.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
