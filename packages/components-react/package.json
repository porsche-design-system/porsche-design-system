{
  "name": "components-react",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true concurrently -k -s 'first' -n 'cdn,pwcm,react' 'yarn start:cdn-server' 'yarn start:pwcm-server' 'react-scripts start'",
    "start:cdn-server": "start-cdn-local",
    "start:pwcm-server": "start-cdn-pwcm",
    "build": "yarn --cwd projects/components-wrapper build",
    "test": "yarn test:mocks && yarn test:vrt && yarn test:cbt",
    "test:mocks": "yarn test:mocks:js && yarn test:mocks:ts",
    "test:mocks:js": "jest --config='./tests/mocks/config/jest.config-js.js'",
    "test:mocks:ts": "jest --config='./tests/mocks/config/jest.config-ts.js'",
    "test:vrt": "concurrently -k -s 'first' -n 'server,vrt' 'BROWSER=none yarn start' 'wait-on -t 240000 http-get://localhost:3000 && ts-node --project tests/vrt/config/tsconfig.json node_modules/.bin/jasmine --config=tests/vrt/config/jasmine.config.json'",
    "test:cbt": "concurrently -k -s 'first' -n 'server,cbt' 'BROWSER=none yarn start' 'wait-on -t 240000 http-get://localhost:3000 && ts-node --project tests/cbt/config/tsconfig.json node_modules/.bin/jasmine --config=tests/cbt/config/jasmine.config.json'",
    "clean": "rm -rf ./node_modules && rm -rf ./yarn-error.log && yarn --cwd projects/components-wrapper clean"
  },
  "dependencies": {
    "@porsche-design-system/components-react": "1.5.2",
    "@porsche-design-system/utilities": "1.0.6-rc.0"
  },
  "devDependencies": {
    "@porsche-design-system/cdn-local": "0.0.0",
    "@porsche-design-system/cdn-pwcm": "0.0.0",
    "@porsche-design-system/visual-regression-tester": "^3.0.0",
    "@porsche-ui/cross-browser-tester": "^1.0.2",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.24",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "concurrently": "^5.2.0",
    "jasmine": "^3.5.0",
    "puppeteer": "~5.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1",
    "ts-node": "^8.10.2",
    "typescript": "~3.9.7",
    "wait-on": "^5.1.0"
  },
  "resolutions": {
    "@types/react": "^16.9.17"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "browserslist": {
    "production": [
      "last 2 version",
      ">1%",
      "not dead",
      "not ie < 11",
      "not op_mini all"
    ],
    "development": [
      "last 2 version",
      ">1%",
      "not dead",
      "not ie < 11",
      "not op_mini all"
    ]
  }
}
