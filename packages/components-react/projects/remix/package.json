{
  "name": "@porsche-design-system/remix",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "sideEffects": false,
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "prestart": "patchRemixRun && yarn --cwd ../nextjs prestartAndBuild",
    "prebuild-app": "patchRemixRun && yarn --cwd ../nextjs prestartAndBuild",
    "start": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'cross-env NODE_ENV=development binode -- @remix-run/dev:remix dev'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'remix-serve build'",
    "build-app": "remix build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "yarn test:vrt",
    "test:vrt": "yarn build-app && TYPE=VRT PORT=3000 jest --colors -c tests/vrt/config/jest.config.ts",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./build && rm -rf ./public/build"
  },
  "dependencies": {
    "@porsche-design-system/assets": "5.0.2",
    "@porsche-design-system/components-react": "3.0.0-alpha.0",
    "@remix-run/node": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "@remix-run/serve": "^1.9.0",
    "@remix-run/server-runtime": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "isbot": "^3.6.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0",
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^8.21.1",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.13",
    "binode": "^1.0.5",
    "concurrently": "^7.6.0",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "happy-dom": "^8.3.2",
    "msw": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "start-server-and-test": "^1.15.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "~4.9.4",
    "vite": "^4.1.1",
    "vite-tsconfig-paths": "^4.0.5"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "engines": {
    "node": ">=14"
  }
}
