{
  "name": "@porsche-design-system/react-ssr-wrapper",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "build": "yarn build:copy && yarn build:bundle",
    "build:copy": "cp ../react-wrapper/tsconfig.json ./ && cp ../react-wrapper/src/public-api.ts ./src && cp ../react-wrapper/src/provider.tsx ./src && cp ../react-wrapper/src/hooks.ts ./src && cp ../react-wrapper/src/utils.ts ./src",
    "build:bundle": "rollup -c rollup.config.js --bundleConfigAsCjs",
    "test": "yarn test:unit",
    "test:unit": "jest --colors -c tests/unit/config/jest.config.js",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ../../dist/react-wrapper/ssr"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "rollup": "^3.18.0",
    "rollup-plugin-generate-package-json": "^3.2.0"
  }
}
