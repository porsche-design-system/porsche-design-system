{
  "extends": "@porsche-design-system/shared/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": true, // added by nextjs cli ü§∑‚Äç
    "incremental": true, // added by nextjs cli ü§∑‚Äç
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ] // added by nextjs cli ü§∑‚Äç
    ,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
