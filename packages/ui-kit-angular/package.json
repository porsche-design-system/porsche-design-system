{
  "name": "@porscheui/ui-kit-angular",
  "version": "1.0.0-alpha.3",
  "scope": "@porscheui",
  "description": "Porsche UI Kit – A Porsche Angular component library.",
  "license": "SEE LICENSE IN https://ui.porsche.com",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Oliver Hook <oliver.hook@mhp.com>"
  ],
  "keywords": [
    "porsche",
    "ui",
    "angular-components",
    "design-system"
  ],
  "homepage": "https://ui.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "publishConfig": {
    "@porscheui:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
  },
  "scripts": {
    "build": "yarn build.ng",
    "build.fesm": "rollup --config ./scripts/rollup.config.js",
    "build.ng": "yarn build.es2015 && yarn build.es5",
    "build.es2015": "ngc -p tsconfig.json && rollup --config ./scripts/rollup.config.js",
    "build.es5": "ngc -p tsconfig.legacy.json && rollup --config ./scripts/rollup.config.legacy.js",
    "lint": "yarn lint.ts",
    "lint.ts": "tslint --project .",
    "lint.fix": "tslint --project . --fix",
    "prerelease": "yarn validate && np prerelease --yolo --any-branch --tag next",
    "test": "echo 'angular no tests yet'",
    "tsc": "tsc -p .",
    "validate": "yarn && yarn lint && yarn test && yarn build",
    "clean": "rm -rf ./node_modules & rm -rf ./yarn-error.log & rm -rf ./build & rm -rf ./dist"
  },
  "main": "dist/fesm5.js",
  "module": "dist/fesm5.js",
  "types": "dist/core.d.ts",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@porscheui/ui-kit-js": "1.0.0-alpha.3",
    "tslib": "^1.10.0"
  },
  "peerDependencies": {
    "@angular-devkit/core": "~8.2.0",
    "@angular-devkit/schematics": "~8.2.0",
    "@angular/common": "~8.2.0",
    "@angular/compiler": "~8.2.0",
    "@angular/compiler-cli": "~8.2.0",
    "@angular/core": "~8.2.0",
    "@angular/forms": "~8.2.0",
    "@angular/platform-browser": "~8.2.0",
    "@angular/platform-browser-dynamic": "~8.2.0",
    "@angular/router": "~8.2.0",
    "rxjs": "~6.4.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/core": "~8.2.0",
    "@angular-devkit/schematics": "~8.2.0",
    "@angular/common": "~8.2.2",
    "@angular/compiler": "~8.2.2",
    "@angular/compiler-cli": "~8.2.2",
    "@angular/core": "~8.2.2",
    "@angular/forms": "~8.2.2",
    "@angular/platform-browser": "~8.2.2",
    "@angular/platform-browser-dynamic": "~8.2.2",
    "@angular/router": "~8.2.2",
    "@types/node": "~12.7.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.3",
    "rollup": "^1.1.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rxjs": "~6.5.2",
    "tsickle": "^0.36.0",
    "tslint": "~5.18.0",
    "tslint-ionic-rules": "0.0.21",
    "typescript": "~3.5.3",
    "zone.js": "~0.10.2"
  }
}
