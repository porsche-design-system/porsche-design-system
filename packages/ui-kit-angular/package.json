  "license": "SEE LICENSE IN https://ui.porsche.com",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Oliver Hook <oliver.hook@mhp.com>"
  ],
  "keywords": [
    "porsche",
    "ui",
    "angular-components",
    "design-system"
  ],
  "homepage": "https://ui.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "publishConfig": {
    "@porscheui:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
  },
  "scripts": {
    "build": "yarn build.ng",
    "build.fesm": "rollup --config ./scripts/rollup.config.js",
    "build.ng": "yarn build.es2015 && yarn build.es5",
    "build.es2015": "ngc -p tsconfig.json && rollup --config ./scripts/rollup.config.js",
    "build.es5": "ngc -p tsconfig.legacy.json && rollup --config ./scripts/rollup.config.legacy.js",
    "lint": "yarn lint.ts",
    "lint.ts": "tslint --project .",
    "lint.fix": "tslint --project . --fix",
    "prerelease": "yarn validate && np prerelease --yolo --any-branch --tag next",
    "test": "echo 'angular no tests yet'",
    "tsc": "tsc -p .",
    "validate": "yarn && yarn lint && yarn test && yarn build"
  },
  "main": "dist/fesm5.js",
  "module": "dist/fesm5.js",
  "types": "dist/core.d.ts",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "peerDependencies": {
    "@angular-devkit/core": "^7.2.1",
