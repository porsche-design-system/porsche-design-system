{
  "name": "@porsche-design-system/vue",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,vue' 'serve-cdn' 'vite -c vite.config.app.mts'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 5173 -d ./dist/demo-app'",
    "build": "yarn clean:build && yarn build:vue-wrapper && yarn build:subPackages",
    "build:vue-wrapper": "yarn build:vue-wrapper:lib && yarn build:vue-wrapper:typings",
    "build:vue-wrapper:lib": "vite build -c vite.config.package.mts",
    "build:vue-wrapper:typings": "vue-tsc --emitDeclarationOnly && tsx scripts/addDeprecatedAnnotations.ts",
    "build:subPackages": "yarn build:subPackages:lib && yarn build:subPackages:typings",
    "build:subPackages:lib": "yarn rollup -c ./projects/vue-wrapper/rollup.config.js --bundleConfigAsCjs",
    "build:subPackages:typings": "yarn build:subPackages:typings:jsdom-polyfill && yarn build:subPackages:typings:partials && yarn build:subPackages:typings:testing && yarn build:subPackages:typings:styles",
    "build:subPackages:typings:jsdom-polyfill": "tsc projects/vue-wrapper/src/jsdom-polyfill/index.ts --declaration --emitDeclarationOnly --declarationDir dist/vue-wrapper/jsdom-polyfill --types node",
    "build:subPackages:typings:partials": "tsc projects/vue-wrapper/src/partials/index.ts --declaration --emitDeclarationOnly --declarationDir dist/vue-wrapper/partials --types node",
    "build:subPackages:typings:testing": "tsc projects/vue-wrapper/src/testing/index.ts --declaration --emitDeclarationOnly --declarationDir dist/vue-wrapper/testing --types node",
    "build:subPackages:typings:styles": "tsc projects/vue-wrapper/src/styles/index.ts --declaration --emitDeclarationOnly --declarationDir dist/vue-wrapper/styles/esm --types node",
    "build-app": "vue-tsc --noEmit --project tsconfig.app.json && vite build -c vite.config.app.mts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --ignore-pattern **/tests/* ",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:smoke",
    "test:unit": "yarn test:unit:vue-wrapper",
    "test:unit:vue-wrapper": "jest --colors -c projects/vue-wrapper/tests/unit/config/jest.config.js",
    "test:e2e": "yarn build-app && playwright test --config=tests/e2e/config/playwright.config.ts",
    "test:vrt": "playwright test --config=tests/vrt/config/playwright.config.ts",
    "test:smoke": "yarn test:smoke:vue-wrapper",
    "test:smoke:vue-wrapper": "vitest --config projects/vue-wrapper/tests/smoke/config/vitest.config.ts",
    "clean:build": "rm -rf ./dist"
  },
  "dependencies": {
    "@porsche-design-system/components-vue": "3.16.0",
    "vue": "^3.4.21",
    "vue-imask": "^7.5.0",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@porsche-design-system/assets": "5.0.2",
    "@porsche-design-system/shared": "0.0.0",
    "@rushstack/eslint-patch": "^1.10.1",
    "@testing-library/vue": "^8.0.3",
    "@tsconfig/node18": "^18.2.4",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "0.4.0",
    "@vue/vue3-jest": "29.2.6",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.24.0",
    "local-web-server": "^5.3.3",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-static-copy": "^1.0.2",
    "vue-tsc": "^2.0.22"
  },
  "peerDependencies": {
    "@playwright/test": "*",
    "change-case": "*",
    "concurrently": "*",
    "globby": "*",
    "tsx": "*",
    "typescript": "*",
    "vite": "*"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
