{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "projects/vue-wrapper/src"],
  "exclude": [
    "projects/vue-wrapper/src/styles/index.ts",
    "projects/vue-wrapper/src/partials/index.ts",
    "projects/vue-wrapper/src/testing/index.ts",
    "projects/vue-wrapper/src/jsdom-polyfill/index.ts"
  ],
  // importsNotUsedAsValues & preserveValueImports are deprecated in favor of verbatimModuleSyntax. To fix the deprecation warning we have to set the default values.
  // TODO: remove importsNotUsedAsValues & preserveValueImports on Typescript v5.5.
  "compilerOptions": {
    "outDir": "dist/vue-wrapper",
    "declaration": true,
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./projects/vue-wrapper/src/public-api.ts"]
    },
    "types": ["node"]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
