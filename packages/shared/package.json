{
  "name": "@porsche-design-system/shared",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Bernd Hacker <bernd.hacker@mhp.com>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "homepage": "https://designsystem.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "scripts": {
    "build": "yarn clean:build && yarn build:generate && yarn build:package",
    "build:generate": "yarn build:generate:tagNames && yarn build:generate:chunksManifest",
    "build:generate:chunksManifest": "ts-node --project './tsconfig.node.json' 'scripts/generateChunksManifest.ts'",
    "build:generate:tagNames": "ts-node --project './tsconfig.node.json' './scripts/generateTagNames.ts'",
    "build:package": "rollup -c rollup.config.js",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./src/lib && rm -rf ./dist"
  },
  "devDependencies": {
    "@porsche-design-system/components-js": "2.0.0-rc.2",
    "@rollup/plugin-typescript": "^8.1.0",
    "change-case": "^4.1.2",
    "globby": "^11.0.2",
    "rollup": "^2.38.0",
    "ts-node": "^9.1.1",
    "typescript": "~4.1.3"
  }
}
