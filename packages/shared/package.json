  "scripts": {
    "build": "yarn clean:build && yarn build:chunksManifest && yarn build:tagNames",
    "build:chunksManifest": "ts-node --project './tsconfig.node.json' 'scripts/generateChunksManifest.ts'",
    "build:tagNames": "ts-node --project './tsconfig.node.json' './scripts/generateTagNames.ts'",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./src/lib && rm -rf ./dist"
  },
