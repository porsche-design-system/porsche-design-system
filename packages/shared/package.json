  "private": true,
  "scope": "@porsche-design-system",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Bernd Hacker <bernd.hacker@mhp.com>",
    "Anton Schmidt <anton.schmidt@mhp.com>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "homepage": "https://designsystem.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "scripts": {
    "build": "yarn clean:build && yarn build:generateTagNames && yarn build:generateComponentMeta && yarn build:generateCodeSamples && yarn build:bundle && yarn build:preparePackage",
    "build:generateTagNames": "ts-node './scripts/generateTagNames.ts'",
    "build:generateComponentMeta": "ts-node './scripts/generateComponentMeta.ts'",
    "build:generateCodeSamples": "ts-node './scripts/generateCodeSamples.ts'",
    "build:bundle": "rollup -c rollup.config.js",
    "build:preparePackage": "ts-node 'scripts/preparePackage.ts'",
    "test": "yarn test:unit",
    "test:unit": "jest --colors -c tests/unit/config/jest.config.js --coverage",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./src/lib && rm -rf ./dist"
  },
  "dependencies": {
    "@alex_neo/jest-expect-message": "^1.0.5",
    "@porsche-design-system/visual-regression-tester": "^4.3.0",
    "@types/jest": "^27.0.3",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/jest-expect-message": "^1.0.3",
    "jest": "^27.4.4",
    "jest-puppeteer": "^6.0.0",
    "puppeteer": "~10.4.0",
    "ts-jest": "^27.1.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "change-case": "^4.1.2",
    "globby": "^11.0.4",
    "rollup": "^2.67.1",
    "rollup-plugin-copy": "^3.4.0",
    "ts-node": "^10.3.0",
    "typescript": "~4.5.5"
  }
}
