{
  "name": "shared",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "license": "UNLICENSED",
  "homepage": "https://designsystem.porsche.com",
  "scripts": {
    "build": "yarn clean:build && yarn build:generateTagNames && yarn build:generateChunkNames && yarn build:generatePartialNames && yarn build:generateCodeSamples && yarn build:bundle",
    "build:generateTagNames": "tsx scripts/generateTagNames.ts",
    "build:generateCodeSamples": "tsx scripts/generateCodeSamples.ts",
    "build:generateChunkNames": "tsx scripts/generateTagNamesWithChunk.ts",
    "build:generatePartialNames": "tsx scripts/generatePartialNames.ts",
    "build:bundle": "rollup -c rollup.config.js --bundleConfigAsCjs",
    "clearGitHubActionLogs": "tsx scripts/clearGitHubActionLogs.ts",
    "test": "yarn test:unit",
    "test:unit": "jest --colors -c tests/unit/config/jest.config.js",
    "clean:build": "rm -rf ./src/lib && rm -rf ./dist"
  },
  "devDependencies": {
    "@octokit/core": "^6.1.1",
    "@types/madge": "^5.0.3",
    "madge": "^6.1.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
