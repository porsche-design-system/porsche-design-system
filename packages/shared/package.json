{
  "name": "@porsche-design-system/shared",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Bernd Hacker <bernd.hacker@mhp.com>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "homepage": "https://designsystem.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "scripts": {
    "build": "yarn clean:build && yarn build:generateTagNames && yarn build:generateComponentMeta && yarn build:generateCodeSamples && yarn build:package",
    "build:generateTagNames": "ts-node --project './tsconfig.node.json' './scripts/generateTagNames.ts'",
    "build:generateComponentMeta": "ts-node --project './tsconfig.node.json' './scripts/generateComponentMeta.ts'",
    "build:generateCodeSamples": "ts-node --project './tsconfig.node.json' './scripts/generateCodeSamples.ts'",
    "build:package": "rollup -c rollup.config.js",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./src/lib && rm -rf ./dist"
  },
  "devDependencies": {
    "@porsche-design-system/visual-regression-tester": "^4.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "change-case": "^4.1.2",
    "globby": "^11.0.4",
    "rollup": "^2.56.1",
    "ts-node": "^10.2.0",
    "typescript": "~4.3.5"
  }
}
