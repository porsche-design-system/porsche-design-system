    "@types/jest-environment-puppeteer": "^5.0.2",
    "@types/jest-expect-message": "^1.1.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-puppeteer": "^6.1.1",
    "jss": "^10.9.2",
    "jss-plugin-sort-css-media-queries": "^1.0.1-beta.0",
    "jss-preset-default": "^10.9.2",
