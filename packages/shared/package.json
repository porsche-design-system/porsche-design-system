  "devDependencies": {
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/madge": "^5.0.0",
    "@types/node": "^18.7.23",
    "change-case": "^4.1.2",
    "globby": "^11.0.4",
    "madge": "^5.0.1",
    "rollup": "^2.79.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.3"
