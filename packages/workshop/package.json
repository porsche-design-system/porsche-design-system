{
  "name": "@porscheui/ui-kit-react",
  "version": "1.0.0-beta.0",
  "scope": "@porscheui",
  "private": true,
  "description": "Porsche UI Kit design system",
  "main": "build/commonjs/index.js",
  "module": "build/es/index.js",
  "jsnext:main": "build/es/index.js",
  "typings": "build/typings/index",
  "license": "SEE LICENSE IN https://ui.porsche.com",
  "files": [
    "build",
    "src/**/*.scss",
    "css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "keywords": [
    "porsche",
    "ui",
    "components",
    "design-system",
    "react"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schr√∂ter <stephan.schroeter@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Marcel Bertram <marcel.bertram@porsche.de>"
  ],
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "homepage": "https://ui.porsche.com",
  "scripts": {
    "prebuild": "rm -rf './.tmp' './build' './css'",
    "build": "concurrently -c \"white\" -n \"build:es,build:commonjs,build:css\" \"yarn build:es\" \"yarn build:commonjs\" \"yarn build:css\"",
    "postbuild": "rm -rf './.tmp'",
    "build:es": "tsc --project './' --outDir './build/es' --declaration true --declarationDir './build/typings'",
    "watch:es": "tsc --project './' --outDir './build/es' --declaration true --declarationDir './build/typings' --watch",
    "build:commonjs": "tsc --project './' --outDir './build/commonjs' --module commonjs",
    "build:css": "node-sass-chokidar --source-map true './src' --output './.tmp/css' --importer=../../node_modules/node-sass-tilde-importer && postcss --use autoprefixer --map --dir './css' --base './.tmp/css' './.tmp/css/**/*.css'",
    "lint": "concurrently -c \"white\" -n \"lint:scss,lint:ts\" \"yarn lint:scss\" \"yarn lint:ts\"",
    "lint:scss": "stylelint './src/**/*.scss'",
    "lint:ts": "tslint -p './tsconfig.json' -t codeFrame",
    "clean": "rm -rf './node_modules' './.tmp' './build' './css'"
  },
  "resolutions": {
    "@types/react": "^16.8.13"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-inlinesvg": "^0.8.4"
  },
  "devDependencies": {
    "@types/react": "^16.8.20",
    "@types/react-dom": "^16.8.4",
    "@types/react-inlinesvg": "^0.8.0",
    "autoprefixer": "^9.6.0",
    "concurrently": "^4.1.1",
    "node-sass-chokidar": "^1.3.5",
    "node-sass-tilde-importer": "^1.0.2",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.2",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.8.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "~3.5.2"
  },
  "publishConfig": {
    "@porscheui:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
  }
}
