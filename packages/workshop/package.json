{
  "name": "@porscheui/porsche-ui-kit",
  "version": "1.0.0",
  "scope": "@porscheui",
  "description": "Porsche UI Kit component library",
  "main": "build/commonjs/index.js",
  "module": "build/es/index.js",
  "jsnext:main": "build/es/index.js",
  "typings": "build/typings/index",
  "license": "SEE LICENSE IN https://github.com/porscheui/porsche-ui-kit/wiki/License",
  "sideEffects": false,
  "files": [
    "build",
    "src/**/*.scss",
    "css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "keywords": [
    "porsche",
    "ui",
    "components",
    "design-system",
    "pattern-lab",
    "react"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schr√∂ter <stephan.schroeter@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Marcel Bertram <marcel.bertram@porsche.de>"
  ],
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-kit/issues"
  },
  "homepage": "https://ui.porsche.com",
  "scripts": {
    "start": "yarn run build",
    "prebuild": "rimraf ./.tmp && rimraf ./build && rimraf ./css",
    "build": "yarn run build:es && yarn run build:commonjs && yarn run build:sass && yarn run build:css",
    "build:es": "tsc --project ./ --outDir ./build/es --declaration true --declarationDir ./build/typings",
    "watch:es": "tsc --project ./ --outDir ./build/es --declaration true --declarationDir ./build/typings --watch",
    "build:commonjs": "tsc --project ./ --outDir ./build/commonjs --module commonjs",
    "build:sass": "node-sass-chokidar --source-map true ./src --output .tmp/css --importer=./../../node_modules/node-sass-tilde-importer",
    "build:css": "postcss --use autoprefixer --map --dir ./css --base .tmp/css \".tmp/css/**/*.css\"",
    "lint:ts": "tslint --project '.' --format codeFrame",
    "lint:ts:fix": "yarn run lint:ts --fix",
    "publish:artifactory": "yarn run test && yarn run build && yarn publish"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/react-dom": "^16.8.2",
    "@types/react": "^16.8.3",
    "autoprefixer": "^9.4.9",
    "chokidar": "^2.1.2",
    "cpx": "^1.5.0",
    "node-sass-chokidar": "^1.3.4",
    "node-sass-tilde-importer": "^1.0.2",
    "postcss-cli": "^6.1.2",
    "postcss": "^7.0.14",
    "react-dom": "^16.8.3",
    "react": "^16.8.3",
    "rimraf": "^2.6.3",
    "typescript": "~3.3.3"
  },
  "peerDependencies": {
    "react": ">=0.14.0 <= 16",
    "react-dom": ">=0.14.0 <= 16"
  },
  "publishConfig": {
    "@porsche:registry": "https://porscheui.jfrog.io/porscheui/api/yarn/yarn-local/"
  }
}
