{
  "name": "@porsche-design-system/partials",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Olivia Pala <olivia.pala@udg.de>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Melanie Kolar <melanie.kolar@udg.de>",
    "Bernd Hacker <bernd.hacker@mhp.com>",
    "Anton Schmidt <anton.schmidt@mhp.com>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "description": "Porsche Design System Partials",
  "keywords": [
    "porsche",
    "partials"
  ],
  "homepage": "https://designsystem.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "scripts": {
    "build": "yarn clean:build && yarn build:partials && yarn build:package && yarn build:generatePackageJsonTemplate && yarn build:copyPackageJsonTemplate && yarn build:copyToComponentsJs",
    "build:package": "rollup -c rollup.config.js",
    "build:partials": "ts-node scripts/buildPartials.ts",
    "build:copyToComponentsJs": "TARGET=../../dist/components-wrapper/partials && rm -rf $TARGET && mkdir -p $TARGET && cp -r ./dist/. $TARGET",
    "build:copyPackageJsonTemplate": "cp package.template.json ./dist/package.json",
    "build:generatePackageJsonTemplate": "ts-node scripts/generatePackageJsonTemplate.ts",
    "test": "yarn test:unit",
    "test:unit": "jest --colors -c tests/unit/config/jest.config.js --coverage",
    "test:watch": "yarn test --watch",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./src/lib && rm -rf ./dist"
  },
  "dependencies": {
    "@porsche-design-system/assets": "4.0.0",
    "@porsche-design-system/shared": "0.0.0",
    "@porsche-design-system/styles": "0.0.0",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/html-minifier": "^4.0.2",
    "html-minifier": "^4.0.0",
    "rollup": "^2.67.2",
    "tslib": "^2.3.0",
    "typescript": "~4.5.5"
  },
  "files": [
    "dist/"
  ]
}
