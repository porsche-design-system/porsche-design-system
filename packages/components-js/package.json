{
  "name": "@porsche-design-system/components-js",
  "version": "1.3.0",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Olivia Pala <olivia.pala@udg.de>",
    "Christoph Stickel <net.christoph.stickel@mhp.com>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Melanie Kolar <melanie.kolar@udg.de>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "description": "Porsche Design System Web Components JS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "keywords": [
    "porsche",
    "ui",
    "web-components",
    "design-system"
  ],
  "homepage": "https://designsystem.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "publishConfig": {
    "@porsche-design-system:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
  },
  "scripts": {
    "start": "yarn build:iconNameTypings && stencil build --watch --serve",
    "start:vrt-server": "yarn build && http-server -p 61423 -P http://localhost:61423/www",
    "start:cbt-server": "yarn build && http-server -p 61424 -P http://localhost:61424/www",
    "build": "yarn build:iconNameTypings && stencil build --docs && node ./scripts/doc.js",
    "build:iconNameTypings": "node ./scripts/icon-name-generation.js",
    "lint": "yarn lint:scss && yarn lint:ts",
    "lint:scss": "stylelint './src/**/*.scss'",
    "lint:ts": "eslint -c .eslintrc.js --ext .ts ./src",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:cbt",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:e2e": "stencil test --e2e --max-workers=1 ''",
    "test:e2e:watch": "stencil test --e2e --max-workers=8 '' --watch",
    "test:vrt": "concurrently -k -s \"first\" -n \"server,vrt\" \"yarn start:vrt-server\" \"wait-on -t 180000 http-get://localhost:61423 && ts-node --project 'tests/vrt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/vrt/config/jasmine.config.json'\"",
    "test:cbt": "concurrently -k -s \"first\" -n \"server,cbt\" \"yarn start:cbt-server\" \"wait-on -t 180000 http-get://localhost:61424 && ts-node --project 'tests/cbt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/cbt/config/jasmine.config.json'\"",
    "clean": "rm -rf ./node_modules && rm -rf ./yarn-error.log && rm -rf ./.stencil && rm -rf ./dist && rm -rf ./loader && rm -rf ./www"
  },
  "devDependencies": {
    "@porsche-design-system/scss-utils": "1.0.1",
    "@porsche-design-system/utils": "0.0.0",
    "@porsche-ui/cross-browser-tester": "^1.0.2",
    "@porsche-ui/visual-regression-tester": "^1.0.0",
    "@stencil/angular-output-target": "^0.0.2",
    "@stencil/core": "~1.12.3",
    "@stencil/postcss": "^1.0.1",
    "@stencil/react-output-target": "^0.0.4",
    "@stencil/sass": "^1.3.1",
    "@types/autoprefixer": "^9.7.0",
    "@types/classnames": "^2.2.8",
    "@types/jest": "~24.9.0",
    "@types/json5": "^0.0.30",
    "@types/puppeteer": "^2.0.0",
    "@types/throttle-debounce": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "autoprefixer": "^9.7.5",
    "classnames": "^2.2.6",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "http-server": "^0.12.1",
    "jasmine": "^3.5.0",
    "jest": "~24.8.0",
    "jest-cli": "~24.8.0",
    "json5": "^2.1.2",
    "node-fetch": "^2.6.0",
    "puppeteer": "^2.1.1",
    "stylelint": "^13.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.16.0",
    "throttle-debounce": "^2.1.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.1"
  }
}
