{
  "name": "@porsche-design-system/js",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'vite'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 8575 -d ./dist/demo-app'",
    "build": "yarn clean:build && yarn build:components-manager-core && yarn build:components-manager-cli && yarn build:components-wrapper && yarn build:jsdom-polyfill && yarn build:partials && yarn build:styles && yarn build-app && yarn build:cleanEnvironment",
    "build-app": "yarn build-app:components && yarn build-app:assets && yarn build-app:shared && yarn build-app:imask && yarn build-app:componentsAngularReact && vite build",
    "build-app:components": "cp ./dist/components-wrapper/cjs/index.cjs ./public/index.js",
    "build-app:assets": "cp ../assets/projects/icons/dist/esm/index.js ./public/assets/icons.js",
    "build-app:imask": "cp ../../node_modules/imask/dist/imask.min.js ./public/assets/imask.min.js",
    "build-app:shared": "cp ../shared/dist/esm/data/table-data-sorting.js ./public/assets/table-data-sorting.js && cp ../shared/dist/esm/data/table-data-basic.js ./public/assets/table-data-basic.js && cp ../shared/dist/esm/data/table-data-advanced.js ./public/assets/table-data-advanced.js && cp ../shared/dist/esm/data/table-data-vrt.js ./public/assets/table-data-vrt.js && cp ../shared/dist/css/styles.css ./public/assets/styles.css",
    "build-app:componentsAngularReact": "yarn generateVRTPages",
    "build:components-manager-cli": "yarn --cwd ./projects/components-manager-cli build",
    "build:components-manager-core": "yarn --cwd ./projects/components-manager-core build",
    "build:components-wrapper:environment": "tsc --project tsconfig.json --module commonjs --moduleResolution node --verbatimModuleSyntax false",
    "build:components-wrapper:webpack": "PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} webpack --config ./projects/components-wrapper/webpack.config.cjs",
    "build:components-wrapper": "yarn build:components-wrapper:environment && yarn build:components-wrapper:webpack && yarn build:components-wrapper:cm && yarn build:components-wrapper:replaceCdnBaseUrlDynamicPlaceholder && yarn build:components-wrapper:generateChunksManifest",
    "build:components-wrapper:cm": "PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} cm build && PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} IIFE_BUILD=1 cm build && PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} ESM_BUILD=1 cm build && cp ./dist/components-wrapper/cjs/index.cjs ./dist/components-wrapper/index.js && mv ./dist/components-wrapper/index.d.ts ./dist/components-wrapper/esm/index.d.ts",
    "build:components-wrapper:replaceCdnBaseUrlDynamicPlaceholder": "tsx scripts/replaceCdnBaseUrlDynamicPlaceholder.ts",
    "build:components-wrapper:generateChunksManifest": "tsx scripts/generateChunksManifest.ts",
    "build:cleanEnvironment": "rm -f ../../cdn.config.js && rm -rf ./projects/components-wrapper/environment.js",
    "build-prod": "PORSCHE_DESIGN_SYSTEM_DEV=0 yarn build",
    "build:jsdom-polyfill": "yarn --cwd ./projects/jsdom-polyfill build",
    "build:partials": "yarn --cwd ./projects/partials build",
    "build:styles": "TARGET=./dist/components-wrapper/styles && rm -rf $TARGET && cp -r ../utilities/projects/utilities/dist $TARGET",
    "generateVRTPages": "tsx scripts/generateVRTPages.ts",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:smoke",
    "test:unit": "yarn test:unit:components-manager-cli && yarn test:unit:components-manager-core && yarn test:unit:components-js && yarn test:unit:jsdom-polyfill && yarn test:unit:partials",
    "test:unit:components-manager-cli": "yarn --cwd ./projects/components-manager-cli test:unit",
    "test:unit:components-manager-core": "yarn --cwd ./projects/components-manager-core test:unit",
    "test:unit:components-js": "vitest --config tests/unit/config/vitest.config.ts",
    "test:unit:jsdom-polyfill": "yarn --cwd ./projects/jsdom-polyfill test:unit",
    "test:unit:partials": "yarn --cwd ./projects/partials test:unit",
    "test:e2e": "playwright test --config=tests/e2e/config/playwright.config.ts",
    "test:e2e:chrome": "yarn test:e2e --project=chrome",
    "test:e2e:chrome:1/2": "yarn test:e2e:chrome --shard=1/2",
    "test:e2e:chrome:2/2": "yarn test:e2e:chrome --shard=2/2",
    "test:e2e:firefox": "yarn test:e2e --project=firefox",
    "test:e2e:firefox:1/2": "yarn test:e2e:firefox --shard=1/2",
    "test:e2e:firefox:2/2": "yarn test:e2e:firefox --shard=2/2",
    "test:e2e:safari": "yarn test:e2e --project=safari",
    "test:e2e:safari:1/2": "yarn test:e2e:safari --shard=1/2",
    "test:e2e:safari:2/2": "yarn test:e2e:safari --shard=2/2",
    "test:a11y": "playwright test --config=tests/a11y/config/playwright.config.ts",
    "test:vrt": "playwright test --config=tests/vrt/config/playwright.config.ts",
    "test:vrt:chrome": "yarn test:vrt --project=chrome",
    "test:vrt:chrome:1/4": "yarn test:vrt:chrome --shard=1/4",
    "test:vrt:chrome:2/4": "yarn test:vrt:chrome --shard=2/4",
    "test:vrt:chrome:3/4": "yarn test:vrt:chrome --shard=3/4",
    "test:vrt:chrome:4/4": "yarn test:vrt:chrome --shard=4/4",
    "test:vrt:safari": "yarn test:vrt --project=safari",
    "posttest:vrt": "tsx tests/vrt/scripts/adjustRegressionFilenames.ts",
    "test:smoke": "yarn test:smoke:unit && yarn test:smoke:e2e",
    "test:smoke:unit": "vitest --config tests/smoke/unit/config/vitest.config.ts",
    "test:smoke:e2e": "playwright test --config=tests/smoke/e2e/config/playwright.config.ts",
    "clean:build": "yarn clean:app:build && yarn clean:components-wrapper:build && yarn clean:components-manager-core:build && yarn clean:components-manager-cli:build && yarn clean:jsdom-polyfill:build && yarn clean:partials:build",
    "clean:app:build": "rm -rf ./dist/demo-app",
    "clean:components-manager-cli:build": "yarn --cwd ./projects/components-manager-cli clean:build",
    "clean:components-manager-core:build": "yarn --cwd ./projects/components-manager-core clean:build",
    "clean:components-wrapper:build": "rm -rf ./dist",
    "clean:jsdom-polyfill:build": "yarn --cwd ./projects/jsdom-polyfill clean:build",
    "clean:partials:build": "yarn --cwd ./projects/partials clean:build"
  },
  "dependencies": {
    "@porsche-design-system/assets": "5.0.2",
    "@porsche-design-system/components": "3.16.0-rc.1",
    "@porsche-design-system/components-js": "3.16.0-rc.1",
    "@porsche-design-system/components-manager-cli": "0.0.0",
    "@porsche-design-system/partials": "0.0.0",
    "imask": "^7.5.0"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "^0.15.1",
    "@playwright/test": "1.42.1",
    "@porsche-design-system/shared": "0.0.0",
    "change-case": "^5.4.4",
    "concurrently": "^8.2.2",
    "devtools-protocol": "^0.0.1304228",
    "globby": "^14.0.1",
    "jsdom": "^24.0.0",
    "local-web-server": "^5.3.3",
    "mime": "^4.0.1",
    "pdf-to-png-converter": "^3.2.0",
    "sass": "^1.74.1",
    "terser-webpack-plugin": "^5.3.10",
    "tsx": "^4.7.2",
    "typescript": "~5.4.4",
    "vite": "^5.2.8",
    "webpack": "^5.91.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
