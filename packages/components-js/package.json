{
  "name": "@porsche-design-system/js",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,dummyassets,app' 'serve-cdn' 'serve-dummyassets' 'vite'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,dummyassets,app' 'serve-cdn' 'serve-dummyassets' 'ws --spa index.html -p 8575 -d ./dist/demo-app'",
    "build": "npm run clean:build && npm run build:components-manager-core && npm run build:components-manager-cli && npm run build:components-wrapper && npm run build:jsdom-polyfill && npm run build:partials && npm run build:styles && npm run build:ag-grid && npm run build:tailwindcss && npm run build-app && npm run build:cleanEnvironment",
    "build-app": "npm run build-app:components && npm run build-app:shared && npm run build-app:imask && npm run build-app:componentsAngularReact && vite build",
    "build-app:components": "cp ./dist/components-wrapper/cjs/index.cjs ./public/index.js",
    "build-app:imask": "cp ../../node_modules/imask/dist/imask.min.js ./public/assets/imask.min.js",
    "build-app:shared": "cp ../shared/dist/esm/data/table-data-sorting.js ./public/assets/table-data-sorting.js && cp ../shared/dist/esm/data/table-data-basic.js ./public/assets/table-data-basic.js && cp ../shared/dist/esm/data/table-data-advanced.js ./public/assets/table-data-advanced.js && cp ../shared/dist/esm/data/table-data-vrt.js ./public/assets/table-data-vrt.js && cp ../shared/dist/css/styles.css ./public/assets/styles.css",
    "build-app:componentsAngularReact": "npm run generateVRTPages",
    "build:components-manager-cli": "npm run build --workspace=@porsche-design-system/components-manager-cli",
    "build:components-manager-core": "npm run build --workspace=@porsche-design-system/components-manager-core",
    "build:components-wrapper:environment": "tsc --project tsconfig.json --module commonjs --moduleResolution node --verbatimModuleSyntax false",
    "build:components-wrapper:webpack": "PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} webpack --config ./projects/components-wrapper/webpack.config.cjs",
    "build:components-wrapper": "npm run build:components-wrapper:environment && npm run build:components-wrapper:webpack && npm run build:components-wrapper:cm && npm run build:components-wrapper:replaceCdnBaseUrlDynamicPlaceholder && npm run build:components-wrapper:generateChunksManifest",
    "build:components-wrapper:cm": "PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} cm build && PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} IIFE_BUILD=1 cm build && PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} ESM_BUILD=1 cm build && cp ./dist/components-wrapper/cjs/index.cjs ./dist/components-wrapper/index.js && mv ./dist/components-wrapper/index.d.ts ./dist/components-wrapper/esm/index.d.ts",
    "build:components-wrapper:replaceCdnBaseUrlDynamicPlaceholder": "tsx scripts/replaceCdnBaseUrlDynamicPlaceholder.ts",
    "build:components-wrapper:generateChunksManifest": "tsx scripts/generateChunksManifest.ts",
    "build:cleanEnvironment": "rm -f ../../cdn.config.js && rm -rf ./projects/components-wrapper/environment.js",
    "build-prod": "PORSCHE_DESIGN_SYSTEM_DEV=0 npm run build",
    "build:jsdom-polyfill": "npm run build --workspace=@porsche-design-system/jsdom-polyfill",
    "build:partials": "npm run build --workspace=@porsche-design-system/partials",
    "build:styles": "TARGET=./dist/components-wrapper/styles && rm -rf $TARGET && cp -r ../utilities/projects/utilities/dist $TARGET",
    "build:ag-grid": "TARGET=./dist/components-wrapper/ag-grid && rm -rf $TARGET && cp -r ../utilities/projects/ag-grid/dist $TARGET",
    "build:tailwindcss": "TARGET=./dist/components-wrapper/tailwindcss && rm -rf $TARGET && cp -r ../styles/projects/tailwindcss/dist $TARGET",
    "generateVRTPages": "tsx scripts/generateVRTPages.ts",
    "test": "npm run test:unit && npm run test:e2e && npm run test:vrt && npm run test:smoke",
    "test:unit": "npm run test:unit:components-manager-cli && npm run test:unit:components-manager-core && npm run test:unit:components-js && npm run test:unit:jsdom-polyfill && npm run test:unit:partials",
    "test:unit:components-manager-cli": "npm run test:unit --workspace=@porsche-design-system/components-manager-cli",
    "test:unit:components-manager-core": "npm run test:unit --workspace=@porsche-design-system/components-manager-core",
    "test:unit:components-js": "vitest --config tests/unit/config/vitest.config.ts",
    "test:unit:jsdom-polyfill": "npm run test:unit --workspace=@porsche-design-system/jsdom-polyfill",
    "test:unit:partials": "npm run test:unit --workspace=@porsche-design-system/partials",
    "test:e2e": "playwright test --config=tests/e2e/config/playwright.config.ts",
    "test:e2e:chrome": "npm run test:e2e --project=chrome",
    "test:e2e:chrome:1/4": "npm run test:e2e:chrome --shard=1/4",
    "test:e2e:chrome:2/4": "npm run test:e2e:chrome --shard=2/4",
    "test:e2e:chrome:3/4": "npm run test:e2e:chrome --shard=3/4",
    "test:e2e:chrome:4/4": "npm run test:e2e:chrome --shard=4/4",
    "test:e2e:firefox": "npm run test:e2e --project=firefox",
    "test:e2e:firefox:1/4": "npm run test:e2e:firefox --shard=1/4",
    "test:e2e:firefox:2/4": "npm run test:e2e:firefox --shard=2/4",
    "test:e2e:firefox:3/4": "npm run test:e2e:firefox --shard=3/4",
    "test:e2e:firefox:4/4": "npm run test:e2e:firefox --shard=4/4",
    "test:e2e:safari": "npm run test:e2e --project=safari",
    "test:e2e:safari:1/4": "npm run test:e2e:safari --shard=1/4",
    "test:e2e:safari:2/4": "npm run test:e2e:safari --shard=2/4",
    "test:e2e:safari:3/4": "npm run test:e2e:safari --shard=3/4",
    "test:e2e:safari:4/4": "npm run test:e2e:safari --shard=4/4",
    "test:a11y": "playwright test --config=tests/a11y/config/playwright.config.ts",
    "test:vrt": "playwright test --config=tests/vrt/config/playwright.config.ts",
    "test:vrt:chrome": "npm run test:vrt --project=chrome",
    "test:vrt:chrome:1/4": "npm run test:vrt:chrome --shard=1/4",
    "test:vrt:chrome:2/4": "npm run test:vrt:chrome --shard=2/4",
    "test:vrt:chrome:3/4": "npm run test:vrt:chrome --shard=3/4",
    "test:vrt:chrome:4/4": "npm run test:vrt:chrome --shard=4/4",
    "test:vrt:safari": "npm run test:vrt --project=safari",
    "test:vrt:safari:1/2": "npm run test:vrt:safari --shard=1/2",
    "test:vrt:safari:2/2": "npm run test:vrt:safari --shard=2/2",
    "posttest:vrt": "npm run test:vrt:prepare-regression-snapshots",
    "posttest:vrt:chrome": "npm run test:vrt:prepare-regression-snapshots",
    "posttest:vrt:chrome:1/4": "npm run test:vrt:prepare-regression-snapshots",
    "posttest:vrt:chrome:2/4": "npm run test:vrt:prepare-regression-snapshots",
    "posttest:vrt:chrome:3/4": "npm run test:vrt:prepare-regression-snapshots",
    "posttest:vrt:chrome:4/4": "npm run test:vrt:prepare-regression-snapshots",
    "posttest:vrt:safari": "npm run test:vrt:prepare-regression-snapshots",
    "test:vrt:prepare-regression-snapshots": "tsx tests/vrt/scripts/prepareRegressionSnapshots.ts",
    "test:vrt:update-regression-snapshots": "tsx tests/vrt/scripts/updateRegressionSnapshots.ts",
    "test:smoke": "npm run test:smoke:unit && npm run test:smoke:e2e",
    "test:smoke:unit": "vitest --config tests/smoke/unit/config/vitest.config.ts",
    "test:smoke:e2e": "playwright test --config=tests/smoke/e2e/config/playwright.config.ts",
    "clean:build": "npm run clean:app:build && npm run clean:components-wrapper:build && npm run clean:components-manager-core:build && npm run clean:components-manager-cli:build && npm run clean:jsdom-polyfill:build && npm run clean:partials:build",
    "clean:app:build": "rm -rf ./dist/demo-app",
    "clean:components-manager-cli:build": "npm run clean:build --workspace=@porsche-design-system/components-manager-cli",
    "clean:components-manager-core:build": "npm run clean:build --workspace=@porsche-design-system/components-manager-core",
    "clean:components-wrapper:build": "rm -rf ./dist",
    "clean:jsdom-polyfill:build": "npm run clean:build --workspace=@porsche-design-system/jsdom-polyfill",
    "clean:partials:build": "npm run clean:build --workspace=@porsche-design-system/partials"
  },
  "dependencies": {
    "@porsche-design-system/assets": "5.0.2",
    "@porsche-design-system/components": "3.29.0-rc.4",
    "@porsche-design-system/components-js": "3.29.0-rc.4",
    "@porsche-design-system/components-manager-cli": "0.0.0",
    "@porsche-design-system/partials": "0.0.0",
    "imask": "^7.6.1"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "0.17.3",
    "@porsche-design-system/shared": "0.0.0",
    "ag-grid-community": "34.0.2",
    "ag-grid-enterprise": "34.0.2",
    "devtools-protocol": "^0.0.1488636",
    "jsdom": "^24.1.0",
    "local-web-server": "^5.4.0",
    "mime": "^4.0.7",
    "terser-webpack-plugin": "^5.3.14",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "globby-legacy": "npm:globby@^11.0.4"
  },
  "peerDependencies": {
    "@playwright/test": "*",
    "ag-grid-enterprise": ">= 33.0.0 <35.0.0",
    "ag-grid-react": ">= 33.0.0 <35.0.0",
    "change-case": "*",
    "concurrently": "*",
    "globby": "*",
    "sass": "*",
    "tailwindcss": "*",
    "tsx": "*",
    "typescript": "*",
    "webpack": "*",
    "vite": "*",
    "vitest": "*",
    "gzip-size": "*",
    "postcss": "*",
    "@tailwindcss/vite": "*",
    "@tailwindcss/postcss": "*"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
