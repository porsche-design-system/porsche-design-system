{
  "name": "@porsche-design-system/components-demo",
  "version": "1.5.2",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Olivia Pala <olivia.pala@udg.de>",
    "Christoph Stickel <net.christoph.stickel@mhp.com>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Melanie Kolar <melanie.kolar@udg.de>",
    "Bernd Hacker <bernd.hacker@mhp.com"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "description": "Porsche Design System Web Components JS",
  "scripts": {
    "start": "rm -rf ./dist && PORSCHE_DESIGN_SYSTEM_DEV=1 yarn build && yarn start:prepare && yarn start:servers",
    "start:prepare": "mkdir -p ./dist/vrt/ && cp ../../node_modules/@porsche-design-system/utils/dist/visual-regression-test.css ./dist/vrt",
    "start:servers": "concurrently -k -s \"first\" -n \"cdn,server\" \"node dist/cdn/start-cdn-components.js\" \"http-server -p 8575 --cors\"",
    "build": "rm -rf ./dist && yarn build:webpack && yarn build:js && yarn build:cdn",
    "build:webpack": "PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} webpack",
    "build:js": "PORSCHE_DESIGN_SYSTEM_DEV=${PORSCHE_DESIGN_SYSTEM_DEV:-1} pwcm build",
    "build:cdn": "tsc --build tsconfig.cdn.json && chmod +x dist/cdn/start-cdn-components.js && cp cdn/package.json dist/cdn/",
    "build-prod": "PORSCHE_DESIGN_SYSTEM_DEV=0 yarn build",
    "test": "yarn test:vrt",
    "test:vrt": "concurrently -k -s \"first\" -n \"server,vrt\" \"yarn start\" \"wait-on -t 240000 http-get://localhost:8575 && ts-node --project 'tests/vrt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/vrt/config/jasmine.config.json'\"",
    "clean": "rm -rf 'node_modules' && rm -rf 'yarn-error.log' && rm -rf 'dist'"
  },
  "dependencies": {
    "@porsche-design-system/web-components-manager": "0.2.5"
  },
  "devDependencies": {
    "@types/http-server": "^0.10.0",
    "@types/puppeteer": "^3.0.0",
    "@porsche-design-system/assets": "1.0.0",
    "@porsche-design-system/cdn-local": "0.0.0",
    "@porsche-design-system/utilities": "1.0.6",
    "@porsche-design-system/web-components-manager-cli": "0.2.5",
    "@porsche-design-system/visual-regression-tester": "^2.0.1",
    "@porsche-design-system/utils": "0.0.0",
    "concurrently": "^5.2.0",
    "http-server": "^0.12.3",
    "jasmine": "^3.5.0",
    "puppeteer": "~3.0.4",
    "ts-node": "^8.10.1",
    "wait-on": "^5.0.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  }
}
