{
  "name": "@porsche-design-system/utilities",
  "version": "1.0.0",
  "scope": "@porsche-design-system",
  "main": "dist/js/umd/index.js",
  "module": "dist/js/module/index.js",
  "types": "dist/js/types/index.d.ts",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Stephan Schröter <stephan.schroeter@mhp.com>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "description": "Porsche Design System Utilities",
  "files": [
    "dist/"
  ],
  "keywords": [
    "porsche",
    "design",
    "system",
    "scss",
    "js",
    "utils",
    "utilities",
    "variables",
    "functions",
    "mixins"
  ],
  "homepage": "https://designsystem.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "publishConfig": {
    "@porsche-design-system:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
  },
  "scripts": {
    "start:vrt-server": "yarn build && yarn --cwd src/vrt-app build && http-server src/vrt-app/build -p 61423 -P http://localhost:61423",
    "build": "rm -rf ./dist && yarn build:lib:module && yarn build:lib:umd",
    "build:lib:module": "tsc --build ./tsconfig.lib.module.json",
    "build:lib:umd": "tsc --build ./tsconfig.lib.umd.json",
    "clean": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "test": "yarn test:unit && yarn test:vrt",
    "test:unit": "jest -c='tests/unit/config/jest.config.js'",
    "test:vrt": "concurrently -k -s \"first\" -n \"server,vrt\" \"yarn start:vrt-server\" \"wait-on -t 180000 http-get://localhost:61423 && ts-node --project 'tests/vrt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/vrt/config/jasmine.config.json'\""
  },
  "devDependencies": {
    "@porsche-design-system/visual-regression-tester": "^2.0.0",
    "@types/jest": "^25.2.3",
    "jasmine": "^3.5.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.2"
  }
}
