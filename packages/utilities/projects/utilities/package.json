{
  "name": "@porsche-design-system/styles",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/esm/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean:build && npm run build:generateScss && npm run build:bundle",
    "build:generateScss": "tsx scripts/generateScss.ts",
    "build:bundle": "rollup -c rollup.config.js --bundleConfigAsCjs",
    "generateVanillaExtractTestStyles": "rollup -c rollup-test-ve.config.js --bundleConfigAsCjs",
    "test": "npm run test:unit",
    "test:unit": "npm run generateVanillaExtractTestStyles && vitest --config tests/unit/config/vitest.config.ts",
    "clean:build": "rm -rf ./dist && rm -rf ./src/scss/lib"
  },
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0",
    "@types/styled-components": "^5.1.34",
    "react-jss": "^10.10.0",
    "styled-components": "^6.1.19"
  },
  "peerDependencies": {
    "@types/madge": "*",
    "change-case": "*",
    "prettier": "*",
    "madge": "*",
    "sass": "*",
    "tsx": "*",
    "typescript": "*",
    "@vanilla-extract/css": "*",
    "@vanilla-extract/vite-plugin": "*",
    "@vanilla-extract/rollup-plugin": "*"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
