{
  "name": "@porsche-design-system/utilities",
  "version": "4.0.0",
  "scope": "@porsche-design-system",
  "main": "dist/js/index.js",
  "module": "dist/js/esm/index.js",
  "types": "dist/js/types/index.d.ts",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Bernd Hacker <bernd.hacker@mhp.com>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "description": "Porsche Design System Utilities",
  "files": [
    "dist/scss",
    "dist/js",
    "scss.scss"
  ],
  "keywords": [
    "porsche",
    "design",
    "system",
    "scss",
    "js",
    "utils",
    "utilities",
    "variables",
    "functions",
    "mixins"
  ],
  "homepage": "https://designsystem.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "publishConfig": {
    "@porsche-design-system:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
  },
  "scripts": {
    "build": "yarn clean:build && yarn build:buildTypography && yarn build:bundleLib && yarn build:copyScss && yarn build:createGlobalCSS",
    "build:buildTypography": "ts-node --project 'tsconfig.node.json' 'scripts/buildTypography.ts'",
    "build:bundleLib": "rollup -c rollup.config.js",
    "build:copyScss": "echo '@import \"dist/scss/index\";' > scss.scss && cp -r './src/scss/.' './dist/scss'",
    "build:createGlobalCSS": "ts-node --project 'tsconfig.node.json' 'scripts/createGlobalCSS.ts'",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist && rm -rf ./scss.scss"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "rollup": "^2.33.3",
    "tslib": "^2.0.1",
    "typescript": "~4.1.3"
  },
  "dependencies": {
    "csstype": "^3.0.5"
  }
}
