{
  "name": "@porsche-design-system/utilities-v2",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/esm/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean:build && yarn build:generateScss && yarn build:bundle",
    "build:generateScss": "tsx scripts/generateScss.ts",
    "build:bundle": "rollup -c rollup.config.js --bundleConfigAsCjs",
    "test": "yarn test:unit",
    "test:unit": "vitest --config tests/unit/config/vitest.config.ts",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist && rm -rf ./src/scss/lib"
  },
  "dependencies": {},
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0",
    "@types/madge": "^5.0.3",
    "@types/styled-components": "^5.1.34",
    "change-case": "^5.4.3",
    "madge": "^6.1.0",
    "prettier": "^3.2.5",
    "react-jss": "^10.10.0",
    "sass": "^1.71.1",
    "styled-components": "^5.3.11",
    "tsx": "^4.7.1",
    "typescript": "~5.3.3"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
