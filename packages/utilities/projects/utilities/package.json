{
  "name": "@porsche-design-system/utilities",
  "version": "1.0.0",
  "scope": "@porsche-design-system",
  "main": "dist/js/umd/index.js",
  "module": "dist/js/module/index.js",
  "types": "dist/js/types/index.d.ts",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Bernd Hacker <bernd.hacker@mhp.com>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "description": "Porsche Design System Utilities",
  "files": [
    "dist/",
    "scss.scss"
  ],
  "keywords": [
    "porsche",
    "design",
    "system",
    "scss",
    "js",
    "utils",
    "utilities",
    "variables",
    "functions",
    "mixins"
  ],
  "homepage": "https://designsystem.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "publishConfig": {
    "@porsche-design-system:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
  },
  "scripts": {
    "build": "yarn clean && yarn build:style && yarn build:lib && yarn build:scss",
    "build:lib": "yarn build:lib:module && yarn build:lib:umd",
    "build:lib:module": "tsc --build ./tsconfig.lib.module.json",
    "build:lib:umd": "tsc --build ./tsconfig.lib.umd.json",
    "build:scss": "echo '@import \"dist/scss/index\";' > scss.scss && mkdir -p './dist' && cp -r './src/scss/.' './dist/scss'",
    "build:style": "ts-node --project './tsconfig.json' './scripts/build.ts'",
    "clean": "rm -rf ./node_modules && rm -rf ./yarn-error.log && rm -rf ./dist && rm -rf ./scss.scss"
  },
  "devDependencies": {
    "typescript": "~3.9.6"
  }
}
