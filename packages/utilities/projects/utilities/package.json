  "scope": "@porsche-design-system",
  "main": "dist/js/index.js",
  "module": "dist/js/esm/index.js",
  "types": "dist/js/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean:build && yarn build:generateJsBreakpoints && yarn build:generateScss && yarn build:bundle",
    "build:generateJsBreakpoints": "ts-node scripts/generateJsBreakpoints.ts",
    "build:generateScss": "ts-node scripts/generateScss.ts",
    "build:bundle": "rollup -c rollup.config.js",
    "test": "yarn test:unit",
    "test:unit": "jest --colors -c tests/unit/config/jest.config.js",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist && rm -rf ./src/scss/lib"
  },
  "dependencies": {},
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/madge": "^5.0.0",
    "@types/styled-components": "^5.1.26",
    "change-case": "^4.1.2",
    "jest": "^29.0.3",
    "madge": "^5.0.1",
    "prettier": "^2.7.1",
    "react-jss": "^10.9.2",
    "rollup": "^2.79.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "sass": "^1.55.0",
    "styled-components": "^5.3.5",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.3"
  }
