{
  "name": "@porsche-design-system/components",
  "version": "2.0.0-alpha.9",
  "private": true,
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,stencil' 'serve-cdn' 'yarn build:iconTypes && PDS_IS_STAGING=1 stencil build --watch --serve'",
    "build": "yarn build:iconTypes && yarn build:stencil && yarn build:readmes && yarn build:tags",
    "build:stencil": "PDS_IS_STAGING=${PDS_IS_STAGING:-1} stencil build --docs",
    "postbuild:stencil": "yarn build:type && yarn build:copyCjsBuildToComponentsReact",
    "build:iconTypes": "ts-node --project './tsconfig.node.json' './scripts/generateIconTypes.ts'",
    "build:type": "yarn build:type:addExport && yarn build:type:bundle && yarn build:type:updateWrappers",
    "build:type:addExport": "ts-node --project './tsconfig.node.json' './scripts/addMissingTypeExport.ts'",
    "build:type:bundle": "dts-bundle-generator -o ./dist/types/bundle.d.ts ./dist/types/index.d.ts --inline-declare-global --external-types --no-banner",
    "build:type:updateWrappers": "ts-node --project './tsconfig.node.json' 'scripts/updateWrappers.ts'",
    "build:readmes": "ts-node --project './tsconfig.node.json' './scripts/cleanReadmes.ts'",
    "build:tags": "ts-node --project './tsconfig.node.json' './scripts/generateComponentTags.ts'",
    "build:copyCjsBuildToComponentsReact": "rm -rf ../components-react/projects/jsdom-polyfill/src/lib && cp -r dist/cjs ../components-react/projects/jsdom-polyfill/src/lib",
    "build-prod": "PDS_IS_STAGING=0 yarn build",
    "lint": "yarn lint:scss && yarn lint:ts",
    "lint:scss": "stylelint './src/**/*.scss'",
    "lint:ts": "eslint -c .eslintrc.js './src/**/*.{ts,tsx}'",
    "lint:ts:fix": "eslint -c .eslintrc.js './src/**/*.{ts,tsx}' --fix",
    "test": "yarn test:unit",
    "test:unit": "jest -c tests/unit/config/jest.config.js",
    "test:unit:watch": "yarn test:unit --watch",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./.stencil && rm -rf ./dist && rm -rf ./loader && rm -rf ./www"
  },
  "devDependencies": {
    "@porsche-design-system/assets": "3.1.0",
    "@porsche-design-system/partials": "2.2.0",
    "@porsche-design-system/utilities": "3.0.0",
    "@stencil/angular-output-target": "https://github.com/porscheui/stencil-ds-output-targets/releases/download/angular-prefixing/stencil-angular-output-target-0.0.4.tgz",
    "@stencil/core": "~2.3.0",
    "@stencil/postcss": "^1.0.1",
    "@stencil/react-output-target": "https://github.com/porscheui/stencil-ds-output-targets/releases/download/angular-prefixing/stencil-react-output-target-0.0.6.tgz",
    "@stencil/sass": "^1.4.0",
    "@types/autoprefixer": "^9.7.2",
    "@types/expect-puppeteer": "^4.4.5",
    "@types/jest": "^26.0.15",
    "@types/puppeteer": "^5.4.0",
    "@types/throttle-debounce": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "autoprefixer": "^10.0.2",
    "change-case": "^4.1.1",
    "concurrently": "^5.3.0",
    "dts-bundle-generator": "^5.5.0",
    "eslint": "^7.13.0",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-react": "^7.21.5",
    "globby": "^11.0.1",
    "http-server": "^0.12.3",
    "isomorphic-fetch": "^3.0.0",
    "jasmine": "^3.6.3",
    "jest": "^26.6.3",
    "puppeteer": "~5.5.0",
    "rollup-plugin-modify": "^3.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "throttle-debounce": "^3.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "~4.1.2",
    "wait-on": "^5.2.0"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "files": [
    "dist/"
  ]
}
