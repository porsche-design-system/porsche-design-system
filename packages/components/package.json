{
  "name": "@porsche-design-system/components",
  "version": "2.1.0-beta.0",
  "private": true,
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,stencil' 'serve-cdn' 'yarn build:generateIconTypes && PDS_IS_STAGING=1 stencil build --watch --serve'",
    "build": "yarn build:generateIconTypes && yarn build:stencil && yarn build:cleanReadmes",
    "prebuild": "yarn clean:build",
    "build:stencil": "PDS_IS_STAGING=${PDS_IS_STAGING:-1} stencil build --docs",
    "postbuild:stencil": "yarn build:type && yarn build:generateWrappers && yarn build:copyCjsBuildToComponentsReact && yarn build:clean",
    "build:generateIconTypes": "ts-node --project './tsconfig.node.json' './scripts/generateIconTypes.ts'",
    "build:generateWrappers": "ts-node --project './tsconfig.node.json' './scripts/generateWrappers.ts'",
    "build:type": "yarn build:type:addMissingTypeExport && yarn build:type:bundle",
    "build:type:addMissingTypeExport": "ts-node --project './tsconfig.node.json' './scripts/addMissingTypeExport.ts'",
    "build:type:bundle": "dts-bundle-generator -o ./dist/types/bundle.d.ts ./dist/types/index.d.ts --inline-declare-global --external-types --no-banner",
    "build:cleanReadmes": "ts-node --project './tsconfig.node.json' './scripts/cleanReadmes.ts'",
    "build:copyCjsBuildToComponentsReact": "rm -rf ../components-react/projects/jsdom-polyfill/src/lib && cp -r dist/cjs ../components-react/projects/jsdom-polyfill/src/lib",
    "build:clean": "yarn build:clean:loader && yarn build:clean:deletePolyfills && yarn build:clean:deleteGeneratedLoader",
    "build:clean:loader": "ts-node  --project './tsconfig.node.json' './scripts/cleanupLoader.ts'",
    "build:clean:deletePolyfills": "rm -rf ./dist/esm/polyfills",
    "build:clean:deleteGeneratedLoader": "rm -rf ./dist/loader",
    "build-prod": "PDS_IS_STAGING=0 yarn build",
    "lint": "yarn lint:scss && yarn lint:ts",
    "lint:scss": "stylelint './src/**/*.scss'",
    "lint:ts": "eslint -c .eslintrc.js './src/**/*.{ts,tsx}'",
    "lint:ts:fix": "eslint -c .eslintrc.js './src/**/*.{ts,tsx}' --fix",
    "test": "yarn test:unit",
    "test:unit": "jest -c tests/unit/config/jest.config.js",
    "test:unit:watch": "yarn test:unit --watch",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./.stencil && rm -rf ./dist && rm -rf ./www"
  },
  "devDependencies": {
    "@porsche-design-system/icons": "0.0.0",
    "@porsche-design-system/marque": "0.0.0",
    "@porsche-design-system/shared": "0.0.0",
    "@porsche-design-system/utilities": "4.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@stencil/core": "~2.5.2",
    "@stencil/postcss": "^2.0.0",
    "@stencil/sass": "^1.4.1",
    "@types/expect-puppeteer": "^4.4.5",
    "@types/jest": "^26.0.23",
    "@types/throttle-debounce": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "autoprefixer": "^10.2.5",
    "change-case": "^4.1.2",
    "concurrently": "^6.0.2",
    "construct-style-sheets-polyfill": "^2.4.16",
    "dts-bundle-generator": "^5.8.0",
    "eslint": "^7.23.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.23.2",
    "globby": "^11.0.3",
    "http-server": "^0.12.3",
    "jasmine": "^3.7.0",
    "jest": "^26.6.3",
    "jss": "^10.5.1",
    "jss-plugin-sort-css-media-queries": "^1.0.1-beta.0",
    "jss-preset-default": "^10.5.1",
    "rollup-plugin-modify": "^3.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-scss": "^3.19.0",
    "throttle-debounce": "^3.0.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "~4.2.4",
    "whatwg-fetch": "^3.6.2"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js"
}
