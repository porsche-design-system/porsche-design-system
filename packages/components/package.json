{
  "name": "@porsche-design-system/components",
  "version": "3.5.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "patchStencilCore": "ts-node scripts/patchStencilCore.ts",
    "prestart": "yarn patchStencilCore && yarn prestart:prepareAriaTypes",
    "prestart:prepareAriaTypes": "ts-node scripts/prepareAriaTypes.ts",
    "start": "concurrently -k -s 'first' -n 'cdn,stencil' 'serve-cdn' 'PDS_IS_STAGING=1 stencil build --watch --serve --dev'",
    "prebuild": "yarn patchStencilCore && yarn clean:build && yarn prebuild:generateThemesObject && yarn prebuild:generateConstructorMap",
    "prebuild:generateThemesObject": "ts-node scripts/generateThemesObject.ts",
    "prebuild:generateConstructorMap": "ts-node scripts/generateConstructorMap.ts",
    "build": "PDS_IS_STAGING=${PDS_IS_STAGING:-1} stencil build --docs && yarn build:cleanReadmes && yarn build:addTableOfContents && yarn build:type && yarn build:wrappers && yarn build:copyCjsBuildToComponentsJs && yarn build:clean",
    "build:wrappers": "yarn build:wrappers:generateWrappers && yarn build:wrappers:generateDSRComponents && yarn build:wrappers:bundleStyles && yarn build:wrappers:bundleUtils",
    "build:wrappers:generateWrappers": "ts-node scripts/generateWrappers.ts",
    "build:wrappers:generateDSRComponents": "ts-node scripts/generateDSRComponents.ts",
    "build:wrappers:bundleStyles": "rm -rf ./src/styles-entry.ts && PDS_IS_STAGING=${PDS_IS_STAGING:-1} rollup -c rollup-styles.config.js --bundleConfigAsCjs",
    "build:wrappers:bundleUtils": "rm -rf ./src/utils-entry.ts && PDS_IS_STAGING=${PDS_IS_STAGING:-1} rollup -c rollup-utils.config.js --bundleConfigAsCjs",
    "build:type": "yarn build:type:addMissingTypeExport && yarn build:type:bundle",
    "build:type:addMissingTypeExport": "ts-node scripts/addMissingTypeExport.ts",
    "build:type:bundle": "dts-bundle-generator -o ./dist/types/bundle.d.ts ./dist/types/index.d.ts --inline-declare-global --external-types --no-banner",
    "build:cleanReadmes": "ts-node scripts/cleanReadmes.ts",
    "build:copyCjsBuildToComponentsJs": "TARGET=../components-js/projects/jsdom-polyfill/src/lib && rm -rf $TARGET && cp -r ./dist/cjs $TARGET",
    "build:addTableOfContents": "ts-node scripts/addTableOfContents.ts",
    "build:clean": "yarn build:clean:loader && yarn build:clean:componentsReady && yarn build:clean:deletePolyfills && yarn build:clean:deleteGeneratedLoader",
    "build:clean:loader": "ts-node scripts/cleanupLoader.ts",
    "build:clean:componentsReady": "ts-node scripts/cleanupComponentsReady.ts",
    "build:clean:deletePolyfills": "rm -rf ./dist/esm/polyfills",
    "build:clean:deleteGeneratedLoader": "rm -rf ./dist/loader",
    "build-prod": "PDS_IS_STAGING=0 yarn build",
    "lint": "eslint -c .eslintrc.js './src/**/*.{ts,tsx}'",
    "test": "yarn test:unit",
    "pretest:unit": "yarn prebuild:generateConstructorMap",
    "test:unit": "jest --colors -c tests/unit/config/jest.config.js",
    "test:unit:watch": "yarn test:unit --watch",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./.stencil && rm -rf ./dist && rm -rf ./www"
  },
  "dependencies": {
    "@porsche-design-system/icons": "0.0.0",
    "@porsche-design-system/marque": "0.0.0",
    "@porsche-design-system/shared": "0.0.0",
    "@porsche-design-system/utilities-v2": "0.0.0",
    "@splidejs/splide": "^4.1.4",
    "@stencil/core": "~4.0.1",
    "jss": "^10.10.0",
    "jss-plugin-sort-css-media-queries": "^1.0.1-beta.0",
    "jss-preset-default": "^10.10.0",
    "throttle-debounce": "^5.0.0"
  },
  "devDependencies": {
    "@porsche-design-system/assets": "5.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@types/react": "^18.2.14",
    "@types/throttle-debounce": "^5.0.0",
    "@types/tinycolor2": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "change-case": "^4.1.2",
    "concurrently": "^8.2.0",
    "construct-style-sheets-polyfill": "^3.1.0",
    "dts-bundle-generator": "^8.0.1",
    "eslint": "^8.44.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.31.11",
    "globby": "^11.0.4",
    "tinycolor2": "^1.6.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6",
    "whatwg-fetch": "^3.6.2"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "volta": {
    "extends": "../../package.json"
  }
}
