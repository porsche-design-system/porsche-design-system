{
  "name": "@porsche-design-system/components",
  "version": "3.26.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "patchStencilCore": "tsx scripts/patchStencilCore.ts",
    "patchStencilCompiler": "tsx scripts/patchStencilCompiler.ts",
    "prestart": "yarn patchStencilCore && yarn patchStencilCompiler && yarn prestart:prepareAriaTypes",
    "prestart:prepareAriaTypes": "tsx scripts/prepareAriaTypes.ts",
    "start": "concurrently -k -s 'first' -n 'cdn,stencil' 'serve-cdn' 'PDS_IS_STAGING=1 stencil build --watch --serve --dev'",
    "prebuild": "yarn patchStencilCore && yarn patchStencilCompiler && yarn clean:build && yarn prebuild:generateThemesObject && yarn prebuild:generateConstructorMap",
    "prebuild:generateThemesObject": "tsx scripts/generateThemesObject.ts",
    "prebuild:generateConstructorMap": "tsx scripts/generateConstructorMap.ts",
    "build": "PDS_IS_STAGING=${PDS_IS_STAGING:-1} stencil build --docs && yarn build:cleanReadmes && yarn build:addTableOfContents && yarn build:type && yarn build:wrappers && yarn build:copyCjsBuildToComponentsJs && yarn build:clean",
    "build:wrappers": "yarn build:wrappers:generateWrappers && yarn build:wrappers:generateDSRComponents && yarn build:wrappers:bundleStyles && yarn build:wrappers:bundleUtils",
    "build:wrappers:generateWrappers": "tsx scripts/generateWrappers.ts",
    "build:wrappers:generateDSRComponents": "tsx scripts/generateDSRComponents.ts",
    "build:wrappers:bundleStyles": "rm -rf ./src/styles-entry.ts && PDS_IS_STAGING=${PDS_IS_STAGING:-1} rollup -c rollup-styles.config.mjs",
    "build:wrappers:bundleUtils": "rm -rf ./src/utils-entry.ts && PDS_IS_STAGING=${PDS_IS_STAGING:-1} rollup -c rollup-utils.config.mjs",
    "build:type": "yarn build:type:addMissingTypeExport && yarn build:type:bundle",
    "build:type:addMissingTypeExport": "tsx scripts/addMissingTypeExport.ts",
    "build:type:bundle": "dts-bundle-generator -o ./dist/types/bundle.d.ts ./dist/types/index.d.ts --inline-declare-global --external-types --no-banner",
    "build:cleanReadmes": "tsx scripts/cleanReadmes.ts",
    "build:copyCjsBuildToComponentsJs": "TARGET=../components-js/projects/jsdom-polyfill/src/lib && rm -rf $TARGET && cp -r ./dist/cjs $TARGET",
    "build:addTableOfContents": "tsx scripts/addTableOfContents.ts",
    "build:clean": "yarn build:clean:loader && yarn build:clean:componentsReady && yarn build:clean:deletePolyfills && yarn build:clean:deleteGeneratedLoader",
    "build:clean:loader": "tsx scripts/cleanupLoader.ts",
    "build:clean:componentsReady": "tsx scripts/cleanupComponentsReady.ts",
    "build:clean:deletePolyfills": "rm -rf ./dist/esm/polyfills",
    "build:clean:deleteGeneratedLoader": "rm -rf ./dist/loader",
    "build-prod": "PDS_IS_STAGING=0 yarn build",
    "test": "yarn test:unit",
    "pretest:unit": "yarn prebuild:generateConstructorMap",
    "test:unit": "jest --colors -c tests/unit/config/jest.config.js",
    "clean:build": "rm -rf ./.stencil && rm -rf ./dist && rm -rf ./www"
  },
  "dependencies": {
    "@porsche-design-system/crest": "0.0.0",
    "@porsche-design-system/icons": "0.0.0",
    "@porsche-design-system/marque": "0.0.0",
    "@porsche-design-system/model-signatures": "0.0.0",
    "@porsche-design-system/shared": "0.0.0",
    "@porsche-design-system/styles": "0.0.0",
    "@splidejs/splide": "^4.1.4",
    "@floating-ui/dom": "^1.6.13",
    "@stencil/core": "~4.23.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.2",
    "change-case": "^5.4.4",
    "change-case-legacy": "npm:change-case@^4.1.2",
    "construct-style-sheets-polyfill": "^3.1.0",
    "dts-bundle-generator": "^9.5.1",
    "globby-legacy": "npm:globby@^11.0.4",
    "imask": "7.1.3"
  },
  "peerDependencies": {
    "@rollup/plugin-replace": "*",
    "concurrently": "*",
    "globby": "*",
    "jss": "*",
    "jss-plugin-sort-css-media-queries": "*",
    "jss-preset-default": "*",
    "tsx": "*",
    "typescript": "*"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "volta": {
    "extends": "../../package.json"
  }
}
