{
  "name": "@porsche-design-system/components",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,stencil' 'serve-cdn' 'yarn build:types && PDS_IS_STAGING=1 stencil build --watch --serve'",
    "build": "yarn build:types && PDS_IS_STAGING=${PDS_IS_STAGING:-1} stencil build --docs && yarn build:readme",
    "build:types": "ts-node --project './tsconfig.node.json' './scripts/types.ts'",
    "build:readme": "ts-node --project './tsconfig.node.json' './scripts/readme.ts'",
    "build-prod": "PDS_IS_STAGING=0 yarn build",
    "lint": "yarn lint:scss && yarn lint:ts",
    "lint:scss": "stylelint './src/**/*.scss'",
    "lint:ts": "eslint -c .eslintrc.js './src/**/*.{ts,tsx}'",
    "lint:ts:fix": "eslint -c .eslintrc.js './src/**/*.{ts,tsx}' --fix",
    "test": "yarn test:unit",
    "test:unit": "jest -c ./tests/unit/config/jest.config.js",
    "test:unit:watch": "yarn test:unit --watch",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./.stencil && rm -rf ./dist && rm -rf ./loader && rm -rf ./www"
  },
  "devDependencies": {
    "@porsche-design-system/assets": "1.1.0",
    "@porsche-design-system/utilities": "1.0.6",
    "@stencil/angular-output-target": "https://github.com/porscheui/stencil-ds-output-targets/releases/download/transformTagNameSupport/stencil-angular-output-target-0.0.2.tgz",
    "@stencil/core": "~1.14.0",
    "@stencil/postcss": "^1.0.1",
    "@stencil/react-output-target": "https://github.com/porscheui/stencil-ds-output-targets/releases/download/transformTagNameSupport/stencil-react-output-target-0.0.6.tgz",
    "@stencil/sass": "^1.3.2",
    "@types/autoprefixer": "^9.7.2",
    "@types/classnames": "^2.2.8",
    "@types/expect-puppeteer": "^4.4.3",
    "@types/jest": "~26.0.9",
    "@types/puppeteer": "^3.0.1",
    "@types/throttle-debounce": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "autoprefixer": "^9.8.6",
    "change-case": "^4.1.1",
    "classnames": "^2.2.6",
    "concurrently": "^5.2.0",
    "eslint": "^7.6.0",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-react": "^7.20.5",
    "globby": "^11.0.1",
    "http-server": "^0.12.3",
    "isomorphic-fetch": "^2.2.1",
    "jasmine": "^3.6.1",
    "jest": "~26.2.2",
    "puppeteer": "~5.2.1",
    "rollup-plugin-replace": "^2.2.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "throttle-debounce": "^2.2.1",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "~3.9.7",
    "wait-on": "^5.1.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "files": [
    "dist/"
  ]
}
