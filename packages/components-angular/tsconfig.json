{
  // TODO: enable once on TypeScript 5
  // "extends": "@porsche-design-system/shared/tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "paths": {
      "@porsche-design-system/components-angular": ["dist/angular-wrapper"],
      "@angular/*": ["node_modules/@angular/*"]
    },
    "types": ["node", "jest", "jest-environment-puppeteer", "jest-expect-message"]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true,
    "strictDomEventTypes": false
  }
}
