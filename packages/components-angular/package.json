{
  "name": "@porsche-design-system/angular",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,dummyassets,angular' 'serve-cdn' 'serve-dummyassets' 'ng serve'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,dummyassets,app' 'serve-cdn' 'serve-dummyassets' 'ws --spa index.html -p 4200 -d ./dist/demo-app'",
    "build": "yarn clean:build && yarn build:angular-wrapper && yarn build:subPackages",
    "build:angular-wrapper": "ng build angular-wrapper --configuration production && TARGET=./dist/angular-wrapper/esm && mkdir -p $TARGET && mv ./dist/angular-wrapper/*.d.ts ./dist/angular-wrapper/lib $TARGET/",
    "build:subPackages": "yarn build:subPackages:lib && yarn build:subPackages:typings && yarn build:subPackages:ag-grid",
    "build:subPackages:lib": "yarn rollup -c ./projects/angular-wrapper/rollup.config.js --bundleConfigAsCjs",
    "build:subPackages:typings": "yarn build:subPackages:typings:jsdom-polyfill && yarn build:subPackages:typings:partials && yarn build:subPackages:typings:testing && yarn build:subPackages:typings:styles",
    "build:subPackages:typings:jsdom-polyfill": "tsc projects/angular-wrapper/src/jsdom-polyfill/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/jsdom-polyfill --types node",
    "build:subPackages:typings:partials": "tsc projects/angular-wrapper/src/partials/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/partials --types node --skipLibCheck true",
    "build:subPackages:typings:testing": "tsc projects/angular-wrapper/src/testing/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/testing --types node",
    "build:subPackages:typings:styles": "tsc projects/angular-wrapper/src/styles/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/styles/esm --types node && tsc projects/angular-wrapper/src/styles/vanilla-extract/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/styles/vanilla-extract/esm/vanilla-extract --types node",
    "build:subPackages:ag-grid": "TARGET=./dist/angular-wrapper/ag-grid && rm -rf $TARGET && cp -r ../utilities/projects/ag-grid/dist $TARGET",
    "build-app": "ng build demo-app --configuration production && yarn build-app:injectPartials",
    "build-app:injectPartials": "tsx scripts/inject-partials.ts",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:smoke",
    "test:unit": "yarn test:unit:jest && yarn test:unit:karma",
    "test:unit:jest": "jest --colors -c tests/unit/config/jest.config.js",
    "test:unit:karma": "concurrently -k -s 'first' -n 'cdn,test' 'serve-cdn' 'ng test'",
    "test:unit:karma-ci": "concurrently -k -s 'first' -n 'cdn,test' 'serve-cdn' 'ng test --browsers=ChromeHeadlessCI --watch=false'",
    "test:e2e": "yarn build-app && playwright test --config=tests/e2e/config/playwright.config.ts",
    "test:vrt": "playwright test --config=tests/vrt/config/playwright.config.ts",
    "test:smoke": "yarn test:smoke:unit",
    "test:smoke:unit": "vitest --config tests/smoke/unit/config/vitest.config.ts",
    "clean:build": "rm -rf ./dist && rm -rf ./tmp && rm -rf ./out-tsc && rm -rf ./bazel-out && rm -rf ./.angular"
  },
  "dependencies": {
    "@angular/animations": "^19.0.5",
    "@angular/common": "^19.0.5",
    "@angular/compiler": "^19.0.5",
    "@angular/core": "^19.0.5",
    "@angular/forms": "^19.0.5",
    "@angular/platform-browser": "^19.0.5",
    "@angular/platform-browser-dynamic": "^19.0.5",
    "@angular/router": "^19.0.5",
    "@porsche-design-system/components-angular": "3.26.0",
    "angular-imask": "^7.6.1",
    "imask": "^7.6.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.6",
    "@angular/cli": "^19.0.6",
    "@angular/compiler-cli": "^19.0.5",
    "@angular/language-service": "^19.0.5",
    "@porsche-design-system/assets": "5.0.2",
    "@porsche-design-system/shared": "0.0.0",
    "@testing-library/angular": "^17.3.5",
    "@types/jasmine": "^5.1.5",
    "ag-grid-community": "33.0.4",
    "ag-grid-enterprise": "33.0.4",
    "ag-grid-angular": "33.0.4",
    "globby-legacy": "npm:globby@^11.0.4",
    "jest-preset-angular": "^14.4.2",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "local-web-server": "^5.4.0",
    "ng-packagr": "^19.0.1"
  },
  "peerDependencies": {
    "@playwright/test": "*",
    "change-case": "*",
    "concurrently": "*",
    "typescript": "*"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
