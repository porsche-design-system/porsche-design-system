{
  "name": "@porsche-design-system/angular",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,angular' 'serve-cdn' 'ng serve'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 4200 -d ./dist/components-angular'",
    "build": "yarn build:wrappers && yarn build:meta",
    "build:meta": "cp ../components/CHANGELOG.md ./dist/components-wrapper/CHANGELOG.md",
    "build:wrappers": "ng build components-wrapper --configuration production && yarn rollup -c ./projects/components-wrapper/rollup.config.js",
    "build-app": "ng build --configuration production",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt",
    "test:unit": "jest --colors -c tests/unit/config/jest.config.js --coverage",
    "test:e2e": "yarn build-app && PORT=4200 BROWSER=none jest --colors -c tests/e2e/config/jest.config.ts",
    "test:vrt": "if [ \"$CI\" != true ]; then yarn build-app; fi && PORT=4200 BROWSER=none jest --colors -c tests/vrt/config/jest.config.ts",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist && rm -rf ./tmp && rm -rf ./out-tsc && rm -rf ./bazel-out"
  },
  "dependencies": {
    "@angular/animations": "^13.2.2",
    "@angular/common": "^13.2.2",
    "@angular/compiler": "^13.2.2",
    "@angular/core": "^13.2.2",
    "@angular/forms": "^13.2.2",
    "@angular/platform-browser": "^13.2.2",
    "@angular/platform-browser-dynamic": "^13.2.2",
    "@angular/router": "^13.2.2",
    "@porsche-design-system/components-angular": "2.9.0-rc.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^13.1.0",
    "@angular-devkit/build-angular": "~13.2.3",
    "@angular/cli": "^13.2.3",
    "@angular/compiler-cli": "^13.2.2",
    "@angular/language-service": "^13.2.2",
    "@porsche-design-system/assets": "4.0.0",
    "@porsche-design-system/shared": "0.0.0",
    "@types/node": "^17.0.18",
    "concurrently": "^7.0.0",
    "jest-preset-angular": "^11.0.1",
    "local-web-server": "^5.1.1",
    "ng-packagr": "^13.2.1",
    "rollup": "^2.67.2",
    "ts-node": "^10.5.0",
    "typescript": "~4.4.4",
    "wait-on": "^6.0.1"
  }
}
