{
  "name": "@porsche-design-system/angular",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "ng": "ng",
    "start": "concurrently -k -s 'first' -n 'cdn,angular' 'serve-cdn' 'ng serve --prod'",
    "build": "ng build components-wrapper --prod && cp ../components/CHANGELOG.md ./dist/components-wrapper/CHANGELOG.md",
    "test": "yarn test:vrt && yarn test:cbt",
    "test:vrt": "concurrently -k -s 'first' -n 'server,vrt' 'yarn start' 'wait-on -t 240000 http-get://localhost:4200 && ts-node --project tests/vrt/config/tsconfig.json node_modules/.bin/jasmine --config=tests/vrt/config/jasmine.config.json'",
    "test:cbt": "concurrently -k -s 'first' -n 'server,cbt' 'yarn start' 'wait-on -t 240000 http-get://localhost:4200 && ts-node --project tests/cbt/config/tsconfig.json node_modules/.bin/jasmine --config=tests/cbt/config/jasmine.config.json'",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist && rm -rf ./tmp && rm -rf ./out-tsc && rm -rf ./bazel-out",
    "ngcc": "ngcc"
  },
  "dependencies": {
    "@angular/animations": "^10.1.0",
    "@angular/common": "^10.1.0",
    "@angular/compiler": "^10.1.0",
    "@angular/core": "^10.1.0",
    "@angular/forms": "^10.1.0",
    "@angular/platform-browser": "^10.1.0",
    "@angular/platform-browser-dynamic": "^10.1.0",
    "@angular/router": "^10.1.0",
    "@porsche-design-system/components-angular": "2.0.0-alpha.2",
    "rxjs": "^6.6.2",
    "tslib": "^2.0.1",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1001.0",
    "@angular-devkit/build-ng-packagr": "~0.1001.0",
    "@angular/cli": "^10.1.0",
    "@angular/compiler-cli": "^10.1.0",
    "@angular/language-service": "^10.1.0",
    "@porsche-design-system/assets": "2.0.0",
    "@porsche-design-system/utilities": "2.0.0",
    "@porsche-design-system/visual-regression-tester": "^3.0.0",
    "@porsche-ui/cross-browser-tester": "^1.0.2",
    "@types/jasmine": "^3.5.14",
    "@types/node": "^14.6.4",
    "concurrently": "^5.3.0",
    "jasmine": "^3.6.1",
    "jasmine-spec-reporter": "^5.0.2",
    "ng-packagr": "^10.0.4",
    "puppeteer": "~5.2.1",
    "ts-node": "^9.0.0",
    "tslint": "~6.1.3",
    "typescript": "~3.9.7",
    "wait-on": "^5.2.0"
  }
}
