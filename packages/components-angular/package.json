{
  "name": "@porsche-design-system/angular",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,dummyassets,angular' 'serve-cdn' 'serve-dummyassets' 'ng serve'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,dummyassets,app' 'serve-cdn' 'serve-dummyassets' 'ws --spa index.html -p 4200 -d ./dist/demo-app/browser'",
    "build": "yarn clean:build && yarn build:angular-wrapper && yarn build:subPackages",
    "build:angular-wrapper": "ng build angular-wrapper --configuration=production",
    "build:subPackages": "yarn build:subPackages:lib && yarn build:subPackages:global-styles && yarn build:subPackages:tailwindcss && yarn build:subPackages:typings",
    "build:subPackages:lib": "yarn rollup -c ./projects/angular-wrapper/rollup.config.js --bundleConfigAsCjs",
    "build:subPackages:tailwindcss": "TARGET=./dist/angular-wrapper/tailwindcss && rm -rf $TARGET && cp -r ../styles/projects/tailwindcss/dist $TARGET",
    "build:subPackages:global-styles": "TARGET=./dist/angular-wrapper/global-styles && rm -rf $TARGET && cp -r ../styles/projects/global-styles/dist $TARGET",
    "build:subPackages:typings": "yarn build:subPackages:typings:jsdom-polyfill && yarn build:subPackages:typings:partials && yarn build:subPackages:typings:testing && yarn build:subPackages:typings:tokens && yarn build:subPackages:typings:styles && yarn build:subPackages:typings:ag-grid",
    "build:subPackages:typings:jsdom-polyfill": "tsc projects/angular-wrapper/src/jsdom-polyfill/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/jsdom-polyfill --types node",
    "build:subPackages:typings:partials": "tsc projects/angular-wrapper/src/partials/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/partials/esm --types node --skipLibCheck true",
    "build:subPackages:typings:testing": "tsc projects/angular-wrapper/src/testing/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/testing --types node",
    "build:subPackages:typings:tokens": "tsc projects/angular-wrapper/src/tokens/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/tokens/esm --types node",
    "build:subPackages:typings:styles": "tsc projects/angular-wrapper/src/styles/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/styles/esm --types node && tsc projects/angular-wrapper/src/styles/vanilla-extract/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/styles/vanilla-extract/esm/vanilla-extract --types node",
    "build:subPackages:typings:ag-grid": "tsc projects/angular-wrapper/src/ag-grid/index.ts --declaration --emitDeclarationOnly --declarationDir dist/angular-wrapper/ag-grid/esm --types node",
    "build-app": "ng build demo-app --configuration=production && yarn build-app:injectPartials",
    "build-app:injectPartials": "tsx scripts/inject-partials.ts",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:smoke",
    "test:unit": "yarn test:unit:jest && yarn test:unit:karma",
    "test:unit:jest": "jest --colors -c tests/unit/config/jest.config.js",
    "test:unit:karma": "concurrently -k -s 'first' -n 'cdn,test' 'serve-cdn' 'ng test'",
    "test:unit:karma-ci": "concurrently -k -s 'first' -n 'cdn,test' 'serve-cdn' 'ng test --browsers=ChromeHeadlessCI --watch=false'",
    "test:e2e": "yarn build-app && playwright test --config=tests/e2e/config/playwright.config.ts",
    "test:vrt": "playwright test --config=tests/vrt/config/playwright.config.ts",
    "test:smoke": "yarn test:smoke:unit",
    "test:smoke:unit": "vitest --config tests/smoke/unit/config/vitest.config.ts",
    "clean:build": "rm -rf ./dist && rm -rf ./tmp && rm -rf ./out-tsc && rm -rf ./bazel-out && rm -rf ./.angular"
  },
  "dependencies": {
    "@angular/animations": "^20.3.4",
    "@angular/common": "^20.3.4",
    "@angular/compiler": "^20.3.4",
    "@angular/core": "^20.3.4",
    "@angular/forms": "^20.3.4",
    "@angular/platform-browser": "^20.3.4",
    "@angular/platform-browser-dynamic": "^20.3.4",
    "@angular/router": "^20.3.4",
    "@porsche-design-system/components-angular": "3.31.0",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.5",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.4",
    "@angular/language-service": "^20.3.4",
    "@porsche-design-system/assets": "5.0.2",
    "@porsche-design-system/shared": "0.0.0",
    "@testing-library/angular": "^18.1.0",
    "@types/jasmine": "^5.1.9",
    "ag-grid-angular": "34.2.0",
    "ag-grid-community": "34.2.0",
    "ag-grid-enterprise": "34.2.0",
    "globby-legacy": "npm:globby@^11.0.4",
    "jest-preset-angular": "^14.6.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "local-web-server": "^5.4.0",
    "ng-packagr": "^20.3.0",
    "postcss": "^8.5.3",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@playwright/test": "*",
    "change-case": "*",
    "concurrently": "*",
    "tailwindcss": "*",
    "postcss": "*",
    "@tailwindcss/postcss": "*"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
