{
  "name": "components-angular",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --prod",
    "build": "ng build components-wrapper && cp -r ./projects/components-wrapper/CHANGELOG.md ./dist/components-wrapper",
    "test": "yarn test:vrt && yarn test:cbt",
    "test:vrt": "concurrently -k -s \"first\" -n \"server,vrt\" \"yarn start\" \"wait-on -t 180000 http-get://localhost:4200 && ts-node --project 'tests/vrt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/vrt/config/jasmine.config.json'\"",
    "test:cbt": "concurrently -k -s \"first\" -n \"server,cbt\" \"yarn start\" \"wait-on -t 180000 http-get://localhost:4200 && ts-node --project 'tests/cbt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/cbt/config/jasmine.config.json'\"",
    "clean": "rm -rf 'node_modules' && rm -rf 'yarn-error.log' && rm -rf 'dist' && rm -rf 'tmp' && rm -rf 'out-tsc' && rm -rf 'bazel-out'"
  },
  "dependencies": {
    "@angular/animations": "^8.2.10",
    "@angular/common": "^8.2.10",
    "@angular/compiler": "^8.2.10",
    "@angular/core": "^8.2.10",
    "@angular/forms": "^8.2.10",
    "@angular/platform-browser": "^8.2.10",
    "@angular/platform-browser-dynamic": "^8.2.10",
    "@angular/router": "^8.2.10",
    "@porsche-design-system/components-angular": "1.0.1",
    "rxjs": "^6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.22",
    "@angular-devkit/build-ng-packagr": "^0.803.22",
    "@angular/cli": "^8.3.22",
    "@angular/compiler-cli": "^8.2.10",
    "@angular/language-service": "^8.2.10",
    "@porsche-design-system/scss-utils": "1.0.0",
    "@porsche-design-system/utils": "0.0.0",
    "@porsche-ui/cross-browser-tester": "^1.0.2",
    "@porsche-ui/visual-regression-tester": "^1.0.0",
    "@types/jasmine": "^3.4.4",
    "@types/node": "^13.1.6",
    "concurrently": "^5.0.2",
    "jasmine": "^3.5.0",
    "ng-packagr": "^5.7.0",
    "ts-node": "^8.6.2",
    "tsickle": "^0.38.0",
    "tslint": "^5.20.0",
    "typescript": "~3.5.3"
  }
}
