{
    "name": "@porscheui/ui-kit-js",
    "version": "1.0.0-alpha.1",
    "scope": "@porscheui",
    "description": "Porsche UI Kit – A Porsche web component library.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "es2015": "dist/esm/index.mjs",
    "es2017": "dist/esm/index.mjs",
    "types": "dist/types/components.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "files": [
        "dist/",
        "loader/",
        "src/styles/"
    ],
    "author": "Dr. Ing. h.c. F. Porsche AG",
    "contributors": [
        "Stephan Schröter <stephan.schroeter@mhp.com>",
        "Marcel Bertram <marcel.bertram@porsche.de>",
        "Anna Krohmer <anna.krohmer@udg.de>",
        "Oliver Hook <oliver.hook@mhp.com>",
        "Olivia Pala <olivia.pala@udg.de>"
    ],
    "keywords": [
        "porsche",
        "ui",
        "web-components",
        "design-system"
    ],
    "homepage": "https://ui.porsche.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
    },
    "bugs": {
        "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
    },
    "publishConfig": {
        "@porscheui:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
    },
    "scripts": {
        "build": "stencil build --docs && node doc.js",
        "start": "stencil build --watch --serve",
        "test": "stencil test --spec --e2e",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "clean": "rm -rf ./.stencil & rm -rf ./dist & rm -rf ./loader & rm -rf ./www",
        "lint": "concurrently -c \"white\" -n \"lint:scss,lint:ts\" \"yarn lint:scss\" \"yarn lint:ts\"",
        "lint:scss": "stylelint './src/**/*.scss'",
        "lint:ts": "tslint -p './tsconfig.json' -t codeFrame"
    },
    "devDependencies": {
        "@stencil/core": "^1.1.3",
        "@stencil/postcss": "^1.0.1",
        "@stencil/sass": "^1.0.1",
        "@types/autoprefixer": "^9.5.0",
        "@types/classnames": "^2.2.8",
        "@types/jest": "24.0.15",
        "@types/puppeteer": "^1.12.4",
        "autoprefixer": "^9.6.0",
        "classnames": "^2.2.6",
        "concurrently": "^4.1.1",
        "jest": "^24.8.0",
        "jest-cli": "^24.8.0",
        "puppeteer": "^1.18.1",
        "stylelint": "^10.1.0",
        "tslint": "^5.18.0",
        "typescript": "~3.5.2"
    },
    "license": "SEE LICENSE IN https://ui.porsche.com"
}
