{
  "name": "@porsche-ui/ui-kit-js",
  "version": "1.0.0-alpha.5",
  "scope": "@porsche-ui",
  "description": "Porsche UI Web Components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schr√∂ter <stephan.schroeter@mhp.com>",
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Olivia Pala <olivia.pala@udg.de>"
  ],
  "keywords": [
    "porsche",
    "ui",
    "web-components",
    "design-system"
  ],
  "homepage": "https://ui.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "publishConfig": {
    "@porsche-ui:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
  },
  "scripts": {
    "start": "stencil build --watch --serve",
    "start:vrt-server": "yarn build && http-server -p 61422 -P http://localhost:61422/www",
    "build": "stencil build --docs && node ./scripts/doc.js",
    "lint": "yarn lint:scss && yarn lint:ts",
    "lint:scss": "stylelint './src/**/*.scss'",
    "lint:ts": "tslint -p './tsconfig.json' -t codeFrame",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:cbt",
    "test:unit": "jest",
    "test:e2e": "echo 'stencil test --e2e coming soon'",
    "test:vrt": "concurrently -k -s \"first\" -n \"server,vrt\" \"yarn start:vrt-server\" \"wait-on -t 180000 http-get://localhost:61422 && ts-node --project 'tests/vrt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/vrt/config/jasmine.config.json'\"",
    "test:cbt": "concurrently -k -s \"first\" -n \"server,cbt\" \"yarn start:vrt-server\" \"wait-on -t 180000 http-get://localhost:61422 && ts-node --project 'tests/cbt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/cbt/config/jasmine.config.json'\"",
    "clean": "rm -rf ./node_modules && rm -rf ./yarn-error.log && rm -rf ./.stencil && rm -rf ./dist && rm -rf ./loader && rm -rf ./www"
  },
  "dependencies": {
    "throttle-debounce": "^2.1.0"
  },
  "devDependencies": {
    "@ionic-enterprise/angular-output-plugin": "^0.0.5",
    "@ionic-enterprise/react-output-plugin": "^0.0.9",
    "@porsche-ui/cross-browser-tester": "^1.0.0",
    "@porsche-ui/ui-kit-scss-utils": "^1.0.0-alpha.2",
    "@porsche-ui/utils": "0.0.0",
    "@porsche-ui/visual-regression-tester": "^1.0.0",
    "@stencil/core": "1.4.0",
    "@stencil/postcss": "^1.0.1",
    "@stencil/sass": "^1.0.1",
    "@types/autoprefixer": "^9.5.0",
    "@types/classnames": "^2.2.8",
    "@types/jest": "24.0.18",
    "@types/puppeteer": "^1.19.1",
    "@types/throttle-debounce": "^2.1.0",
    "autoprefixer": "^9.6.1",
    "classnames": "^2.2.6",
    "concurrently": "^4.1.1",
    "http-server": "^0.11.1",
    "jasmine": "^3.4.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "puppeteer": "1.20.0",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.10.1",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.6.3",
    "wait-on": "^3.3.0"
  },
  "license": "SEE LICENSE IN https://ui.porsche.com"
}
