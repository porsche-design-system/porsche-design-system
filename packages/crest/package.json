{
  "name": "@porsche-design-system/crest",
  "version": "0.0.0",
  "private": true,
  "scope": "@porsche-design-system",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "license": "UNLICENSED",
  "description": "Porsche Crest",
  "keywords": [
    "porsche",
    "crest"
  ],
  "homepage": "https://designsystem.porsche.com",
  "scripts": {
    "build": "yarn build:crest && yarn build:lib",
    "build:crest": "tsx scripts/build.ts",
    "build:lib": "yarn build:lib:cjs && yarn build:lib:esm",
    "build:lib:cjs": "tsc --build tsconfig.lib.cjs.json",
    "build:lib:esm": "tsc --build tsconfig.lib.esm.json",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./index.ts && rm -rf ./dist"
  },
  "devDependencies": {
    "change-case": "^4.1.2",
    "globby": "^14.0.0",
    "tsx": "^4.6.2",
    "typescript": "~5.3.2"
  },
  "files": [
    "dist/"
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
