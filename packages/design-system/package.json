{
  "name": "@porsche-ui/design-system",
  "version": "1.0.0",
  "scope": "@porsche-ui",
  "private": true,
  "description": "Porsche UI Design System",
  "scripts": {
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "test:vrt": "concurrently -k -s \"first\" -n \"server,vrt\" \"yarn start\" \"wait-on -t 180000 http-get://localhost:8080 && ts-node --project 'tests/vrt/config/tsconfig.json' node_modules/.bin/jasmine --config='tests/vrt/config/jasmine.config.json'\"",
    "clean": "rm -rf ./node_modules && rm -rf ./yarn-error.log && rm -rf ./dist"
  },
  "dependencies": {
    "@porsche-ui/ui-kit-js": "^1.0.0-alpha.1",
    "core-js": "^3.2.1",
    "js-beautify": "^1.10.2",
    "lodash": "^4.17.15",
    "prismjs": "^1.17.1",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-property-decorator": "^8.2.2",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@porsche-ui/ui-kit-scss-utils": "^1.0.0-alpha.1",
    "@porsche-ui/visual-regression-tester": "^1.0.0",
    "@types/jest": "^24.0.17",
    "@types/js-beautify": "^1.8.1",
    "@types/lodash": "^4.14.138",
    "@types/prismjs": "^1.16.0",
    "@types/puppeteer": "^1.19.1",
    "@vue/cli-plugin-babel": "^3.10.0",
    "@vue/cli-plugin-e2e-cypress": "^3.10.0",
    "@vue/cli-plugin-typescript": "^3.10.0",
    "@vue/cli-plugin-unit-jest": "^3.10.0",
    "@vue/cli-service": "^3.10.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "concurrently": "^4.1.1",
    "cypress-shadow-dom": "^1.0.0",
    "jasmine": "^3.4.0",
    "puppeteer": "^1.19.0",
    "sass": "^1.22.9",
    "sass-loader": "^8.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.5.3",
    "vmark": "^1.1.0",
    "vmark-loader": "^1.0.0",
    "vue-template-compiler": "^2.6.10"
  }
}
