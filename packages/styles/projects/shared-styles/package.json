{
  "name": "@porsche-design-system/shared-styles",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "./dist/"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "homepage": "https://designsystem.porsche.com",
  "scripts": {
    "build": "yarn build:cssVariables && yarn build:lib",
    "build:lib": "tsup ./src/index.ts --format esm,cjs --dts",
    "build:cssVariables": "tsx scripts/buildCssVariables.ts",
    "test": "yarn test:unit",
    "test:unit": "vitest --config tests/unit/config/vitest.config.ts",
    "clean:build": "rm -rf ./dist"
  },
  "dependencies": {
    "@porsche-design-system/tokens": "0.0.0"
  },
  "peerDependencies": {
    "typescript": "*",
    "tsup": "*"
  },
  "volta": {
    "extends": "../../../../package.json"
  }
}
