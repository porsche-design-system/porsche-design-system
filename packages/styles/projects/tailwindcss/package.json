{
  "name": "@porsche-design-system/tailwindcss",
  "version": "0.0.0",
  "type": "commonjs",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "style": "./dist/index.css",
  "exports": {
    ".": {
      "style": "./dist/index.css"
    }
  },
  "sideEffects": false,
  "files": [
    "./dist/"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "homepage": "https://designsystem.porsche.com",
  "scripts": {
    "build": "yarn clean:build && yarn build:package:com && yarn build:package:cn",
    "build-prod": "yarn clean:build && yarn build-prod:package:com && yarn build-prod:package:cn",
    "build:package:com": "NODE_ENV=development tsx scripts/build.ts",
    "build:package:cn": "NODE_ENV=development tsx scripts/buildCn.ts",
    "build-prod:package:com": "tsx scripts/build.ts",
    "build-prod:package:cn": "tsx scripts/buildCn.ts",
    "test": "yarn test:unit",
    "test:unit": "vitest --config tests/unit/config/vitest.config.ts",
    "clean:build": "rm -rf ./dist"
  },
  "dependencies": {
    "@porsche-design-system/tokens": "0.0.0",
    "@porsche-design-system/shared-styles": "0.0.0",
    "@porsche-design-system/font-face": "0.0.0"
  },
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0"
  },
  "peerDependencies": {
    "@biomejs/biome": "*",
    "tailwindcss": "*",
    "vitest": "*",
    "tsx": "*",
    "typescript": "*"
  },
  "volta": {
    "extends": "../../../../package.json"
  }
}
