{
  "name": "@porsche-design-system/styles-2",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "homepage": "https://designsystem.porsche.com",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "yarn clean:build && yarn build:shared-styles && yarn build:global-styles && yarn build:tailwindcss && yarn build:app",
    "build-prod": "yarn clean:build && yarn build:shared-styles && yarn build-prod:global-styles && yarn build-prod:tailwindcss && yarn build:app",
    "build:app": "vite build",
    "build:shared-styles": "yarn --cwd projects/shared-styles build",
    "build:global-styles": "yarn --cwd projects/global-styles build",
    "build:tailwindcss": "yarn --cwd projects/tailwindcss build",
    "build-prod:global-styles": "yarn --cwd projects/global-styles build-prod",
    "build-prod:tailwindcss": "yarn --cwd projects/tailwindcss build-prod",
    "test:unit": "yarn test:unit:global-styles && yarn test:unit:tailwindcss",
    "test:unit:global-styles": "yarn --cwd projects/global-styles test:unit",
    "test:unit:tailwindcss": "yarn --cwd projects/tailwindcss test:unit",
    "clean:build": "yarn clean:build:app && yarn clean:build:shared-styles && yarn clean:build:global-styles && yarn clean:build:tailwindcss",
    "clean:build:app": "rm -rf ./dist",
    "clean:build:shared-styles": "yarn --cwd projects/shared-styles clean:build",
    "clean:build:global-styles": "yarn --cwd projects/global-styles clean:build",
    "clean:build:tailwindcss": "yarn --cwd projects/tailwindcss clean:build"
  },
  "devDependencies": {
    "@porsche-design-system/shared": "0.0.0"
  },
  "peerDependencies": {
    "typescript": "*",
    "@tailwindcss/vite": "*",
    "vite": "*"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
