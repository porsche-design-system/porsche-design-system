{
  "name": "@porscheui/porsche-ui-kit-repository",
  "version": "1.0.0",
  "scope": "@porscheui",
  "private": true,
  "description": "Porsche UI Kit repository",
  "license": "SEE LICENSE IN https://ui.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "keywords": [
    "porsche",
    "ui",
    "components",
    "design-system",
    "react"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schr√∂ter <stephan.schroeter@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Marcel Bertram <marcel.bertram@porsche.de>"
  ],
  "scripts": {
    "start": "yarn --cwd ./packages/ui-kit-js build && (yarn --cwd ./packages/ui-kit-js start & yarn --cwd ./packages/design-system start)",
    "build": "yarn --cwd ./packages/ui-kit-js build && yarn --cwd ./packages/design-system build",
    "lint": "yarn lint:ui-kit-js & yarn lint:design-system",
    "lint:ui-kit-js": "yarn --cwd ./packages/ui-kit-js lint",
    "lint:design-system": "yarn --cwd ./packages/design-system lint",

    "test": "yarn build && yarn test:unit && yarn test:e2e && yarn test:vrt",
    "test:unit": "yarn test:unit:ui-kit-js & yarn test:unit:design-system",
    "test:unit:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:unit",
    "test:unit:design-system": "yarn --cwd ./packages/design-system test:unit",
    "test:e2e": "yarn test:e2e:ui-kit-js & yarn test:e2e:design-system",
    "test:e2e:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:e2e",
    "test:e2e:design-system": "yarn --cwd ./packages/design-system test:e2e --headless",
    "test:vrt": "yarn test:vrt:ui-kit-js & yarn test:vrt:design-system",
    "test:vrt:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:vrt",
    "test:vrt:design-system": "yarn --cwd ./packages/design-system test:vrt",

    "clean": "rm -rf ./node_modules & yarn --cwd ./packages/ui-kit-js clean & yarn --cwd ./packages/design-system clean",

    "vrt": "concurrently -k -s \"first\" -n \"app,vrt\" -c \"gray\" \"yarn start\" \"wait-on -t 300000 http-get://localhost:3000 && ts-node --project 'vrt/tsconfig.json' node_modules/.bin/jasmine --config='vrt/jasmine.config.json'\""
  },
  "dependencies": {},
  "devDependencies": {
    "@porscheui/visual-regression-tester": "^1.1.1",
    "@types/puppeteer": "^1.12.4",
    "jasmine": "^3.4.0",
    "puppeteer": "^1.18.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "wait-on": "^3.2.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
