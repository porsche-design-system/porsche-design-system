{
  "name": "porsche-ui-kit-repo",
  "version": "1.0.0",
  "scope": "@porscheui",
  "private": true,
  "description": "Porsche UI Kit component library and documentation",
  "license": "SEE LICENSE IN https://github.com/porscheui/porsche-ui-kit/wiki/License",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "keywords": [
    "porsche",
    "ui",
    "components",
    "design-system",
    "pattern-lab",
    "react"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schr√∂ter <stephan.schroeter@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Marcel Bertram <marcel.bertram@porsche.de>"
  ],
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-kit/issues"
  },
  "homepage": "https://ui.porsche.com",
  "scripts": {
    "start": "yarn --cwd ./packages/storefront start",
    "build": "yarn --cwd ./packages/storefront build",
    "lint": "concurrently -n \"TS,SCSS\" -c \"cyan,yellow\" \"yarn --cwd ./packages/workshop lint:ts\" \"yarn --cwd ./packages/workshop lint:scss\"",
    "vrt": "concurrently -k -n \"APP,VRT\" -c \"blue,magenta\" \"yarn --cwd ./packages/storefront start\" \"wait-on http-get://localhost:3000 && yarn --cwd ./packages/workshop vrt\"",
    "stylelint-check": "stylelint-config-prettier-check",
    "clean": "rm -rf ./packages/workshop/build && rm -rf ./packages/workshop/.tmp && rm -rf ./packages/workshop/css && rm -rf ./packages/storefront/build && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^4.1.0",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.4",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "~3.3.3",
    "wait-on": "^3.2.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
