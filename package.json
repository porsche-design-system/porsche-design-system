{
  "name": "@porscheui/monorepo",
  "version": "1.0.0",
  "scope": "@porscheui",
  "private": true,
  "description": "Porsche UI Monorepo",
  "license": "SEE LICENSE IN https://ui.porsche.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "keywords": [
    "porsche",
    "ui",
    "components",
    "design-system",
    "react"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schr√∂ter <stephan.schroeter@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Marcel Bertram <marcel.bertram@porsche.de>"
  ],
  "scripts": {
    "start": "yarn --cwd ./packages/ui-kit-js build && (yarn --cwd ./packages/ui-kit-js start & yarn --cwd ./packages/design-system start)",
    "build": "yarn --cwd ./packages/ui-kit-js build && yarn --cwd ./packages/design-system build",
    "lint": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn lint:ui-kit-js\" \"yarn lint:design-system\"",
    "lint:ui-kit-js": "yarn --cwd ./packages/ui-kit-js lint",
    "lint:design-system": "yarn --cwd ./packages/design-system lint",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt",
    "test:unit": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn test:unit:ui-kit-js\" \"yarn test:unit:design-system\"",
    "test:unit:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:unit",
    "test:unit:design-system": "yarn --cwd ./packages/design-system test:unit",
    "test:e2e": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn test:e2e:ui-kit-js\" \"yarn test:e2e:design-system\"",
    "test:e2e:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:e2e",
    "test:e2e:design-system": "yarn --cwd ./packages/ui-kit-js build && yarn --cwd ./packages/design-system test:e2e --headless",
    "test:vrt": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn test:vrt:ui-kit-js\" \"yarn test:vrt:design-system\"",
    "test:vrt:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:vrt",
    "test:vrt:design-system": "yarn --cwd ./packages/ui-kit-js build && yarn --cwd ./packages/design-system test:vrt",
    "clean": "rm -rf ./node_modules & yarn --cwd ./packages/ui-kit-js clean & yarn --cwd ./packages/design-system clean"
  },
  "workspaces": [
    "packages/*"
  ]
}
