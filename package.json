{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components-js/dist/components-wrapper",
      "packages/components-angular/dist/components-wrapper",
      "packages/components-react/dist/components-wrapper",
      "packages/utilities/projects/utilities"
    ],
    "nohoist": [
      "**/@types/jasmine",
      "**/ng-packagr",
      "**/@angular-devkit/**",
      "**/@angular/**",
      "**/@vue/**",
      "**/vue",
      "**/vue-class-component",
      "**/vue-property-decorator",
      "**/vue-router",
      "**/vuex",
      "**/vue-template-compiler"
    ]
  },
  "description": "Porsche Design System Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Olivia Pala <olivia.pala@udg.de>",
    "Christoph Stickel <net.christoph.stickel@mhp.com>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Melanie Kolar <melanie.kolar@udg.de>",
    "Bernd Hacker <bernd.hacker@mhp.com"
  ],
  "scripts": {
    "preinstall": "yarn preinstall:assets && yarn preinstall:components-angular && yarn preinstall:components-js && yarn preinstall:components-react",
    "preinstall:assets": "mkdir -p ./packages/assets/bin && touch ./packages/assets/bin/serve-cdn.js",
    "preinstall:components-angular": "mkdir -p ./packages/components-angular/dist/components-wrapper && cp ./packages/components-angular/projects/components-wrapper/package.json ./packages/components-angular/dist/components-wrapper/",
    "preinstall:components-js": "mkdir -p ./packages/components-js/dist/components-wrapper && cp ./packages/components-js/projects/components-wrapper/package.json ./packages/components-js/dist/components-wrapper/",
    "preinstall:components-react": "mkdir -p ./packages/components-react/dist/components-wrapper && cp ./packages/components-react/projects/components-wrapper/package.json ./packages/components-react/dist/components-wrapper/",
    "start": "yarn build && concurrently --kill-others-on-fail -n 'components-js,storefront' 'yarn start:components-js' 'yarn start:storefront'",
    "start:assets": "yarn --cwd ./packages/assets start",
    "start:components": "yarn --cwd ./packages/components start",
    "start:components-js": "yarn --cwd ./packages/components-js start",
    "start:components-angular": "yarn --cwd ./packages/components-angular start",
    "start:components-react": "yarn --cwd ./packages/components-react start",
    "start:storefront": "yarn --cwd ./packages/storefront start",
    "start:utilities": "yarn --cwd ./packages/utilities start",
    "build": "yarn build:core-dependencies && concurrently -n 'components-js' 'yarn build:components-js' && concurrently --kill-others-on-fail -n 'components-angular,components-react,storefront' 'yarn build:components-angular' 'yarn build:components-react' 'yarn build:storefront'",
    "build:core-dependencies": "concurrently -n 'fonts' 'yarn build:fonts' && concurrently -n 'utilities' 'yarn build:utilities' && concurrently -n 'utils' 'yarn build:utils' && concurrently --kill-others-on-fail -n 'icons,marque' 'yarn build:icons' 'yarn build:marque' && concurrently -n 'assets' 'yarn build:assets'",
    "build:assets": "yarn --cwd ./packages/assets build",
    "build:icons": "yarn --cwd ./packages/icons build",
    "build:fonts": "yarn --cwd ./packages/fonts build",
    "build:marque": "yarn --cwd ./packages/marque build",
    "build:components-js": "yarn --cwd ./packages/components build && yarn --cwd ./packages/components-js build && yarn build:assets",
    "build:components-js-prod": "yarn --cwd ./packages/components build-prod && yarn --cwd ./packages/components-js build-prod && yarn build:assets",
    "build:components-angular": "yarn --cwd ./packages/components-angular build",
    "build:components-react": "yarn --cwd ./packages/components-react build",
    "build:storefront": "yarn --cwd ./packages/storefront build",
    "build:utilities": "yarn --cwd ./packages/utilities build",
    "build:utils": "yarn --cwd ./packages/utils build",
    "lint": "concurrently --kill-others-on-fail -n 'components,storefront' 'yarn lint:components' 'yarn lint:storefront'",
    "lint:components": "yarn --cwd ./packages/components lint",
    "lint:storefront": "yarn --cwd ./packages/storefront lint",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:mocks",
    "test:unit": "concurrently --kill-others-on-fail -n 'components,storefront,utilities' 'yarn test:unit:components' 'yarn test:unit:storefront' 'yarn test:unit:utilities'",
    "test:unit:components": "yarn --cwd ./packages/components test:unit",
    "test:unit:storefront": "yarn --cwd ./packages/storefront test:unit",
    "test:unit:utilities": "yarn --cwd ./packages/utilities test:unit",
    "test:mocks": "concurrently --kill-others-on-fail -n 'components-react' 'yarn test:mocks:components-react'",
    "test:mocks:components-react": "yarn --cwd ./packages/components-react test:mocks",
    "test:e2e": "concurrently --kill-others-on-fail -n 'components,storefront' 'yarn test:e2e:components' 'yarn test:e2e:storefront'",
    "test:e2e:components": "yarn --cwd ./packages/components test:e2e",
    "test:e2e:storefront": "yarn --cwd ./packages/storefront test:e2e --headless",
    "test:vrt": "concurrently -n 'components' 'yarn test:vrt:components' && concurrently -n 'components-js' 'yarn test:vrt:components-js' && concurrently -n 'components-angular' 'yarn test:vrt:components-angular' && concurrently -n 'components-react' 'yarn test:vrt:components-react' && concurrently -n 'storefront' 'yarn test:vrt:storefront' && concurrently -n 'utilities' 'yarn test:vrt:utilities'",
    "test:vrt:components": "yarn --cwd ./packages/components test:vrt",
    "test:vrt:components-js": "yarn --cwd ./packages/components-js test:vrt",
    "test:vrt:components-angular": "yarn --cwd ./packages/components-angular test:vrt",
    "test:vrt:components-react": "yarn --cwd ./packages/components-react test:vrt",
    "test:vrt:storefront": "yarn --cwd ./packages/storefront test:vrt",
    "test:vrt:utilities": "yarn --cwd ./packages/utilities test:vrt",
    "test:cbt": "concurrently --kill-others-on-fail -n 'components,components-angular,components-react' 'yarn test:cbt:components' 'yarn test:cbt:components-angular' 'yarn test:cbt:components-react'",
    "test:cbt:components": "yarn --cwd ./packages/components test:cbt",
    "test:cbt:components-angular": "yarn --cwd ./packages/components-angular test:cbt",
    "test:cbt:components-react": "yarn --cwd ./packages/components-react test:cbt",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log && yarn clean:assets:node_modules && yarn clean:components:node_modules && yarn clean:components-angular:node_modules && yarn clean:components-js:node_modules && yarn clean:components-react:node_modules && yarn clean:fonts:node_modules && yarn clean:icons:node_modules && yarn clean:marque:node_modules && yarn clean:storefront:node_modules && yarn clean:utilities:node_modules && yarn clean:utils:node_modules",
    "clean:build": "yarn clean:assets:build && yarn clean:components:build && yarn clean:components-angular:build && yarn clean:components-js:build && yarn clean:components-react:build && yarn clean:fonts:build && yarn clean:icons:build && yarn clean:marque:build && yarn clean:storefront:build && yarn clean:utilities:build && yarn clean:utils:build",
    "clean:assets:node_modules": "yarn --cwd ./packages/assets clean:node_modules",
    "clean:assets:build": "yarn --cwd ./packages/assets clean:build",
    "clean:components:node_modules": "yarn --cwd ./packages/components clean:node_modules",
    "clean:components:build": "yarn --cwd ./packages/components clean:build",
    "clean:components-angular:node_modules": "yarn --cwd ./packages/components-angular clean:node_modules",
    "clean:components-angular:build": "yarn --cwd ./packages/components-angular clean:build",
    "clean:components-js:node_modules": "yarn --cwd ./packages/components-js clean:node_modules",
    "clean:components-js:build": "yarn --cwd ./packages/components-js clean:build",
    "clean:components-react:node_modules": "yarn --cwd ./packages/components-react clean:node_modules",
    "clean:components-react:build": "yarn --cwd ./packages/components-react clean:build",
    "clean:fonts:node_modules": "yarn --cwd ./packages/fonts clean:node_modules",
    "clean:fonts:build": "yarn --cwd ./packages/fonts clean:build",
    "clean:icons:node_modules": "yarn --cwd ./packages/icons clean:node_modules",
    "clean:icons:build": "yarn --cwd ./packages/icons clean:build",
    "clean:marque:node_modules": "yarn --cwd ./packages/marque clean:node_modules",
    "clean:marque:build": "yarn --cwd ./packages/marque clean:build",
    "clean:storefront:node_modules": "yarn --cwd ./packages/storefront clean:node_modules",
    "clean:storefront:build": "yarn --cwd ./packages/storefront clean:build",
    "clean:utilities:node_modules": "yarn --cwd ./packages/utilities clean:node_modules",
    "clean:utilities:build": "yarn --cwd ./packages/utilities clean:build",
    "clean:utils:node_modules": "yarn --cwd ./packages/utils clean:node_modules",
    "clean:utils:build": "yarn --cwd ./packages/utils clean:build"
  }
}
