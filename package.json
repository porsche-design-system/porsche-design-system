{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Porsche UI Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan SchrÃ¶ter <stephan.schroeter@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Marcel Bertram <marcel.bertram@porsche.de>"
  ],
  "scripts": {
    "start": "yarn build:ui-kit-js && (yarn --cwd ./packages/ui-kit-js start & yarn --cwd ./packages/design-system start)",
    "build": "concurrently -n \"ui-kit-js\" \"yarn build:ui-kit-js\" && concurrently --kill-others-on-fail -n \"ui-kit-angular,design-system\" \"yarn build:ui-kit-angular\" \"yarn build:design-system\"",
    "build:ui-kit-js": "yarn --cwd ./packages/ui-kit-js build",
    "build:ui-kit-angular": "yarn --cwd ./packages/ui-kit-angular build",
    "build:ui-kit-react": "yarn --cwd ./packages/ui-kit-react build",
    "build:design-system": "yarn --cwd ./packages/design-system build",
    "lint": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn lint:ui-kit-js\" \"yarn lint:design-system\"",
    "lint:ui-kit-js": "yarn --cwd ./packages/ui-kit-js lint",
    "lint:design-system": "yarn --cwd ./packages/design-system lint",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:snapshot",
    "test:unit": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system,ui-kit-react\" \"yarn test:unit:ui-kit-js\" \"yarn test:unit:design-system\"",
    "test:unit:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:unit",
    "test:unit:design-system": "yarn --cwd ./packages/design-system test:unit",
    "test:e2e": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn test:e2e:ui-kit-js\" \"yarn test:e2e:design-system\"",
    "test:e2e:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:e2e",
    "test:e2e:design-system": "yarn build:ui-kit-js && yarn --cwd ./packages/design-system test:e2e --headless",
    "test:vrt": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn test:vrt:ui-kit-js\" \"yarn test:vrt:design-system\"",
    "test:vrt:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:vrt",
    "test:vrt:design-system": "yarn build:ui-kit-js && yarn --cwd ./packages/design-system test:vrt",
    "test:snapshot": "yarn test:snapshot:ui-kit-react-test",
    "test:snapshot:ui-kit-react-test": "echo 'react snapshot test not yet setup'",
    "clean": "rm -rf ./node_modules & rm -rf ./yarn-error.log & yarn --cwd ./packages/ui-kit-js clean & yarn --cwd ./packages/ui-kit-scss-utils clean & yarn --cwd ./packages/design-system clean & yarn --cwd ./packages/ui-kit-angular clean & yarn --cwd ./packages/ui-kit-react clean & yarn --cwd ./packages/ui-kit-react-test clean"
  }
}
