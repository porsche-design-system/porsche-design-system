{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types/jasmine"
    ]
  },
  "description": "Porsche UI Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-ui-kit.git"
  },
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan SchrÃ¶ter <stephan.schroeter@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Marcel Bertram <marcel.bertram@porsche.de>"
  ],
  "scripts": {
    "start": "yarn build && concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn start:ui-kit-js\" \"yarn start:design-system\"",
    "start:ui-kit-js": "yarn --cwd ./packages/ui-kit-js start",
    "start:ui-kit-angular": "yarn --cwd ./packages/ui-kit-angular start",
    "start:ui-kit-react": "yarn --cwd ./packages/ui-kit-react start",
    "start:design-system": "yarn --cwd ./packages/design-system start",
    "build": "concurrently -n \"utils\" \"yarn build:utils\" && concurrently -n \"ui-kit-js\" \"yarn build:ui-kit-js\" && concurrently --kill-others-on-fail -n \"ui-kit-angular,ui-kit-react,design-system\" \"yarn build:ui-kit-angular\" \"yarn build:ui-kit-react\" \"yarn build:design-system\"",
    "build:ui-kit-js": "yarn --cwd ./packages/ui-kit-js build",
    "build:ui-kit-angular": "yarn --cwd ./packages/ui-kit-angular build",
    "build:ui-kit-react": "yarn --cwd ./packages/ui-kit-react build",
    "build:design-system": "yarn --cwd ./packages/design-system build",
    "build:utils": "yarn --cwd ./packages/utils build",
    "lint": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn lint:ui-kit-js\" \"yarn lint:design-system\"",
    "lint:ui-kit-js": "yarn --cwd ./packages/ui-kit-js lint",
    "lint:design-system": "yarn --cwd ./packages/design-system lint",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt && yarn test:snapshot",
    "test:unit": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn test:unit:ui-kit-js\" \"yarn test:unit:design-system\"",
    "test:unit:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:unit",
    "test:unit:design-system": "yarn --cwd ./packages/design-system test:unit",
    "test:e2e": "concurrently --kill-others-on-fail -n \"ui-kit-js,design-system\" \"yarn test:e2e:ui-kit-js\" \"yarn test:e2e:design-system\"",
    "test:e2e:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:e2e",
    "test:e2e:design-system": "yarn --cwd ./packages/design-system test:e2e --headless",
    "test:snapshot": "concurrently --kill-others-on-fail -n \"ui-kit-angular,ui-kit-react\" \"yarn test:snapshot:ui-kit-angular\" \"yarn test:snapshot:ui-kit-react\"",
    "test:snapshot:ui-kit-angular": "echo 'test:snapshot:ui-kit-angular not yet available'",
    "test:snapshot:ui-kit-react": "yarn --cwd ./packages/ui-kit-react test",
    "test:vrt": "concurrently --kill-others-on-fail -n \"ui-kit-js,ui-kit-angular,ui-kit-react,design-system\" \"yarn test:vrt:ui-kit-js\" \"yarn test:vrt:ui-kit-angular\" \"yarn test:vrt:ui-kit-react\" \"yarn test:vrt:design-system\"",
    "test:vrt:ui-kit-js": "yarn --cwd ./packages/ui-kit-js test:vrt",
    "test:vrt:ui-kit-angular": "yarn --cwd ./packages/ui-kit-angular test:vrt",
    "test:vrt:ui-kit-react": "yarn --cwd ./packages/ui-kit-react test:vrt",
    "test:vrt:design-system": "yarn --cwd ./packages/design-system test:vrt",
    "clean": "rm -rf ./node_modules && rm -rf ./yarn-error.log && yarn --cwd ./packages/ui-kit-js clean && yarn --cwd ./packages/ui-kit-scss-utils clean && yarn --cwd ./packages/design-system clean && yarn --cwd ./packages/ui-kit-angular clean && yarn --cwd ./packages/ui-kit-react clean"
  }
}
