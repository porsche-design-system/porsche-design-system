{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components-angular/dist/components-wrapper",
      "packages/components-react/projects/components-wrapper"
    ],
    "nohoist": [
      "**/@types/jasmine",
      "**/ng-packagr",
      "**/@angular-devkit/**",
      "**/@angular/**",
      "**/@vue/**",
      "**/vue",
      "**/vue-class-component",
      "**/vue-property-decorator",
      "**/vue-router",
      "**/vuex",
      "**/vue-template-compiler"
    ]
  },
  "description": "Porsche Design System Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-design-system.git"
  },
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Marcel Bertram <marcel.bertram@porsche.de>",
    "Anna Krohmer <anna.krohmer@udg.de>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Olivia Pala <olivia.pala@udg.de>",
    "Christoph Stickel <net.christoph.stickel@mhp.com>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Melanie Kolar <melanie.kolar@udg.de>"
  ],
  "scripts": {
    "preinstall": "mkdir -p './packages/components-angular/dist/components-wrapper' && cp './packages/components-angular/projects/components-wrapper/package.json' './packages/components-angular/dist/components-wrapper/package.json'",
    "start": "yarn build && concurrently --kill-others-on-fail -n \"components-js,storefront\" \"yarn start:components-js\" \"yarn start:storefront\"",
    "start:components-js": "yarn --cwd ./packages/components-js start",
    "start:components-angular": "yarn --cwd ./packages/components-angular start",
    "start:components-react": "yarn --cwd ./packages/components-react start",
    "start:storefront": "yarn --cwd ./packages/storefront start",
    "build": "concurrently -n \"utils\" \"yarn build:utils\" && concurrently --kill-others-on-fail -n \"icons,fonts,marque\" \"yarn build:icons\" \"yarn build:fonts\" \"yarn build:marque\" && concurrently -n \"components-js\" \"yarn build:components-js\" && concurrently --kill-others-on-fail -n \"components-angular,components-react,storefront\" \"yarn build:components-angular\" \"yarn build:components-react\" \"yarn build:storefront\"",
    "build:icons": "yarn --cwd ./packages/icons build",
    "build:fonts": "yarn --cwd ./packages/fonts build",
    "build:marque": "yarn --cwd ./packages/marque build",
    "build:components-js": "yarn --cwd ./packages/components-js build",
    "build:components-angular": "yarn --cwd ./packages/components-angular build",
    "build:components-react": "yarn --cwd ./packages/components-react build",
    "build:storefront": "yarn --cwd ./packages/storefront build",
    "build:utils": "yarn --cwd ./packages/utils build",
    "lint": "concurrently --kill-others-on-fail -n \"components-js,storefront\" \"yarn lint:components-js\" \"yarn lint:storefront\"",
    "lint:components-js": "yarn --cwd ./packages/components-js lint",
    "lint:storefront": "yarn --cwd ./packages/storefront lint",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt",
    "test:unit": "concurrently --kill-others-on-fail -n \"components-js,storefront\" \"yarn test:unit:components-js\" \"yarn test:unit:storefront\"",
    "test:unit:components-js": "yarn --cwd ./packages/components-js test:unit",
    "test:unit:storefront": "yarn --cwd ./packages/storefront test:unit",
    "test:mocks": "concurrently --kill-others-on-fail -n \"components-react\" \"yarn test:mocks:components-react\"",
    "test:mocks:components-react": "yarn --cwd ./packages/components-react test:mocks",
    "test:e2e": "concurrently --kill-others-on-fail -n \"components-js,storefront\" \"yarn test:e2e:components-js\" \"yarn test:e2e:storefront\"",
    "test:e2e:components-js": "yarn --cwd ./packages/components-js test:e2e",
    "test:e2e:storefront": "yarn --cwd ./packages/storefront test:e2e --headless",
    "test:vrt": "concurrently --kill-others-on-fail -n \"components-js,components-angular,components-react,storefront\" \"yarn test:vrt:components-js\" \"yarn test:vrt:components-angular\" \"yarn test:vrt:components-react\" \"yarn test:vrt:storefront\"",
    "test:vrt:components-js": "yarn --cwd ./packages/components-js test:vrt",
    "test:vrt:components-angular": "yarn --cwd ./packages/components-angular test:vrt",
    "test:vrt:components-react": "yarn --cwd ./packages/components-react test:vrt",
    "test:vrt:storefront": "yarn --cwd ./packages/storefront test:vrt",
    "test:cbt": "concurrently --kill-others-on-fail -n \"components-js,components-angular,components-react\" \"yarn test:cbt:components-js\" \"yarn test:cbt:components-angular\" \"yarn test:cbt:components-react\"",
    "test:cbt:components-js": "yarn --cwd ./packages/components-js test:cbt",
    "test:cbt:components-angular": "yarn --cwd ./packages/components-angular test:cbt",
    "test:cbt:components-react": "yarn --cwd ./packages/components-react test:cbt",
    "clean": "rm -rf ./node_modules && rm -rf ./yarn-error.log && yarn --cwd ./packages/icons clean && yarn --cwd ./packages/fonts clean && yarn --cwd ./packages/marque clean && yarn --cwd ./packages/components-js clean && yarn --cwd ./packages/scss-utils clean && yarn --cwd ./packages/storefront clean && yarn --cwd ./packages/components-angular clean && yarn --cwd ./packages/components-react clean && yarn --cwd ./packages/utils clean"
  },
  "resolutions": {
    "cypress": "^4.4.1"
  }
}
