{
  "name": "@porsche/ui-kit-core",
  "version": "0.18.3",
  "description": "Porsche UI Kit Core contains all neccessary styles for the Porsche Pattern Lab components",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "start": "npm run serve",
    "lint:scss": "sass-lint -c .sass-lint.yml -v",
    "precommit": "npm run lint:scss",
    "build:watch": "npm-watch",
    "build:all": "better-npm-run build:all",
    "build:all:dev": "better-npm-run build:all:dev",
    "build:all:prod": "better-npm-run build:all:prod",
    "postcss:dev": "better-npm-run postcss:dev",
    "postcss:prod": "better-npm-run postcss:prod",
    "authenticate-registry": "(npm whoami --registry=$npm_config_repository_url || npm login --registry=$npm_config_repository_url)",
    "publish-artifactory": "npm run authenticate-registry --repository_url=$npm_package_publishConfig__porsche_registry && npm publish",
    "postinstall": "[ -f \"./patternlab/scripts/postinstall.js\" ] && node patternlab/scripts/postinstall.js || echo",
    "gulp": "gulp -- ",
    "release": "npm install --verbose && npm run lint:scss && npm run build:all:dev && npm run build",
    "help": "gulp patternlab:help",
    "build": "gulp patternlab:build",
    "serve": "gulp patternlab:serve",
    "clean": "rm -rf ./dist rm -rf ./patternlab/public rm -rf ./node_modules",
    "vrt": "ts-node --project vrt/tsconfig.json node_modules/jasmine/bin/jasmine --config=vrt/jasmine.config.json",
    "upgrade-interactive": "npm-check --update"
  },
  "betterScripts": {
    "build:all": {
      "command": "node build-sass.js && node build-md.js"
    },
    "build:all:dev": {
      "command": "node build-sass.js && node build-md.js && better-npm-run postcss:dev"
    },
    "build:all:prod": {
      "command": "node build-sass.js && node build-md.js && better-npm-run postcss:prod",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "postcss:dev": {
      "command": "postcss dist/porsche-stylesheets.origin.css -o dist/porsche-stylesheets.css"
    },
    "postcss:prod": {
      "command": "postcss dist/porsche-stylesheets.origin.min.css -o dist/porsche-stylesheets.css",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "watch": {
    "build:all:dev": {
      "patterns": [
        "src"
      ],
      "extensions": "scss"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:porscheui/porsche-ui-kit.git"
  },
  "keywords": [
    "porsche",
    "scss",
    "Pattern Lab",
    "Atomic Web Design",
    "Node",
    "Gulp",
    "Javascript",
    "css"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Mitko Tschimev <net.mitko.tschimev@mhp.com>",
    "Stephan Schr√∂ter <stephan.schroeter@mhp.com>",
    "Oliver Hook <oliver.hook@mhp.com>",
    "Manuel Niederberger <manuel.niederberger@diconium.com>",
    "Dominik Bauer <dominik.bauer@udg.de>"
  ],
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@porsche/plugin-node-sass-dependency-collector": "^1.0.1",
    "@porsche/visual-regression-tester": "^1.0.0",
    "@types/es6-shim": "^0.31.37",
    "@types/jasmine": "^3.3.5",
    "@types/puppeteer": "^1.12.2",
    "autoprefixer": "^9.4.10",
    "better-npm-run": "^0.1.1",
    "browser-sync": "^2.26.3",
    "del": "^4.0.0",
    "exorcist": "^1.0.1",
    "fs-extra": "^7.0.1",
    "gulp": "4.0.0",
    "gulp-cached": "^1.1.1",
    "gulp-rename": "^1.4.0",
    "gulp-sass-lint": "^1.4.0",
    "gulp-svg-symbols": "^3.2.0",
    "gulp-svgmin": "^2.1.0",
    "husky": "^1.3.1",
    "jasmine": "^3.3.1",
    "jimp": "^0.6.0",
    "marked": "^0.6.1",
    "minimist": "^1.2.0",
    "node-sass": "^4.11.0",
    "node-sass-tilde-importer": "^1.0.2",
    "npm-check": "^5.9.0",
    "npm-watch": "^0.6.0",
    "patternengine-node-handlebars": "1.0.3",
    "patternlab-node": "^2.12.0",
    "plugin-node-clipboard": "^1.0.0",
    "plugin-node-data-inheritance": "git+https://github.com/Altinn/plugin-node-data-inheritance.git",
    "postcss": "^7.0.8",
    "postcss-cli": "^6.1.2",
    "puppeteer": "^1.13.0",
    "sass-lint": "^1.12.1",
    "styleguidekit-assets-default": "^3.5.2",
    "styleguidekit-mustache-default": "^3.1.0",
    "symlink-or-copy": "^1.2.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  },
  "publishConfig": {
    "@porsche:registry": "https://porscheui.jfrog.io/porscheui/api/npm/npm-local/"
  }
}
