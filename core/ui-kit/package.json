{
  "name": "@porsche/ui-kit-core",
  "version": "0.7.2",
  "description": "Porsche UI Kit Core contains all neccessary styles for the Porsche Pattern Lab components",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "start": "npm run serve",
    "lint:scss": "sass-lint -c .sass-lint.yml -v",
    "precommit": "npm run lint:scss",
    "build:watch": "npm-watch",
    "build:all": "better-npm-run build:all",
    "build:all:dev": "better-npm-run build:all:dev",
    "build:all:prod": "better-npm-run build:all:prod",
    "postcss:dev": "better-npm-run postcss:dev",
    "postcss:prod": "better-npm-run postcss:prod",
    "authenticate-registry": "(npm whoami --registry=$npm_config_repository_url || npm login --registry=$npm_config_repository_url)",
    "modify-publishConfig": "json -I -f package.json -e 'this.publishConfig[\"@porsche:registry\"]=\"'$npm_config_repository_url'\"'",
    "reset-publishConfig": "json -I -f package.json -e 'this.publishConfig[\"@porsche:registry\"]=\"'https://porschedev.jfrog.io/porschedev/api/npm/myuikit-npm/'\"'",
    "publish-artifact": "npm run authenticate-registry --repository_url=$npm_config_repository_url && npm run modify-publishConfig --repository_url=$npm_config_repository_url && npm publish; npm run reset-publishConfig",
    "publish-artifactory": "npm run publish-artifact --repository_url=https://porschedev.jfrog.io/porschedev/api/npm/myuikit-npm/",
    "publish-nexus3": "npm run publish-artifact --repository_url=https://pcckbuild.web.porsche.de/nexus/repository/npm-internal-pcck-bunt/",
    "postinstall": "[ -f \"./patternlab/scripts/postinstall.js\" ] && node patternlab/scripts/postinstall.js || echo",
    "gulp": "gulp -- ",
    "release": "npm install --verbose && npm run lint:scss && npm run build:all:dev && npm run build",
    "help": "gulp patternlab:help",
    "build": "gulp patternlab:build",
    "serve": "gulp patternlab:serve",
    "find-outdated-dependencies": "npm outdated | grep --invert-match -E '(postcss-cli)'",
    "clean": "rm -rf ./dist rm -rf ./patternlab/public rm -rf ./node_modules"
  },
  "betterScripts": {
    "build:all": {
      "command": "node build.js"
    },
    "build:all:dev": {
      "command": "node build.js && better-npm-run postcss:dev"
    },
    "build:all:prod": {
      "command": "node build.js && better-npm-run postcss:prod",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "postcss:dev": {
      "command": "postcss dist/porsche-stylesheets.origin.css --config postcss.config.json"
    },
    "postcss:prod": {
      "command": "postcss dist/porsche-stylesheets.origin.min.css --config postcss.config.prod.json",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "watch": {
    "build:all:dev": {
      "patterns": [
        "src"
      ],
      "extensions": "scss"
    }
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.org:porschedev/porsche-ui-kit.git"
  },
  "keywords": [
    "porsche",
    "scss",
    "Pattern Lab",
    "Atomic Web Design",
    "Node",
    "Gulp",
    "Javascript",
    "css"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Mitko Tschimev <net.mitko.tschimev@mhp.com>",
    "Stephan Schr√∂ter <stephan.schroeter@mhp.com>",
    "Manuel Niederberger <manuel.niederberger@diconium.com>",
    "Dominik Bauer <dominik.bauer@udg.de>"
  ],
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@porsche/plugin-node-sass-dependency-collector": "1.0.0",
    "autoprefixer": "8.3.0",
    "better-npm-run": "0.1.0",
    "browser-sync": "2.23.6",
    "exorcist": "1.0.1",
    "fs-extra": "5.0.0",
    "gulp": "4.0.0",
    "gulp-cached": "1.1.1",
    "gulp-sass-lint": "1.3.4",
    "husky": "0.14.3",
    "json": "9.0.6",
    "minimist": "1.2.0",
    "node-sass": "4.8.3",
    "node-sass-tilde-importer": "1.0.2",
    "npm-watch": "0.3.0",
    "patternengine-node-handlebars": "1.0.3",
    "patternlab-node": "2.12.0",
    "plugin-node-clipboard": "1.0.0",
    "plugin-node-data-inheritance": "git+https://github.com/Altinn/plugin-node-data-inheritance.git",
    "postcss": "6.0.21",
    "postcss-cli": "2.6.0",
    "postcss-flexboxfixer": "0.0.5",
    "postcss-gradientfixer": "0.0.6",
    "sass-lint": "1.12.1",
    "styleguidekit-assets-default": "3.5.2",
    "styleguidekit-mustache-default": "3.1.0",
    "symlink-or-copy": "1.2.0"
  },
  "publishConfig": {
    "@porsche:registry": "https://porschedev.jfrog.io/porschedev/api/npm/myuikit-npm/"
  }
}
