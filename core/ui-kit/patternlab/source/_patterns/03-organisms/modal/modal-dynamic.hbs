<div class="modal-dynamic {{ styleModifier }}">
    <div class="modal-dynamic__dialog row row--zero">
        <div class="modal-dynamic__content column column--zero column--12
         {{#each modal-dynamic_gridColumns }}
            column--{{breakpoint}}-{{columnSize}}
         {{/each}}">
            <div class="modal-dynamic__header">
                {{#if modal-dynamic_title }}
                    <h3 class="modal-dynamic__title">{{ modal-dynamic_title }}</h3>
                {{/if}}
                <span class="modal-dynamic__icon icon icon--close"></span>
            </div>
            <div class="modal-dynamic__body">
                {{#> modal-dynamic_body_content }}
                  <div class="modal-dynamic__body__text">
                    {{ modal-dynamic_body }}
                  </div>
                {{/modal-dynamic_body_content}}
            </div>
            <div class="modal-dynamic__footer">
                {{#if modal-dynamic_addFormButtonGroup }}
                    {{> organisms-form-button-group }}
                {{else}}
                    {{> deprecated-button-inline
                      button-inline_label="OK"
                      button-inline_icon="arrow-right-thin"
                      button-inline_stretch=true
                      button-inline_active=true
                    }}
                {{/if}}
            </div>
        </div>
    </div>
</div>
