<div class="-background-grey-9-1 -spacing-inner-a">
  <h2 class="-text-size-3-thin -text-color-white">Button Inline Seamless</h2>
  <div class="row">
    <div class="column column--12 -spacing-30">
      <h4 class="-text-size-5-thin -text-color-white">Inline Button Seamless</h4>
      {{> deprecated-button-inline styleModifier="-spacing-12" button-inline_label="Some button label" button-inline_icon="plus" button-inline_seamless=true}}
    </div>
    <div class="column column--12 -spacing-30">
      <h4 class="-text-size-5-thin -text-color-white">Inline Button Seamless without Label</h4>
      {{> deprecated-button-inline styleModifier="-spacing-12" button-inline_label=false button-inline_icon="plus" button-inline_seamless=true}}
    </div>
  </div>
</div>

<div class="-background-white -spacing-inner-a">
  <h2 class="-text-size-3-thin -text-color-black">Button Inline Group</h2>
  <div class="row">
    <div class="column column--3 -spacing-30">
      <h4 class="-text-size-5-thin -text-color-black">Multiple Inline Buttons next to each other</h4>
      <div class="row row--small">
        <div class="column column--small">
          {{> deprecated-button-inline styleModifier="-spacing-6" button-inline_label="Monday"}}
        </div>
        <div class="column column--small">
          {{> deprecated-button-inline styleModifier="-spacing-6" button-inline_label="Tuesday"}}
        </div>
        <div class="column column--small">
          {{> deprecated-button-inline styleModifier="-spacing-6" button-inline_label="Wednesday"}}
        </div>
        <div class="column column--small">
          {{> deprecated-button-inline styleModifier="-spacing-6" button-inline_label="Thursday"}}
        </div>
        <div class="column column--small">
          {{> deprecated-button-inline styleModifier="-spacing-6" button-inline_label="Friday"}}
        </div>
        <div class="column column--small">
          {{> deprecated-button-inline styleModifier="-spacing-6" button-inline_label="Saturday"}}
        </div>
        <div class="column column--small">
          {{> deprecated-button-inline styleModifier="-spacing-6" button-inline_label="Sunday"}}
        </div>
      </div>
    </div>
  </div>
</div>
