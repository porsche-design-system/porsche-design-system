{
  "name": "porsche-stylesheets",
  "version": "0.95.3",
  "description": "Porsche Stylesheets contains all neccessary styles for the porsche patternlab components",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "start": "npm run serve",
    "lint:scss": "sass-lint -c .sass-lint.yml -v",
    "precommit": "npm run lint:scss",
    "build:watch": "npm-watch",
    "build:all": "better-npm-run build:all",
    "build:all:dev": "better-npm-run build:all:dev",
    "build:all:prod": "better-npm-run build:all:prod",
    "postcss:dev": "better-npm-run postcss:dev",
    "postcss:prod": "better-npm-run postcss:prod",
    "publish-nexus2": "npm publish --registry https://pccbuild.web.porsche.de/nexus/content/repositories/npm-internal/",
    "publish-nexus3": "npm publish --registry https://pcckbuild.web.porsche.de/nexus/repository/npm-internal-pcck-bunt/",
    "postinstall": "[ -d \"./patternlab\" ] && node patternlab/scripts/postinstall.js || echo",
    "gulp": "gulp -- ",
    "release": "npm i && npm run lint:scss && npm run build:all:dev && npm run build",
    "help": "gulp patternlab:help",
    "build": "gulp patternlab:build",
    "serve": "gulp patternlab:serve",
    "find-outdated-dependencies": "npm outdated | grep --invert-match -E '(postcss-cli)'"
  },
  "betterScripts": {
    "build:all": {
      "command": "node build.js"
    },
    "build:all:dev": {
      "command": "node build.js && better-npm-run postcss:dev"
    },
    "build:all:prod": {
      "command": "node build.js && better-npm-run postcss:prod",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "postcss:dev": {
      "command": "postcss dist/porsche-stylesheets.origin.css --config postcss.config.json"
    },
    "postcss:prod": {
      "command": "postcss dist/porsche-stylesheets.origin.min.css --config postcss.config.prod.json",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "watch": {
    "build:all:dev": {
      "patterns": [
        "src"
      ],
      "extensions": "scss"
    }
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.web.porsche.biz:2222/pcccom/porsche-stylesheets.git"
  },
  "keywords": [
    "porsche",
    "scss",
    "Pattern Lab",
    "Atomic Web Design",
    "Node",
    "Gulp",
    "Javascript",
    "css"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Mitko Tschimev <net.mitko.tschimev@mhp.com>",
    "Stephan Schr√∂ter <stephan.schroeter@mhp.com>",
    "Fabian Pecher <fabian.pecher@udg.de>",
    "Manuel Niederberger <manuel.niederberger@diconium.com>",
    "Dominik Bauer <dominik.bauer@udg.de>"
  ],
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "7.2.2",
    "better-npm-run": "0.1.0",
    "browser-sync": "2.18.13",
    "exorcist": "1.0.0",
    "fs-extra": "4.0.3",
    "gulp": "4.0.0-alpha.2",
    "gulp-cached": "1.1.1",
    "gulp-sass-lint": "1.3.4",
    "husky": "0.14.3",
    "minimist": "1.2.0",
    "node-sass": "4.7.2",
    "npm-watch": "0.3.0",
    "patternengine-node-handlebars": "1.0.3",
    "patternlab-node": "2.12.0",
    "plugin-node-clipboard": "1.0.0",
    "plugin-node-data-inheritance": "1.0.0-alpha",
    "plugin-node-sass-dependency-collector": "0.0.3",
    "postcss": "6.0.14",
    "postcss-cli": "2.6.0",
    "postcss-flexboxfixer": "0.0.5",
    "postcss-gradientfixer": "0.0.6",
    "postcss-unprefix": "2.1.1",
    "sass-lint": "1.12.1",
    "styleguidekit-assets-default-ps": "3.5.2",
    "styleguidekit-mustache-default": "3.1.0"
  }
}
