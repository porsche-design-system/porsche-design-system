#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components-js" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]] ||
  [[ "--storefront:1/3" == "${1}" ]] ||
  [[ "--storefront:2/3" == "${1}" ]] ||
  [[ "--storefront:3/3" == "${1}" ]];
then
  if [ "$CI" != true ]; then
    yarn test:a11y:${1:2:3}
  else
    # HOME=/root fixes Running Nightly as root in a regular user's session is not supported. ($HOME is /github/home which is owned by uid 1001.)
    # https://github.com/microsoft/playwright/issues/6500
    HOME=/root yarn test:a11y:${1:2:3}
  fi
fi
