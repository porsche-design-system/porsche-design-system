#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--assets" == "${1}" ]] ||
  [[ "--crest" == "${1}" ]] ||
  [[ "--icons" == "${1}" ]] ||
  [[ "--fallbacks" == "${1}" ]] ||
  [[ "--fonts" == "${1}" ]] ||
  [[ "--marque" == "${1}" ]] ||
  [[ "--meta-icons" == "${1}" ]] ||
  [[ "--components-angular" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--components-vue" == "${1}" ]] ||
  [[ "--shared" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]] ||
  [[ "--utilities" == "${1}" ]]
then
  yarn build:${1:2}
elif
  [[ "--core-dependencies" == "${1}" ]] ||
  [[ "--components" == "${1}" ]] ||
  [[ "--components-js" == "${1}" ]]
then
  yarn build:${1:2}-prod
else
  yarn build-prod
fi
