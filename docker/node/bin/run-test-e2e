#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components-angular" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--components-vue" == "${1}" ]] ||
  [[ "--crawler" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]]
then
  PUPPETEER_EXECUTABLE_PATH=/ms-playwright/chromium-1055/chrome-linux/chrome yarn test:e2e:${1:2} --ci
fi
