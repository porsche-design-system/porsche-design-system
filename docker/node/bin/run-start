#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--assets" == "${1}" ]] ||
  [[ "--components" == "${1}" ]] ||
  [[ "--components-js" == "${1}" ]] ||
  [[ "--components-angular" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]] ||
  [[ "--utilities" == "${1}" ]]
then
  yarn start:${1:2}
else
  yarn start
fi
