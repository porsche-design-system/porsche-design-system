#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components" == "${1}" ]] ||
  [[ "--components-js" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--partials" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]] ||
  [[ "--utilities" == "${1}" ]]
then
  yarn test:unit:${1:2}
else
  yarn test:unit
fi
