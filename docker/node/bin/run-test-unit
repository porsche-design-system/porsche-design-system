#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components" == "${1}" ]] ||
  [[ "--components-js" == "${1}" ]] ||
  [[ "--components-js:components-manager-core" == "${1}" ]] ||
  [[ "--components-js:components-wrapper" == "${1}" ]] ||
  [[ "--components-js:partials" == "${1}" ]] ||
  [[ "--components-angular" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--shared" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]] ||
  [[ "--utilities" == "${1}" ]]
then
  yarn test:unit:${1:2}
else
  yarn test:unit
fi
