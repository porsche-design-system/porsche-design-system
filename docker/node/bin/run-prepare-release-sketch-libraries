#!/usr/bin/env bash

set -o errexit
set -o pipefail

if [[ -z "${1}" ]]; then
  echo "Please provide a target version, e.g. './docker.sh run-prepare-release-sketch-libraries 1.2.3'"
  exit 1
fi

pushd "./sketch"
  sed -i -e "s/PORSCHE_DESIGN_SYSTEM_SKETCH_LIBRARIES_VERSION=[0-9]\.[0-9]\.[0-9]/PORSCHE_DESIGN_SYSTEM_SKETCH_LIBRARIES_VERSION=${1}/" "./package.env"
  sed -i -e "s/### \[Unreleased\]/### \[Unreleased\]\n\n### \[${1}\] - $(date +'%F')/" "./CHANGELOG.md"
popd
