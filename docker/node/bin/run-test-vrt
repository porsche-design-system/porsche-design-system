#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components-angular" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--components-react/nextjs" == "${1}" ]] ||
  [[ "--components-react/remix" == "${1}" ]] ||
  [[ "--components-vue" == "${1}" ]] ||
  [[ "--fallbacks" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]] ||
  [[ "--utilities-deprecated" == "${1}" ]]
then
  PUPPETEER_EXECUTABLE_PATH=/ms-playwright/chromium-1028/chrome-linux/chrome yarn test:vrt:${1:2} --ci
fi
