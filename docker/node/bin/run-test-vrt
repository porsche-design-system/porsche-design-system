#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components-js" == "${1}" ]] ||
  [[ "--components-angular" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--components-react/nextjs" == "${1}" ]] ||
  [[ "--fallbacks" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]] ||
  [[ "--utilities-deprecated" == "${1}" ]]
then
  yarn test:vrt:${1:2} --ci
fi
