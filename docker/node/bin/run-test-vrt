#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components-react/nextjs" == "${1}" ]] ||
  [[ "--components-react/remix" == "${1}" ]]
  [[ "--assets:fallbacks" == "${1}" ]] ||
  [[ "--components-angular" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--components-vue" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]];
then
  yarn test:vrt:${1:2}
fi
