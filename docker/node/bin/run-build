#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--icons" == "${1}" ]] ||
  [[ "--fonts" == "${1}" ]] ||
  [[ "--marque" == "${1}" ]] ||
  [[ "--components-js" == "${1}" ]] ||
  [[ "--components-angular" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]] ||
  [[ "--utilities" == "${1}" ]] ||
  [[ "--utils" == "${1}" ]]
then
  yarn build:${1:2}
else
  yarn build
fi
