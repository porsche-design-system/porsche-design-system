#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--web-component-manager" == "${1}" ]] ||
  [[ "--core-dependencies" == "${1}" ]] ||
  [[ "--assets" == "${1}" ]] ||
  [[ "--icons" == "${1}" ]] ||
  [[ "--fonts" == "${1}" ]] ||
  [[ "--marque" == "${1}" ]] ||
  [[ "--meta-icons" == "${1}" ]] ||
  [[ "--components" == "${1}" ]] ||
  [[ "--components-prod" == "${1}" ]] ||
  [[ "--components-js" == "${1}" ]] ||
  [[ "--components-js-prod" == "${1}" ]] ||
  [[ "--components-angular" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]] ||
  [[ "--partials" == "${1}" ]] ||
  [[ "--shared" == "${1}" ]] ||
  [[ "--storefront" == "${1}" ]] ||
  [[ "--utilities" == "${1}" ]]
then
  yarn build:${1:2}
else
  yarn build
fi
