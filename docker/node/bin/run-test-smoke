#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components-js" == "${1}" ]] ||
  [[ "--components-react" == "${1}" ]]
then
  PUPPETEER_EXECUTABLE_PATH=/ms-playwright/chromium-1028/chrome-linux/chrome yarn test:smoke:${1:2} --ci
else
  PUPPETEER_EXECUTABLE_PATH=/ms-playwright/chromium-1028/chrome-linux/chrome yarn test:smoke --ci
fi
