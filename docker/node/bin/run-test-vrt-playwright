#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components-js" == "${1}" ]] ||
  [[ "--components-js:safari" == "${1}" ]] ||
  [[ "--components-js:chrome:common" == "${1}" ]] ||
  [[ "--components-js:chrome:common:1/2" == "${1}" ]] ||
  [[ "--components-js:chrome:common:2/2" == "${1}" ]] ||
  [[ "--components-js:chrome:custom" == "${1}" ]] ||
  [[ "--components-js:chrome:states" == "${1}" ]];
then
  yarn test:vrt:playwright:${1:2}
fi
