#!/usr/bin/env bash

set -o errexit
set -o pipefail

if
  [[ "--components-js" == "${1}" ]] ||
  [[ "--components-js:chrome:1/4" == "${1}" ]] ||
  [[ "--components-js:chrome:2/4" == "${1}" ]] ||
  [[ "--components-js:chrome:3/4" == "${1}" ]] ||
  [[ "--components-js:chrome:4/4" == "${1}" ]] ||
  [[ "--components-js:safari" == "${1}" ]];
then
  yarn test:vrt:playwright:${1:2}
fi
